<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="9.0">
        <ProgressBar
            android:id="@id/progress_bar"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_centerInParent="true" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:id="@id/no_item_msg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_items_found"
            android:layout_centerInParent="true" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/lin_scheme_details"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="0.0dip">
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/rounded_corner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginRight="5.0dip">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingTop="8.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2.0">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="15.0sp"
                                android:typeface="sans"
                                android:textStyle="bold"
                                android:textColor="@color/very_dark_green"
                                android:id="@id/pack_name"
                                android:paddingLeft="10.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/scheme_desc"
                                android:layout_weight="1.32"
                                android:fontFamily="@font/sf_pro_display_bold" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="15.0sp"
                                android:typeface="sans"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:id="@id/dotted1"
                                android:paddingRight="3.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/colon"
                                android:fontFamily="@font/sf_pro_display_bold" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="15.0sp"
                                android:typeface="sans"
                                android:textColor="@color/black"
                                android:id="@id/pack_name_value"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_weight="0.68"
                                android:fontFamily="@font/sf_pro_display_regular" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingTop="8.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2.0">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="15.0sp"
                                android:typeface="sans"
                                android:textStyle="bold"
                                android:textColor="@color/very_dark_green"
                                android:id="@id/valid_from"
                                android:paddingLeft="10.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/valid_from"
                                android:layout_weight="1.32"
                                android:fontFamily="@font/sf_pro_display_bold" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="15.0sp"
                                android:typeface="sans"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical"
                                android:id="@id/dotted2"
                                android:paddingRight="3.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/colon"
                                android:fontFamily="@font/sf_pro_display_bold" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="15.0sp"
                                android:typeface="sans"
                                android:textColor="@color/black"
                                android:id="@id/valid_from_value"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_weight="0.68"
                                android:fontFamily="@font/sf_pro_display_regular" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingTop="8.0dip"
                            android:paddingBottom="8.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2.0">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="15.0sp"
                                android:typeface="sans"
                                android:textStyle="bold"
                                android:textColor="@color/very_dark_green"
                                android:id="@id/valid_to"
                                android:paddingLeft="10.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/valid_to"
                                android:layout_weight="1.32"
                                android:fontFamily="@font/sf_pro_display_bold" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="15.0sp"
                                android:typeface="sans"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical"
                                android:id="@id/dotted3"
                                android:paddingRight="3.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/colon"
                                android:fontFamily="@font/sf_pro_display_bold" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="15.0sp"
                                android:typeface="sans"
                                android:textColor="@color/black"
                                android:id="@id/valid_to_value"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_weight="0.68"
                                android:fontFamily="@font/sf_pro_display_regular" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="bottom|center|right"
                    android:orientation="vertical"
                    android:background="@drawable/dotted_frame_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dip"
                    android:layout_marginBottom="10.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="16.0sp"
                        android:textColor="@color/light_red"
                        android:gravity="center"
                        android:id="@id/txt_days_left"
                        android:paddingTop="3.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/sf_pro_display_regular" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textColor="@color/light_red"
                        android:gravity="center"
                        android:id="@id/days_label"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:paddingBottom="3.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/days_left"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/rounded_top_corner"
                android:padding="0.0dip"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="5.0dip"
                android:weightSum="10.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="15.0sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:layout_weight="2.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
                <View
                    android:background="@color/very_dark_green"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="15.0sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:layout_weight="2.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
                <View
                    android:background="@color/very_dark_green"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="15.0sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/every"
                    android:layout_weight="2.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
                <View
                    android:background="@color/very_dark_green"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="15.0sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/disc"
                    android:layout_weight="2.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
                <View
                    android:background="@color/very_dark_green"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="15.0sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/free"
                    android:layout_weight="2.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/offers_list_lyt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@id/empty_offers"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data_found_msg"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="12.0sp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:gravity="right"
                android:id="@id/item_scroll_tag"
                android:background="#ff8a8a8a"
                android:paddingRight="15.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/scroll_it_to_view_more"
                android:fontFamily="@font/sf_pro_display_bold" />
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/offer_product_list_lyt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/offer_product_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@id/empty_products"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data_found_msg"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <include
        android:orientation="horizontal"
        android:id="@id/cart_snackbar"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        layout="@layout/cart_snack_bar" />
</LinearLayout>