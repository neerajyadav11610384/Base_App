<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_border_try_again"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:gravity="center"
            android:background="@drawable/background_border_red"
            android:padding="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip">
            <ImageView
                android:id="@id/img_alert"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:src="@drawable/warning" />
            <TextView
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/ram_message_title"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="Device NOT Compatible"
                android:layout_toRightOf="@id/img_alert"
                android:textAlignment="center" />
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10">
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/very_dark_green"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:text="Total RAM" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/very_dark_green"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:layout_width="20.0dip"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textAlignment="center" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/very_dark_green"
                    android:layout_gravity="center"
                    android:id="@id/total_ram_message_title"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:text="Total RAM"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:padding="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10">
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:text="Recommended RAM" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:layout_width="20.0dip"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textAlignment="center" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@id/thresold_ram_message"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:text="Recommended"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:padding="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10">
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:text="Available RAM" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:layout_width="20.0dip"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textAlignment="center" />
                <TextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:id="@id/available_ram_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:text="Available "
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="12.0sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@id/thresold_ram_message_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="@dimen/dimen_5"
            android:text="SalesEdge may not work properly.\nPlease close/uninstall unused Apps."
            android:textAlignment="center" />
        <TextView
            android:textSize="12.0sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@id/tv_min_ram_message"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="@dimen/dimen_5"
            android:text=""
            android:textAlignment="center" />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/img"
            android:visibility="gone"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:src="@mipmap/ic_launcher"
            app:tint="@color/black" />
        <TextView
            android:textSize="@dimen/dimen_17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@id/thresold_ram_exit"
            android:background="@drawable/try_agin_border"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="5.0dip"
            android:text="Exit"
            android:textAllCaps="true"
            android:paddingStart="@dimen/dimen_20"
            android:paddingEnd="@dimen/dimen_20" />
        <TextView
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/thresold_ram_ok"
            android:background="@drawable/try_agin_border"
            android:paddingTop="@dimen/dimen_4"
            android:paddingBottom="@dimen/dimen_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginBottom="5.0dip"
            android:text="OK"
            android:textAllCaps="true"
            android:paddingStart="@dimen/dimen_4"
            android:paddingEnd="@dimen/dimen_4" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>