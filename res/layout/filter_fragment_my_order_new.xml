                                android:textSize="@dimen/dimen_16sp"
                                android:textColor="@color/color_1c1839_1"
                                android:id="@id/textViewLastOrder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/last_month"
