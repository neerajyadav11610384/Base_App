<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:id="@id/rlyt_barcodes"
    android:padding="5.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:id="@id/txt_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:text="123"
        android:fontFamily="@font/sf_pro_display_medium"
        android:layout_marginStart="10.0dip"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:id="@id/lyt_temp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
        <TextView
            android:textSize="@dimen/dimen_14"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@id/txt_temp_value"
            android:background="@drawable/transperent_border_editbox"
            android:padding="5.0dip"
            android:paddingLeft="@dimen/dimen_8"
            android:paddingTop="@dimen/dimen_2"
            android:paddingRight="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_2"
            android:layout_width="100.0dip"
            android:layout_height="@dimen/dimen_35"
            android:layout_marginRight="20.0dip"
            android:text="Temp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textAlignment="center" />
        <ImageView
            android:layout_gravity="center"
            android:id="@id/img_color_code"
            android:background="@drawable/icd_circle_red"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginRight="5.0dip" />
    </LinearLayout>
</RelativeLayout>