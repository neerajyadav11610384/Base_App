<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8"
    android:layout_marginStart="@dimen/dimen_8"
    android:layout_marginEnd="@dimen/dimen_8"
    app:cardCornerRadius="@dimen/dimen_5"
    app:cardElevation="@dimen/dimen_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/very_dark_green"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip">
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_10" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_7"
            android:weightSum="2.0"
            android:layout_marginStart="@dimen/dimen_5"
            android:layout_marginEnd="@dimen/dimen_5">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.45">
                <TextView
                    android:textSize="@dimen/dimen_11sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:fontFamily="@font/roboto_medium" />
                <TextView
                    android:textSize="@dimen/dimen_11sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Designation"
                    android:fontFamily="@font/roboto_medium" />
                <TextView
                    android:textSize="@dimen/dimen_11sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Emp Code"
                    android:fontFamily="@font/roboto_medium" />
                <TextView
                    android:textSize="@dimen/dimen_11sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:text="Store Visited"
                    android:fontFamily="@font/roboto_medium" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_7"
                android:layout_weight="1.55"
                android:layout_marginStart="3.0dip">
                <TextView
                    android:textSize="@dimen/dimen_11sp"
                    android:textColor="@color/black"
                    android:id="@id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="@dimen/dimen_3" />
                <TextView
                    android:textSize="@dimen/dimen_11sp"
                    android:textColor="@color/black"
                    android:id="@id/designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="@dimen/dimen_3" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:weightSum="2.0"
                    android:layout_marginStart="@dimen/dimen_3">
                    <TextView
                        android:textSize="@dimen/dimen_11sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:id="@id/emp_code"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.15"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginEnd="@dimen/dimen_3" />
                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2.0"
                            android:layout_centerVertical="true">
                            <RelativeLayout
                                android:orientation="horizontal"
                                android:id="@id/in_layout"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:layout_marginEnd="5.0dip">
                                <ImageView
                                    android:id="@id/in_img_clock"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/clock_icon"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/dimen_5" />
                                <TextView
                                    android:textSize="@dimen/dimen_10sp"
                                    android:textColor="@color/black"
                                    android:id="@id/in_time_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="In Time "
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_toEndOf="@id/in_img_clock" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8">
                                <TextView
                                    android:textSize="@dimen/dimen_10sp"
                                    android:textColor="@color/white"
                                    android:gravity="end"
                                    android:layout_gravity="end"
                                    android:id="@id/in_time"
                                    android:background="@drawable/visitor_time_background_corner_blue"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingStart="@dimen/dimen_5"
                                    android:paddingEnd="@dimen/dimen_5" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:weightSum="2.0"
                    android:layout_marginStart="@dimen/dimen_3">
                    <TextView
                        android:textSize="@dimen/dimen_11sp"
                        android:textColor="@color/black"
                        android:id="@id/store_visited"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.15"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginEnd="@dimen/dimen_3" />
                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2.0"
                            android:layout_centerVertical="true">
                            <RelativeLayout
                                android:orientation="horizontal"
                                android:id="@id/out_layout"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:layout_marginEnd="5.0dip">
                                <ImageView
                                    android:id="@id/out_img_clock"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/clock_icon"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/dimen_5" />
                                <TextView
                                    android:textSize="@dimen/dimen_10sp"
                                    android:textColor="@color/black"
                                    android:id="@id/out_time_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Out Time "
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_toEndOf="@id/out_img_clock" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8">
                                <TextView
                                    android:textSize="@dimen/dimen_10sp"
                                    android:textColor="@color/white"
                                    android:gravity="end|center"
                                    android:layout_gravity="end|center"
                                    android:id="@id/out_time"
                                    android:background="@drawable/visitor_time_background_corner_blue"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/roboto_medium"
                                    android:paddingStart="@dimen/dimen_5"
                                    android:paddingEnd="@dimen/dimen_5" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>