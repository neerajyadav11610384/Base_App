<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/points_lyt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="0.0dip"
                android:elevation="0.0dip"
                app:cardCornerRadius="0.0dip">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/ic_ushop_bg"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="40.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_feb816"
                        android:layout_gravity="center"
                        android:id="@id/txt_retailer_bal"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="0.0dip"
                        android:text="0"
                        android:drawablePadding="@dimen/dimen_4"
                        android:drawableStart="@drawable/ic_ushop_logo_feb816"
                        android:fontFamily="@font/unipay_regular" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="16.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@id/txt_retailer_label"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30.0dip"
                        android:text="@string/unipay_balance"
                        android:fontFamily="@font/sf_pro_display_bold" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textStyle="normal"
                        android:textColor="@color/color_fff06b"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/unipay_conversion"
                        android:fontFamily="@font/sf_pro_display_bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginBottom="5.0dip"
                android:elevation="10.0dip"
                app:cardCornerRadius="10.0dip">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="14.0sp"
                        android:textColor="@color/green"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30.0dip"
                        android:text="@string/unipay_conversion"
                        android:layout_weight="0.5" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <Button
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@id/btn_redeem1"
            android:background="@drawable/mosambee_button_curved_border"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="10.0dip"
            android:text="@string/redeem" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginRight="8.0dip"
        android:layout_marginBottom="0.0dip"
        android:elevation="10.0dip"
        app:cardCornerRadius="10.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/lyt_points_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_gradient_ushop_points_avail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:weightSum="6.0"
                android:layout_marginStart="@dimen/dimen_4"
                android:layout_marginEnd="@dimen/dimen_4">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:layout_weight="3.5"
                    android:layout_marginStart="@dimen/dimen_16">
                    <ImageView
                        android:id="@id/img_lte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lifetimeearning" />
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_lte"
                        android:layout_marginStart="@dimen/dimen_16">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="24.0sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_3162BF"
                            android:id="@id/txt_lte_points"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0.0dip"
                            android:text="0"
                            android:drawablePadding="@dimen/dimen_4"
                            android:drawableStart="@drawable/ushop_icon_blue"
                            android:fontFamily="@font/unipay_regular" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_1C1839"
                            android:id="@id/txt_top_left_label"
                            android:visibility="visible"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4"
                            android:text="Lifetime Earning"
                            android:fontFamily="@font/sf_pro_display_bold" />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:background="@color/white"
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/dimen_16" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:layout_weight="2.5"
                    android:layout_marginEnd="@dimen/dimen_16">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="24.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_3162BF"
                        android:id="@id/txt_point_availed"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="0.0dip"
                        android:text="0"
                        android:drawablePadding="@dimen/dimen_4"
                        android:drawableStart="@drawable/ushop_icon_blue"
                        android:fontFamily="@font/unipay_regular" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="16.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_1C1839"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:text="Point Availed"
                        android:fontFamily="@font/sf_pro_display_bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_gradient_ushop_points_expiry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_marginBottom="@dimen/dimen_4"
                android:weightSum="6.0"
                android:layout_marginStart="@dimen/dimen_4"
                android:layout_marginEnd="@dimen/dimen_4">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:layout_weight="3.5"
                    android:layout_marginStart="@dimen/dimen_16">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="24.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_FF686B"
                        android:id="@id/txt_exp_soon_points"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="0.0dip"
                        android:text="0"
                        android:drawablePadding="@dimen/dimen_4"
                        android:drawableStart="@drawable/ushop_icon_red"
                        android:fontFamily="@font/unipay_regular" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="16.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_FF686B"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:text="Expiring Soon!"
                        android:fontFamily="@font/sf_pro_display_bold" />
                </LinearLayout>
                <View
                    android:background="@color/white"
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/dimen_16" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:layout_weight="2.5"
                    android:layout_marginEnd="@dimen/dimen_16">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="24.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_8c8c8c"
                        android:id="@id/txt_exp_points"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="0.0dip"
                        android:text="0"
                        android:drawablePadding="@dimen/dimen_4"
                        android:drawableStart="@drawable/ushop_icon_gray"
                        android:fontFamily="@font/unipay_regular" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="16.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_8c8c8c"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:text="Expired"
                        android:fontFamily="@font/sf_pro_display_bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16"
            android:text="For RS level transaction details check Shikhar app."
            android:layout_centerInParent="true" />
    </RelativeLayout>
</LinearLayout>