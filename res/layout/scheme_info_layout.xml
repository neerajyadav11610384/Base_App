<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_4"
    android:layout_marginBottom="@dimen/dimen_4"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/item_scheme_lyt"
        android:background="@drawable/scheme_default_rounded_corner"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/scheme_img"
            android:paddingTop="@dimen/dimen_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/color_42526e"
            android:layout_gravity="center"
            android:id="@id/scheme_detail"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_weight="1.0"
            android:lineSpacingExtra="@dimen/dimen_2"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginStart="@dimen/dimen_6" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/color_2392ff"
            android:layout_gravity="center"
            android:id="@id/scheme_apply"
            android:paddingLeft="@dimen/dimen_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:textAllCaps="true"
            android:fontFamily="@font/sf_pro_display_medium" />
    </LinearLayout>
</LinearLayout>