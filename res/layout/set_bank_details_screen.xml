<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@id/bank_details_bottom_sheet"
    android:background="#99000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    app:layout_behavior="@string/bottom_sheet_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="400.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="400.0dip">
                <LinearLayout
                    android:gravity="center"
                    android:id="@id/ll_outlet_validation_title"
                    android:background="#ff2392ff"
                    android:padding="@dimen/dimen_4"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginBottom="@dimen/dimen_16">
                    <TextView
                        android:textSize="@dimen/dimen_20sp"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:id="@id/tv_bank_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update bank details"
                        android:layout_weight="1.0" />
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@id/img_close_bd"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:src="@drawable/ic_close_white" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/lyt_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_16"
                    android:layout_below="@id/toolbar">
                    <TextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter IFSC Code" />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray_inactive"
                        android:gravity="center_vertical"
                        android:id="@id/edt_ifsc_code"
                        android:background="@drawable/blue_corner_white_bg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:minHeight="@dimen/dimen_42"
                        android:hint="IFSC Code"
                        android:maxLines="1"
                        android:maxLength="11"
                        android:digits="@string/allowed_only_alphanumaric"
                        android:inputType="textCapCharacters"
                        android:imeOptions="flagForceAscii"
                        android:paddingStart="@dimen/dimen_8"
                        android:paddingEnd="@dimen/dimen_8" />
                    <TextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:text="Enter account number" />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/gray_inactive"
                        android:gravity="center_vertical"
                        android:id="@id/edt_account_number"
                        android:background="@drawable/blue_corner_white_bg"
                        android:padding="@dimen/dimen_8"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:minHeight="@dimen/dimen_42"
                        android:hint="Account number"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:digits="@string/allowed_only_numbers"
                        android:inputType="number"
                        android:imeOptions="flagForceAscii"
                        android:paddingStart="@dimen/dimen_8"
                        android:paddingEnd="@dimen/dimen_8" />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_15sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@id/btn_verify_update"
                    android:background="@drawable/bg_button_2392ff"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:layout_margin="@dimen/dimen_16"
                    android:text="@string/verify_update_bank_details"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>