<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_survey"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textStyle="bold"
        android:id="@id/tv_ds_header"
        android:padding="14.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dependent Survey" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="normal"
            android:textColor="@color/color_42526e"
            android:id="@id/tv_ds_survey_name"
            android:padding="14.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Survey Name"
            android:layout_weight="1.0" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/green_tick_iv"
            android:visibility="visible"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_margin="@dimen/dimen_16"
            android:src="@drawable/ic_check_green" />
    </LinearLayout>
    <View
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="8.0dip" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_children_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>