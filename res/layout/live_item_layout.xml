<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5.0dip"
    android:layout_marginTop="8.0dip"
    android:layout_marginRight="5.0dip"
    android:layout_marginBottom="5.0dip"
    app:cardCornerRadius="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/item_lyt"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.android.volley.toolbox.NetworkImageView
            android:layout_gravity="center"
            android:id="@id/img_prodcut_thumb"
            android:layout_width="60.0dip"
            android:layout_height="90.0dip" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:weightSum="3.0"
                android:layout_weight="1.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="14.0sp"
                    android:textColor="@color/very_dark_gray"
                    android:ellipsize="end"
                    android:layout_gravity="top"
                    android:id="@id/item_name"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_weight="2.0"
                    android:fontFamily="@font/sf_pro_display_regular" />
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_gravity="center"
                    android:id="@id/img_item_status"
                    android:visibility="visible"
                    android:layout_width="0.0dip"
                    android:layout_height="24.0dip"
                    android:layout_weight="1.0"
                    app:srcCompat="@drawable/ico_selected" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="14.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:id="@id/item_mrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_bold" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_mrp"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="14.0sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:id="@id/item_purchase_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_bold" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_tur"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="14.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:id="@id/item_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_bold" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quantity_label"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>