<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/backgroung_white_border"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:id="@id/tv_label"
        android:background="@drawable/ic_tag_blue"
        android:paddingBottom="@dimen/dimen_2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:drawablePadding="-8.0dip"
        android:paddingStart="@dimen/dimen_8"
        android:paddingEnd="@dimen/dimen_8"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dimen_8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_marginBottom="@dimen/dimen_12">
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/lyt_outlet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imgCallOutlet"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="16.0sp"
                    android:textStyle="normal"
                    android:textColor="#ff1c1839"
                    android:id="@id/tvOutletName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_outlet"
                    android:drawablePadding="@dimen/dimen_5"
                    android:lineSpacingExtra="5.0sp"
                    fontFamily="\@fonts/sf_pro_display_medium" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="normal"
                    android:textColor="#ff758da6"
                    android:id="@id/tvtaskStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    fontFamily="\@fonts/sf_pro_display" />
            </LinearLayout>
            <ImageView
                android:id="@id/imgCallOutlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_16"
                android:layout_toLeftOf="@id/imgNavigate"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_call" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@id/img_ocr_red_ribbon"
        android:visibility="gone"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:src="@drawable/red_ribbon_ocr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>