<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@id/lyt_coordinate"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="2.0">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.58">
            <RelativeLayout
                android:orientation="vertical"
                android:id="@id/ll"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_5">
                    <TextView
                        android:textSize="@dimen/dimen_17sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/tv_blur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2"
                        android:layout_marginBottom="@dimen/dimen_2" />
                    <TextView
                        android:textSize="@dimen/dimen_17sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/tv_blur_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2.0dip" />
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/dimen_17sp"
                    android:textStyle="bold"
                    android:textColor="#ffff0000"
                    android:layout_gravity="end"
                    android:id="@id/tv_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_marginBottom="2.0dip"
                    android:text="Light = "
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <androidx.camera.view.PreviewView
                android:id="@id/previewView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:layout_below="@id/ll" />
            <FrameLayout
                android:id="@id/frame_lyt_img"
                android:background="@color/black"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:id="@id/im_fullimage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/default_img"
                    android:adjustViewBounds="true" />
            </FrameLayout>
            <FrameLayout
                android:id="@id/frame_layout_spl_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
            <ImageView
                android:id="@id/samp_img"
                android:visibility="gone"
                android:layout_width="200.0dip"
                android:layout_height="300.0dip" />
            <ImageView
                android:id="@id/img_touch"
                android:layout_width="175.0dip"
                android:layout_height="250.0dip"
                android:layout_marginBottom="8.0dip"
                android:src="@drawable/img_touch"
                android:layout_below="@id/fab_close"
                android:layout_centerInParent="true"
                android:contentDescription="@string/preview_area"
                android:importantForAccessibility="no" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_gravity="center|top"
                android:id="@id/fab_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:src="@drawable/close"
                android:tint="@color/white"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:alpha="0.9"
                android:tintMode="screen"
                android:backgroundTint="@color/uvv_black"
                app:borderWidth="0.0dip" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="0.42">
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@id/rl"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_40">
                <ImageView
                    android:id="@id/minus_iv"
                    android:layout_width="35.0dip"
                    android:layout_height="fill_parent"
                    android:src="@drawable/ic_minus_icon_1" />
                <SeekBar
                    android:id="@id/zoomBar"
                    android:padding="0.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_margin="0.0dip"
                    android:max="100"
                    android:layout_toLeftOf="@id/plus_iv"
                    android:layout_toRightOf="@id/minus_iv"
                    android:elevation="2.0dip"
                    android:thumbTint="@color/light_blue" />
                <ImageView
                    android:id="@id/plus_iv"
                    android:layout_width="35.0dip"
                    android:layout_height="fill_parent"
                    android:src="@drawable/ic_plus_icon"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:id="@id/camera_bottom_sheet"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/rl"
                android:layout_alignParentBottom="true"
                android:alpha="0.8"
                app:cardBackgroundColor="@color/uvv_black">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_gravity="center"
                    android:id="@id/img_capture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:src="@drawable/camera"
                    android:elevation="5.0dip"
                    android:backgroundTint="@color/white"
                    app:backgroundTint="@color/white"
                    app:tint="#ff4a4a4a" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_gravity="center|left"
                    android:id="@id/btn_flash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80.0dip"
                    android:src="@drawable/flash_off"
                    android:tintMode="src_in"
                    android:elevation="5.0dip"
                    app:backgroundTint="#ffb1aeae"
                    app:borderWidth="0.0dip"
                    app:tint="@color/white" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_gravity="center|right"
                    android:id="@id/btn_pic_count"
                    android:background="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70.0dip"
                    android:tint="@color/gray"
                    android:alpha="0.1"
                    android:tintMode="screen"
                    android:elevation="5.0dip"
                    app:backgroundTint="@color/gray"
                    app:backgroundTintMode="src_atop"
                    app:borderWidth="2.0dip" />
                <TextView
                    android:textSize="17.0sp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_gravity="center|right"
                    android:id="@id/tv_image_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="88.0dip"
                    android:text="+1" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@id/image_bottom_sheet"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:cardBackgroundColor="@color/uvv_black">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_gravity="end"
                    android:id="@id/btn_clear"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.0dip"
                    android:src="@drawable/delete"
                    android:scaleType="center"
                    android:tint="#ffe35b51"
                    android:layout_marginEnd="40.0dip"
                    android:tintMode="src_atop"
                    app:backgroundTint="#ffe35b51"
                    app:maxImageSize="35.0dip"
                    app:tint="@android:color/white" />
                <TextView
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:id="@id/tv_image_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text=""
                    android:layout_marginStart="10.0dip" />
                <TextView
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:id="@id/tv_image_highlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text=""
                    android:layout_marginStart="20.0dip" />
                <androidx.cardview.widget.CardView
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="140.0dip">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@id/rv_image_strip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:textSize="16.0sp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:id="@id/btn_submit"
                        android:background="@color/colorPrimary"
                        android:paddingLeft="@dimen/dimen_32"
                        android:paddingRight="@dimen/dimen_32"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_45"
                        android:text="Submit"
                        android:layout_alignParentBottom="true"
                        android:textAllCaps="false" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>