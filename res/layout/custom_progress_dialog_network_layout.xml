<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_gravity="center"
    android:background="@color/white"
    android:layout_width="300.0dip"
    android:layout_height="190.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_18sp"
        android:textColor="@color/white"
        android:id="@id/title_text"
        android:background="@drawable/side_nav_bar"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ProgressBar
        android:id="@id/progressBar"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_marginTop="39.0dip"
        android:indeterminate="true"
        android:layout_below="@id/title_text"
        android:layout_centerHorizontal="true" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="16.0sp"
        android:id="@id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="@string/please_wait"
        android:layout_below="@id/title_text"
        android:layout_centerHorizontal="true" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:id="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginBottom="@dimen/dimen_4"
        android:text="@string/internet_speed"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_14sp"
        android:id="@id/tv_download_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0kbps"
        android:layout_below="@id/textView2"
        android:drawableStart="@drawable/ic_download_24"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_alignParentStart="true" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_14sp"
        android:id="@id/tv_upload_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0kbps"
        android:layout_below="@id/textView2"
        android:drawableStart="@drawable/ic_upload_24"
        android:layout_marginEnd="@dimen/dimen_16"
        android:layout_alignParentEnd="true" />
</RelativeLayout>