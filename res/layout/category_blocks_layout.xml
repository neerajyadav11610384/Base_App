<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/category_block_lyt"
    android:background="@color/white"
    android:paddingTop="@dimen/dimen_6"
    android:paddingBottom="@dimen/dimen_6"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/header_bar"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16.0sp"
            android:textColor="#ff091e42"
            android:layout_gravity="center_vertical"
            android:id="@id/section_title"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_weight="1.0"
            android:lineSpacingExtra="0.0sp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="13.0sp"
            android:textColor="#ff42526e"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:id="@id/view_more_categories"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_4"
            android:text="@string/view_more"
            android:lineSpacingExtra="0.0sp"
            android:fontFamily="\@fonts/sf_pro_display_medium" />
        <ImageView
            android:layout_gravity="center"
            android:id="@id/view_more_image"
            android:background="@drawable/oval_2392ff"
            android:padding="@dimen/dimen_2"
            android:visibility="gone"
            android:layout_width="@dimen/dimen_14"
            android:layout_height="@dimen/dimen_14"
            android:layout_marginRight="@dimen/dimen_4"
            app:srcCompat="@drawable/ic_see_more_right"
            app:tint="@color/white" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/rcy_category_blocks"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_8"
        android:layout_marginBottom="@dimen/dimen_10" />
    <LinearLayout
        android:gravity="center"
        android:id="@id/view_all_lyt"
        android:background="@drawable/background_border_color_2392ff"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="34.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="16.0dip">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:textColor="@color/color_2392ff"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:fontFamily="\@fonts/sf_pro_display_regular" />
    </LinearLayout>
</LinearLayout>