<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/sf_layout_basepack"
    android:background="@color/white"
    android:visibility="gone"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@id/lyt_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@id/toolbar"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            app:contentInsetLeft="0.0dip"
            app:contentInsetStart="0.0dip"
            app:contentInsetStartWithNavigation="0.0dip"
            app:theme="@style/AppTheme.AppBarOverlay">
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@id/title_lyt"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:id="@id/img_back_arrow_sf"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:src="@drawable/back_arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_alignParentStart="true"
                    app:tint="@color/colorPrimary" />
                <TextView
                    android:textSize="18.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="MBrand - Basepacks"
                    android:maxLines="1"
                    android:layout_toRightOf="@id/img_back_arrow_sf"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@id/ll_mbrand_basepack_title_status"
        android:background="@drawable/sf_mbrand_on"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_margin="2.0dip"
        android:layout_below="@id/lyt_toolbar">
        <TextView
            android:textSize="15.0sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@id/tv_task_status_title"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="MBrand - Basepacks"
            android:layout_marginStart="@dimen/dimen_16" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_outer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lyt_bottom"
        android:layout_below="@id/ll_mbrand_basepack_title_status"
        android:layout_marginStart="2.0dip"
        android:layout_marginEnd="2.0dip">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/ll_dashboard_rha"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/ll_mbrand_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#ffffffff"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36.0dip"
                    android:layout_weight="1.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff000000"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:padding="4.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.0dip"
                        android:text="Select MBrand"
                        android:fontFamily="@font/sf_pro_display_semibold" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#ffffffff"
                    android:layout_width="60.0dip"
                    android:layout_height="wrap_content"
                    android:minHeight="36.0dip"
                    android:layout_marginStart="8.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff000000"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="4.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:fontFamily="@font/sf_pro_display_semibold" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#ffffffff"
                    android:layout_width="60.0dip"
                    android:layout_height="wrap_content"
                    android:minHeight="36.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff000000"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="4.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        android:fontFamily="@font/sf_pro_display_semibold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/ll_mbrand"
                android:padding="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/ll_spn_mbrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36.0dip"
                    android:layout_weight="1.0">
                    <Spinner
                        android:layout_gravity="left"
                        android:id="@id/spn_mbrand"
                        android:background="@drawable/sf_spinner_outline"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:popupBackground="@drawable/sf_blue_outline_with_background"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/ll_entity_mbrand_units"
                    android:background="@drawable/sf_spinner_outline"
                    android:layout_width="60.0dip"
                    android:layout_height="wrap_content"
                    android:minHeight="36.0dip"
                    android:layout_marginStart="8.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff000000"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@id/tv_mbrand_units"
                        android:padding="4.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Units"
                        android:fontFamily="@font/sf_pro_display_semibold" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/ll_entity_mbrand_value"
                    android:background="@drawable/sf_spinner_outline"
                    android:layout_width="60.0dip"
                    android:layout_height="wrap_content"
                    android:minHeight="36.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff000000"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@id/tv_mbrand_value"
                        android:padding="4.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        android:fontFamily="@font/sf_pro_display_semibold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@id/ll_basepack"
                android:background="#ffffffff"
                android:padding="2.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_marginBottom="10.0dip">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:id="@id/rv_sf_basepacks"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2.0dip"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:id="@id/lyt_bottom"
        android:background="@drawable/sf_mbrand_on"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:weightSum="1.0"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="#ff000000"
            android:gravity="center"
            android:id="@id/tv_sf_close"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="50.0dip"
            android:text="Close"
            android:layout_weight="1.0"
            android:textAllCaps="false"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:backgroundTint="@color/color_sf_selected_off" />
    </LinearLayout>
</RelativeLayout>