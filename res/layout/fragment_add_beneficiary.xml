<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.core.widget.NestedScrollView
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0"
            app:layout_constraintBottom_toTopOf="@id/textViewAddBeneficiary"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/layoutCreditLimit"
                android:paddingBottom="@dimen/dimen_10"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:textColorHint="@color/black"
                    android:id="@id/textInputLayoutBeneficiaryName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:hint="Beneficiary Name*"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginEnd="@dimen/dimen_10"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"
                        android:id="@id/textInputEditTextBeneficiaryName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:textColorHint="@color/black"
                    android:id="@id/textInputLayoutNumberOfFamilyMember"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:hint="Number of Family Member*"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginEnd="@dimen/dimen_10"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayoutBeneficiaryName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"
                        android:id="@id/textInputEditTextNumberOfFamilyMember"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:maxLength="2"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:textColorHint="@color/black"
                    android:id="@id/textInputLayoutNubmerOfKide"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:hint="Number of kids between 0-8 age*"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginEnd="@dimen/dimen_10"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayoutNumberOfFamilyMember"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"
                        android:id="@id/textInputEditTextNubmerOfKide"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:maxLength="2"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@id/layoutPregnantOrLactatingMother"
                    android:background="@drawable/c3c3c3_bouder_5dp"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_marginTop="@dimen/dimen_10"
                    app:layout_constraintEnd_toEndOf="@id/textInputLayoutNubmerOfKide"
                    app:layout_constraintStart_toStartOf="@id/textInputLayoutNubmerOfKide"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayoutNubmerOfKide">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@id/textViewPregnantOrLactatingMother"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="wrap_content"
                        android:text="Pregnant Or Lactating Mother"
                        android:fontFamily="@font/sf_pro_display_regular"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ViewPregnantDivider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintWidth_percent="0.5" />
                    <View
                        android:id="@id/ViewPregnantDivider"
                        android:background="#ffc3c3c3"
                        android:layout_width="@dimen/dimen_1"
                        android:layout_height="@dimen/dimen_0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <RadioGroup
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@id/radioGroupPregnantOrLactatingMother"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:layout_marginEnd="@dimen/dimen_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ViewPregnantDivider"
                        app:layout_constraintTop_toTopOf="parent">
                        <RadioButton
                            android:textSize="14.0sp"
                            android:id="@id/rb_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:layout_marginEnd="@dimen/dimen_5" />
                        <RadioButton
                            android:textSize="14.0sp"
                            android:id="@id/rb_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:layout_marginEnd="@dimen/dimen_5" />
                    </RadioGroup>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:textColorHint="@color/black"
                    android:id="@id/textInputLayoutMobileNumber"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:hint="Mobile Number*"
                    android:layout_marginEnd="@dimen/dimen_10"
                    app:layout_constraintEnd_toStartOf="@id/textViewVerifyMobileNumber"
                    app:layout_constraintStart_toStartOf="@id/layoutPregnantOrLactatingMother"
                    app:layout_constraintTop_toBottomOf="@id/layoutPregnantOrLactatingMother"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"
                        android:id="@id/textInputEditTextMobileNumber"
                        android:focusableInTouchMode="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_2392ff"
                    android:gravity="center"
                    android:id="@id/textViewVerifyMobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_number"
                    android:fontFamily="@font/sf_pro_display_medium"
                    app:layout_constraintBottom_toBottomOf="@id/textInputLayoutMobileNumber"
                    app:layout_constraintEnd_toEndOf="@id/textInputLayoutBeneficiaryName"
                    app:layout_constraintStart_toEndOf="@id/textInputLayoutMobileNumber"
                    app:layout_constraintTop_toTopOf="@id/textInputLayoutMobileNumber" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@id/layoutOtp"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayoutMobileNumber">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/color_41586f"
                        android:gravity="center"
                        android:id="@id/textViewSentOtp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OTP sent to +91 8123456789"
                        android:lineSpacingExtra="8.0sp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <com.hul.sambhav.ui.otptextview.OtpTextView
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/otpTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        app:bar_enabled="false"
                        app:height="@dimen/dimen_50"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewSentOtp"
                        app:length="6"
                        app:otp_box_background="@drawable/edit_text_white_box_bg"
                        app:otp_box_background_active="@drawable/edit_text_blue_box_bg"
                        app:otp_text_size="@dimen/dimen_16sp"
                        app:width="@dimen/dimen_50" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_14sp"
                        android:textColor="@color/color_ff5f5f"
                        android:layout_gravity="center"
                        android:id="@id/textViewErrorOtpNumber"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text=""
                        android:lineSpacingExtra="7.0sp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:lineHeight="@dimen/dimen_21sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/otpTextView" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/color_00a41a"
                        android:layout_gravity="center"
                        android:id="@id/textViewResendMsgCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_24"
                        android:fontFamily="@font/sf_pro_display_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewErrorOtpNumber" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@id/layoutErrorResent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewResendMsgCounter">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/color_758da6"
                            android:gravity="center"
                            android:id="@id/textViewOtpNotReciving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/otp_not_reveiced"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:layout_marginEnd="@dimen/dimen_16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/color_2392ff"
                            android:gravity="center"
                            android:id="@id/textViewResendOtp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:text="@string/resend_otp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            app:layout_constraintStart_toEndOf="@id/textViewOtpNotReciving"
                            app:layout_constraintTop_toTopOf="@id/textViewOtpNotReciving" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@id/textViewConfirmBtn"
                        android:background="@drawable/bg_login_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_34"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_20"
                        android:text="@string/confirm"
                        android:fontFamily="@font/sf_pro_display_medium"
                        app:layout_constraintTop_toBottomOf="@id/layoutErrorResent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/imageViewCaptured"
                    android:layout_width="100.0dip"
                    android:layout_height="100.0dip"
                    android:layout_marginTop="10.0dip"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutOtp"
                    app:srcCompat="@drawable/ic_camera_haat_setup_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/textViewAddBeneficiary"
            android:background="@drawable/drawable_2392ff_5dp"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_35"
            android:layout_marginBottom="@dimen/dimen_20"
            android:text="Save"
            android:fontFamily="@font/sf_pro_display_regular"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:elevation="@dimen/dimen_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>