<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="12.0sp"
            android:gravity="right"
            android:id="@id/moc_date_info"
            android:paddingTop="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/chart_view"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@id/dets_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:fontFamily="@font/sf_pro_display_bold" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <ProgressBar
                            android:id="@id/background_progressbar2"
                            android:layout_width="@dimen/chart_width"
                            android:layout_height="@dimen/chart_width"
                            android:max="100"
                            android:progress="100"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/vijeta_piechart_bg"
                            style="?android:progressBarStyleHorizontal" />
                        <ProgressBar
                            android:id="@id/dets_progressbar"
                            android:layout_width="@dimen/chart_width"
                            android:layout_height="@dimen/chart_width"
                            android:max="100"
                            android:progress="0"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/vijeta_piechart_green"
                            style="?android:progressBarStyleHorizontal" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="@dimen/inside_chart_text_size"
                            android:id="@id/dets_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textStyle="normal"
                        android:id="@id/dets_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target: 0" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textStyle="normal"
                        android:id="@id/dets_ach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ach: 0" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textStyle="normal"
                        android:textColor="@color/dark_red"
                        android:id="@id/dets_btd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTD: 0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>