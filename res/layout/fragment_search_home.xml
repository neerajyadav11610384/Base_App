<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        app:contentInsetLeft="0.0dip"
        app:contentInsetStart="0.0dip"
        app:contentInsetStartWithNavigation="0.0dip"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/DrawerIcon">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/imageViewBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_20"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_arrow_back" />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/title_lyt"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/toolbar_ic_lyt"
                android:layout_toRightOf="@id/imageViewBackButton">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:id="@id/logo"
                    android:visibility="gone"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_marginRight="5.0dip"
                    app:srcCompat="@mipmap/ic_launcher" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/appname"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/toolbar_ic_lyt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_alignParentRight="true">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/home"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="15.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_home" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/notification"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="15.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_action_notifications" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/unipay_lyt"
                    android:paddingLeft="@dimen/dimen_2"
                    android:paddingRight="@dimen/dimen_5"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        app:srcCompat="@drawable/ic_ushop_logo_c77f15" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_c77f15"
                        android:gravity="center"
                        android:id="@id/unipay"
                        android:paddingBottom="4.0dip"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_3"
                        android:text="0"
                        android:fontFamily="@font/anton_regular" />
                </LinearLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:id="@id/cart"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="13.0dip">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/toolbar_cart_icon"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="16.0dip"
                        app:srcCompat="@drawable/ic_cart" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="10.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center|top"
                        android:id="@id/cart_count"
                        android:background="@drawable/circle_bg"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6.0dip"
                        android:text=""
                        android:fontFamily="@font/maisonneue_bold" />
                </FrameLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/logout"
                    android:paddingRight="10.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_logout" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@id/leftGuidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.03" />
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@id/rightGuidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutSearch"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintEnd_toEndOf="@id/rightGuidLine"
        app:layout_constraintStart_toStartOf="@id/leftGuidLine"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <androidx.appcompat.widget.AppCompatEditText
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/color_1c1839_1"
            android:textColorHint="@color/color_758da6"
            android:id="@id/editTextSearch"
            android:background="@drawable/light_green_rounded_corner"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_10"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="fill_parent"
            android:hint="@string/search_products"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="45"
            android:drawablePadding="@dimen/dimen_5"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:fontFamily="@font/sf_pro_display_regular"
            android:paddingStart="@dimen/dimen_10"
            android:paddingEnd="@dimen/dimen_36"
            app:drawableLeftCompat="@drawable/ic_search_wrapped"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutClearEdit"
            android:background="@drawable/drawable_758da6_circle"
            android:padding="@dimen/dimen_4"
            android:visibility="gone"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_5"
            app:layout_constraintBottom_toBottomOf="@id/editTextSearch"
            app:layout_constraintEnd_toEndOf="@id/editTextSearch"
            app:layout_constraintTop_toTopOf="@id/editTextSearch">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close_icon_new" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.hul.sambhav.util.CustomizedNestedScrollView
        android:fitsSystemWindows="true"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rightGuidLine"
        app:layout_constraintStart_toStartOf="@id/leftGuidLine"
        app:layout_constraintTop_toBottomOf="@id/layoutSearch">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/layoutErrorMain"
                android:visibility="gone"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/imageViewErrorMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_no_result_found" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/textViewNotMatchingResult"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginStart="@dimen/dimen_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewErrorMsg"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/color_41586f"
                    android:id="@id/textViewCheckSpell"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="Please check the spelling or checkout our popular searches below"
                    android:lineSpacingMultiplier="1.2"
                    android:fontFamily="@font/sf_pro_display_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/textViewNotMatchingResult"
                    app:layout_constraintTop_toBottomOf="@id/textViewNotMatchingResult" />
                <View
                    android:background="@color/color_b4c8dc"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_marginTop="@dimen/dimen_15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewCheckSpell" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/layoutPopular"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutErrorMain">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_758da6"
                    android:id="@id/textViewResent"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:text="Recent searches:"
                    android:fontFamily="@font/sf_pro_display_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/recyclerViewSearchHistory"
                    android:visibility="gone"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewResent" />
                <View
                    android:id="@id/viewSearchDivider"
                    android:background="@color/color_b4c8dc"
                    android:visibility="gone"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_marginTop="@dimen/dimen_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recyclerViewSearchHistory" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_758da6"
                    android:id="@id/textViewPopularSearches"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="Popular searches:"
                    android:fontFamily="@font/sf_pro_display_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewSearchDivider" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/recyclerViewPopular"
                    android:visibility="gone"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewPopularSearches" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.hul.sambhav.util.CustomizedNestedScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recySearchResult"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@id/layoutSearch" />
</androidx.constraintlayout.widget.ConstraintLayout>