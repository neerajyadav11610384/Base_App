<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/cl_for_camera"
    android:background="#ff000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.camera.view.PreviewView
        android:id="@id/mPreviewView"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_marginBottom="8.0dip"
        android:contentDescription="Preview Area"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:layout_marginBottom="8.0dip"
        android:weightSum="3.0"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="8.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mPreviewView">
        <androidx.cardview.widget.CardView
            android:id="@id/capture"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            app:cardBackgroundColor="#ffffffff"
            app:cardCornerRadius="18.0dip">
            <ImageView
                android:id="@id/captureImage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/ic_capture"
                android:contentDescription="Capture" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>