            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/color_2392ff"
                android:gravity="center"
                android:id="@id/textViewResendOtp"
                android:layout_width="wrap_content"
