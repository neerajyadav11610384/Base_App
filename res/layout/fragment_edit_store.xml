                app:otp_box_background_active="@drawable/edit_text_blue_box_bg"
                app:otp_text_size="@dimen/dimen_16sp"
                app:width="40.0dip" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatEditText
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/color_1c1839_1"
            android:textColorHint="@color/color_758da6"
