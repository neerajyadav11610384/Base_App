<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:background="@drawable/dialog_unipay_advance_pay_top_corner_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50"
        android:elevation="@dimen/dimen_5"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_18sp"
            android:textColor="@color/color_1c1839_1"
            android:id="@id/title"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5"
            app:fontFamily="@font/sf_pro_display_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/close_crdit_lock_dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:gravity="center_vertical"
            android:id="@id/close_crdit_lock_dialog"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dimen_12"
            android:layout_alignParentRight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_black" />
        <View
            android:background="@color/color_2392ff"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/recyclerViewPendingInvoice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/recyclerViewPlgInvoice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewPendingInvoice" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/credit_clear_all"
                android:background="@color/color_e6eaf4"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewPlgInvoice">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="18.0sp"
                    android:textColor="#ffff5f5f"
                    android:id="@id/total_credit_value"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="rerererr"
                    android:lineSpacingExtra="9.0sp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:lineHeight="@dimen/dimen_21sp"
                    app:layout_constraintBottom_toTopOf="@id/total_credit_value_label"
                    app:layout_constraintEnd_toStartOf="@id/clear_all_dues_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="14.0sp"
                    android:textColor="#ff1c1839"
                    android:id="@id/total_credit_value_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="@string/total_credit_value"
                    android:lineSpacingExtra="7.0sp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:lineHeight="@dimen/dimen_21sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/total_credit_value"
                    app:layout_constraintTop_toBottomOf="@id/total_credit_value"
                    app:layout_constraintVertical_chainStyle="packed" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="16.0sp"
                    android:textColor="#ff2392ff"
                    android:gravity="center"
                    android:id="@id/clear_all_dues_btn"
                    android:background="@drawable/background_border_color_2392ff"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_32"
                    android:text="@string/clear_all_dues"
                    android:lineSpacingExtra="8.0sp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:layout_marginEnd="@dimen/dimen_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/total_credit_value"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="16.0sp"
                android:textColor="#ff1c1839"
                android:id="@id/credit_alert"
                android:background="#33ff5f5f"
                android:paddingLeft="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_8"
                android:paddingRight="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:lineSpacingExtra="8.0sp"
                android:fontFamily="@font/sf_pro_display_regular"
                app:layout_constraintTop_toBottomOf="@id/credit_clear_all" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>