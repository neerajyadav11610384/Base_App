<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_18sp"
        android:textColor="@color/color_27ae60"
        android:id="@id/order_placed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:drawablePadding="@dimen/dimen_10"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:lineSpacingExtra="9.0sp"
        android:fontFamily="@font/sf_pro_display_bold"
        app:drawableLeftCompat="@drawable/ic_check_circle_24dp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="normal"
        android:textColor="@color/color_41586f"
        android:gravity="center_horizontal"
        android:id="@id/msg_info"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_below="@id/order_placed_title"
        android:lineSpacingExtra="8.0sp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:lineHeight="@dimen/dimen_27sp" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/redeemdlg_close"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_close_black" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/color_1c1839_1"
        android:id="@id/credit_warning"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        android:layout_below="@id/msg_info"
        android:fontFamily="@font/sf_pro_display_medium" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/lyt1"
        android:background="@drawable/bg_stpr_gradient"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/credit_warning">
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dimen_15"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_30">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_ushop_balance"
                    android:lineSpacingExtra="@dimen/dimen_8sp"
                    android:fontFamily="@font/sf_pro_display_bold" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1.0">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_gravity="center"
                        android:id="@id/img"
                        android:background="@drawable/ic_ushop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_1"
                        android:layout_toLeftOf="@id/txt_retailer_bal" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_18sp"
                        android:textColor="#ffffffff"
                        android:layout_gravity="center|right"
                        android:id="@id/ushop_balance"
                        android:paddingRight="5.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_2"
                        android:layout_marginBottom="1.0dip"
                        android:text="0"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/anton_regular" />
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="#ffffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:text="@string/redeem_unipay_points"
                android:layout_weight="1.0"
                android:lineSpacingExtra="@dimen/dimen_8sp"
                android:fontFamily="@font/montserrat_regular" />
            <LinearLayout
                android:id="@id/redeem_lyt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5">
                <EditText
                    android:id="@id/et_redeem_value"
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_weight="1.0"
                    android:inputType="number" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@id/btn_redeem"
                    android:background="@color/color_2392ff"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/redeem"
                    android:fontFamily="@font/montserrat_regular" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_1" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/redeem_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:text="@string/your_points_redeem_next"
            android:layout_below="@id/lyt1"
            android:fontFamily="@font/sf_pro_display_regular" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/close"
        android:background="@color/color_2392ff"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:text="@string/close"
        android:layout_below="@id/lyt1"
        android:lineSpacingExtra="9.0sp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineHeight="@dimen/dimen_27sp" />
</RelativeLayout>