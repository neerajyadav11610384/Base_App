<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/curved_border"
    android:paddingBottom="5.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="#ffdb1010"
            android:gravity="center_vertical"
            android:id="@id/txt_store_name"
            android:paddingLeft="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="Amit distribution store"
            android:layout_weight="0.75" />
        <Button
            android:textColor="@color/white"
            android:id="@id/btn_pay"
            android:background="@drawable/green_rounded_corner"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="5.0dip"
            android:text="@string/pay"
            android:layout_weight="0.25" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="35.0dip">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:gravity="center_vertical"
            android:id="@id/txt_invoice_no"
            android:paddingLeft="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:minHeight="25.0dip"
            android:text="Invoice:1234456"
            android:layout_weight="0.6" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:gravity="center|right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/status" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:gravity="center_vertical"
            android:id="@id/txt_invoice_status"
            android:paddingRight="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Partial Paid" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="60.0dip">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:paddingLeft="10.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                android:layout_weight="0.4" />
            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:id="@id/txt_total_amt"
                android:paddingLeft="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:minHeight="25.0dip"
                android:text="100"
                android:layout_weight="0.7" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:paddingLeft="10.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/amount_paid"
                android:layout_weight="0.4" />
            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:id="@id/txt_paid_amt"
                android:paddingLeft="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:minHeight="25.0dip"
                android:text="80"
                android:layout_weight="0.7" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:paddingLeft="10.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/pending_due"
                android:layout_weight="0.4" />
            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:id="@id/txt_left_amt"
                android:paddingLeft="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:minHeight="25.0dip"
                android:text="20"
                android:layout_weight="0.7" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:paddingLeft="10.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/date_of_invoice"
                android:layout_weight="0.4" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:id="@id/txt_creation_date"
                android:paddingLeft="2.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:minHeight="25.0dip"
                android:text="Creation Date: 10-03-2018"
                android:layout_weight="0.7" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>