<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="@dimen/dimen_16sp"
        android:id="@id/textViewNoDataFound"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No mission available for the store"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/sf_pro_display_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:id="@id/nestedScrollViewMission"
        android:visibility="visible"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_0"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutTaskAndSurveyPage"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/layoutHaat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:id="@id/guidelineLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.02" />
                <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:id="@id/guidelineRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.98" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@id/layoutRoutePlan"
                    android:background="@drawable/c3c3c3_bouder_5dp"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    app:layout_constraintEnd_toEndOf="@id/guidelineRight"
                    app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_18sp"
                        android:textColor="@color/black"
                        android:id="@id/textViewRoutePlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ROUTE PLAN"
                        android:fontFamily="@font/sf_pro_display_medium"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"
                        android:id="@id/textViewRoutePlanStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time : "
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableStart="@drawable/ic_clock_icon"
                        android:fontFamily="@font/sf_pro_display_regular"
                        app:layout_constraintEnd_toStartOf="@id/textViewRoutePlanStartTimeValue"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@id/textViewRoutePlanStartTimeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        app:layout_constraintBottom_toBottomOf="@id/textViewRoutePlanStartTime"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/textViewRoutePlanStartTime" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"
                        android:id="@id/textViewRoutePlanEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time   : "
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableStart="@drawable/ic_clock_icon"
                        android:fontFamily="@font/sf_pro_display_regular"
                        app:layout_constraintStart_toStartOf="@id/textViewRoutePlanStartTime"
                        app:layout_constraintTop_toBottomOf="@id/textViewRoutePlanStartTime" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@id/textViewRoutePlanEndTimeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:text="00:00"
                        app:layout_constraintBottom_toBottomOf="@id/textViewRoutePlanEndTime"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/textViewRoutePlanEndTime" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/imageViewRoutePlan"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_check_green" />
                    <androidx.constraintlayout.widget.Group
                        android:id="@id/groupRoutePlan"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="textViewRoutePlanStartTime,textViewRoutePlanStartTimeValue,textViewRoutePlanEndTime,textViewRoutePlanEndTimeValue" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@id/layoutHaatActivation"
                    android:background="@drawable/c3c3c3_bouder_5dp"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    app:layout_constraintEnd_toEndOf="@id/guidelineRight"
                    app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                    app:layout_constraintTop_toBottomOf="@id/layoutRoutePlan">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_18sp"
                        android:textColor="@color/black"
                        android:id="@id/textViewHaatActivation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HAAT ACTIVATION"
                        android:fontFamily="@font/sf_pro_display_medium"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"
                        android:id="@id/textViewStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time : "
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableStart="@drawable/ic_clock_icon"
                        android:fontFamily="@font/sf_pro_display_regular"
                        app:layout_constraintEnd_toStartOf="@id/textViewStartTimeValue"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@id/textViewStartTimeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19:00"
                        app:layout_constraintBottom_toBottomOf="@id/textViewStartTime"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/textViewStartTime" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"
                        android:id="@id/textViewEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time : "
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableStart="@drawable/ic_clock_icon"
                        android:fontFamily="@font/sf_pro_display_regular"
                        app:layout_constraintStart_toStartOf="@id/textViewStartTime"
                        app:layout_constraintTop_toBottomOf="@id/textViewStartTime" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@id/textViewEndTimeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19:00"
                        app:layout_constraintBottom_toBottomOf="@id/textViewEndTime"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/textViewEndTime" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/imageViewHaatActivation"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_check_green" />
                    <androidx.constraintlayout.widget.Group
                        android:id="@id/groupHaatActivation"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="textViewStartTime,textViewStartTimeValue,textViewEndTime,textViewEndTimeValue" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/layoutTask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layoutHaat">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:id="@id/textViewTaskHeader"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:text="Task(1/2)"
                    android:paddingStart="@dimen/dimen_10"
                    app:fontFamily="@font/sf_pro_display_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <include
                    android:background="@color/color_dce5ed"
                    app:layout_constraintTop_toBottomOf="@id/textViewTaskHeader"
                    layout="@layout/fragment_task" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/layoutSurvey"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layoutTask">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:id="@id/textViewSurveyHeader"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:text="Survey(1/2)"
                    android:paddingStart="@dimen/dimen_10"
                    app:fontFamily="@font/sf_pro_display_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.hul.sambhav.util.NonScrollExpandableListView
                    android:id="@id/survery_recyclerview"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dimen_8"
                    android:paddingBottom="@dimen/dimen_8"
                    android:visibility="gone"
                    android:scrollbars="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:groupIndicator="@null"
                    android:divider="@color/white"
                    android:dividerHeight="@dimen/dimen_12"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:layout_marginEnd="@dimen/dimen_8"
                    app:layout_constraintTop_toBottomOf="@id/textViewSurveyHeader" />
                <ProgressBar
                    android:id="@id/progressBar2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?android:progressBarStyle" />
                <TextView
                    android:textColor="#ff616161"
                    android:id="@id/no_data_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data_found_msg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/rcv_survey_header"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dimen_8"
                    android:paddingBottom="@dimen/dimen_8"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:layout_marginEnd="@dimen/dimen_8"
                    app:layout_constraintTop_toBottomOf="@id/textViewSurveyHeader" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>