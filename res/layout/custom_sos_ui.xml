<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:background="@drawable/border_red_sos"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20">
        <ImageView
            android:id="@id/logo"
            android:layout_width="@dimen/dimen_42"
            android:layout_height="@dimen/dimen_42"
            android:src="@drawable/ic_usafe_sos" />
        <TextView
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold"
            android:textColor="#fffe0100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="Emergency Call"
            android:layout_centerHorizontal="true" />
        <TextView
            android:textSize="@dimen/dimen_15sp"
            android:textStyle="normal"
            android:textColor="#ff000000"
            android:id="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="Do you want to make an Emergency call?"
            android:layout_below="@id/logo" />
        <TextView
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="normal"
            android:textColor="#ff598ace"
            android:id="@id/tv_no"
            android:padding="@dimen/dimen_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:text="No"
            android:layout_toLeftOf="@id/tv_yes"
            android:layout_below="@id/content" />
        <TextView
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="normal"
            android:textColor="#ff598ace"
            android:id="@id/tv_yes"
            android:padding="@dimen/dimen_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:text="Yes"
            android:layout_below="@id/content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>