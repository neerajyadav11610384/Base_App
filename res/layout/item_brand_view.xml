<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/empty_circle_draw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_5"
    android:layout_marginRight="@dimen/dimen_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@id/imageViewBrand"
        android:padding="@dimen/dimen_2"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        app:srcCompat="@drawable/default_img" />
    <View
        android:id="@id/viewSelectIndicator"
        android:background="@color/color_2392ff"
        android:visibility="gone"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintEnd_toEndOf="@id/imageViewBrand"
        app:layout_constraintStart_toStartOf="@id/imageViewBrand"
        app:layout_constraintTop_toBottomOf="@id/imageViewBrand" />
</androidx.constraintlayout.widget.ConstraintLayout>