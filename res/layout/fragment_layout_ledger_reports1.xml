<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/retailer_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@id/retailer_data_bar"
            android:padding="5.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@id/total_balance_layout"
            android:background="@color/white"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginBottom="1.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1.0dip"
                android:text="@string/total_balance"
                android:fontFamily="@font/sf_pro_display_regular" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/mosambee_green_dark"
                android:id="@id/total_unipay_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1.0dip"
                android:text="1234"
                android:fontFamily="@font/sf_pro_display_regular" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@id/total_earmarked_layout"
            android:background="@color/white"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="1.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginBottom="5.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1.0dip"
                android:text="@string/points_blocked"
                android:fontFamily="@font/sf_pro_display_regular" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/mosambee_red"
                android:id="@id/unipay_points_earmarked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1.0dip"
                android:text="1234"
                android:fontFamily="@font/sf_pro_display_regular" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="1.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginBottom="5.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1.0dip"
                android:text="@string/choose_ledger_period"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textAlignment="center" />
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/spinner_background"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular">
                <Spinner
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:textColor="@android:color/black"
                    android:entries="@array/ledger_slots"
                    android:id="@id/ledger_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginBottom="2.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2.0dip"
                android:text="@string/total_transactions"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textAlignment="center" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@id/no_of_txns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2.0dip"
                android:text=""
                android:fontFamily="@font/sf_pro_display_bold"
                android:textAlignment="center" />
            <Button
                android:textSize="12.0dip"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/btn_unipay_detail"
                android:background="@drawable/mosambee_button_blue_curved_border"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Details" />
        </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@id/horizontal_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/gray"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/main_layout_hc"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <View
                    android:background="@color/gray"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:layout_weight="3.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/txn_id"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:text="@string/txn_id"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="10.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/trx_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:text="@string/txn_date"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="10.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/txn_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:text="@string/remarks"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#ffeaf7fc"
                    android:visibility="gone"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="3.0">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_gravity="center"
                        android:id="@id/collapseable_view"
                        android:layout_width="15.0dip"
                        android:layout_height="15.0dip"
                        app:srcCompat="@drawable/plus_icon" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/unipay_ledger_layout"
                    android:background="#ffeaf7fc"
                    android:visibility="visible"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="3.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/unipay_ledger"
                        android:paddingRight="2.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:text="@string/unipay_ledger"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/unipay_detailed_transactions"
                    android:background="#ffeaf7fc"
                    android:visibility="gone"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:weightSum="15.0"
                    android:layout_weight="15.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/unipay_earned"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:text="@string/unipay_earned"
                        android:layout_weight="5.0"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                    <View
                        android:background="@color/gray"
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/unipay_burnt"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:text="@string/unipay_burnt"
                        android:layout_weight="5.0"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                    <View
                        android:background="@color/gray"
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/unipay_adjusted"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:text="@string/adj_points"
                        android:layout_weight="5.0"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                    <View
                        android:background="@color/gray"
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@id/unipay_balance"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="5.0dip"
                        android:text="@string/balance"
                        android:layout_weight="5.0"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/unipay_other_details"
                    android:visibility="gone"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:weightSum="20.0"
                    android:layout_weight="20.0">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/adjusted_invoice_number"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:text="@string/adj_invoice_no"
                        android:layout_weight="5.0"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                    <View
                        android:background="@color/gray"
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/adjusted_date"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:text="@string/adj_date"
                        android:layout_weight="5.0"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                    <View
                        android:background="@color/gray"
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="11.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@id/remarks"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:text="@string/remarks"
                        android:layout_weight="10.0"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:textAlignment="center" />
                    <View
                        android:background="@color/gray"
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
            <LinearLayout
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/stack_summary"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@id/recycler_progress_bar"
                    android:padding="5.0dip"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@id/txt_no_data"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5.0dip"
                    android:text="@string/no_data_found_msg" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>