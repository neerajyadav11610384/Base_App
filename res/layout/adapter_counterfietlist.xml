<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:background="@drawable/light_gray_rounded_corner"
    android:padding="2.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_8"
    android:minHeight="60.0dip"
    android:layout_marginStart="@dimen/dimen_8"
    android:layout_marginEnd="@dimen/dimen_8"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/lyt_counterfiet"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="2.5">
        <TextView
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@id/txt_store_name"
            android:padding="@dimen/dimen_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_2"
            android:fontFamily="sans-serif" />
        <TextView
            android:textSize="@dimen/dimen_13sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:id="@id/txt_product_name"
            android:padding="@dimen/dimen_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_2"
            android:fontFamily="sans-serif" />
    </LinearLayout>
    <TextView
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="normal"
        android:textColor="@color/color_7a869a"
        android:gravity="center"
        android:id="@id/txt_time_stamp"
        android:padding="@dimen/dimen_8"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:lineSpacingExtra="@dimen/dimen_4" />
</LinearLayout>