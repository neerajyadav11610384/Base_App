<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:background="@drawable/dialog_unipay_advance_pay_top_corner_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutMainData"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingTop="@dimen/dimen_14"
        android:paddingRight="@dimen/dimen_16"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/color_333333"
            android:id="@id/textViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_product"
            android:fontFamily="@font/sf_pro_display_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@id/viewDividerHeader"
            android:background="@color/color_b4c8dc"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_10"
            app:layout_constraintTop_toBottomOf="@id/textViewHeader" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:id="@id/productDetails"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewDividerHeader">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/imageViewScanProduct"
                android:layout_width="@dimen/dimen_90"
                android:layout_height="@dimen/dimen_90"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/color_1c1839_1"
                android:ellipsize="end"
                android:id="@id/textViewScanProductName"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:maxLines="2"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_marginStart="@dimen/dimen_10"
                app:layout_constraintBottom_toTopOf="@id/textViewScanProductMrpUnit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageViewScanProduct"
                app:layout_constraintTop_toTopOf="@id/imageViewScanProduct" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_66788a"
                android:ellipsize="end"
                android:id="@id/textViewScanProductMrpUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:maxLines="1"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_marginStart="@dimen/dimen_10"
                app:layout_constraintBottom_toBottomOf="@id/imageViewScanProduct"
                app:layout_constraintStart_toEndOf="@id/imageViewScanProduct"
                app:layout_constraintTop_toBottomOf="@id/textViewScanProductName" />
            <EditText
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_1c1839_1"
                android:id="@id/textViewScanProductMrpPrice"
                android:background="@drawable/edit_bg_black_border"
                android:padding="3.0dip"
                android:layout_width="100.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="@dimen/dimen_10"
                android:maxLength="7"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:drawableEnd="@drawable/ic_dropdown"
                app:layout_constraintBottom_toBottomOf="@id/imageViewScanProduct"
                app:layout_constraintStart_toEndOf="@id/textViewScanProductMrpUnit"
                app:layout_constraintTop_toBottomOf="@id/textViewScanProductName" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_1c1839_1"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:text="/Unit"
                app:layout_constraintBottom_toBottomOf="@id/imageViewScanProduct"
                app:layout_constraintStart_toEndOf="@id/textViewScanProductMrpPrice"
                app:layout_constraintTop_toBottomOf="@id/textViewScanProductName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@id/unitLayout"
            android:visibility="gone"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productDetails">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/btnMinus"
                android:background="@drawable/drawable_left_corner_2392ff"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_remove_scan_product" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:background="@color/color_b4c8dc"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="@dimen/dimen_1"
                app:layout_constraintEnd_toStartOf="@id/btnPlus"
                app:layout_constraintStart_toEndOf="@id/btnMinus"
                app:layout_constraintTop_toTopOf="@id/btnMinus" />
            <View
                android:background="@color/color_b4c8dc"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="@dimen/dimen_1"
                app:layout_constraintBottom_toBottomOf="@id/btnMinus"
                app:layout_constraintEnd_toStartOf="@id/btnPlus"
                app:layout_constraintStart_toEndOf="@id/btnMinus" />
            <EditText
                android:textSize="@dimen/dimen_18sp"
                android:textColor="@color/color_1c1839_1"
                android:gravity="end|center"
                android:id="@id/product_quantity"
                android:background="@null"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="@dimen/dimen_0"
                android:layout_marginRight="@dimen/dimen_1"
                android:singleLine="true"
                android:inputType="number"
                android:imeOptions="actionDone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/productQuantityUnit"
                app:layout_constraintStart_toEndOf="@id/btnMinus"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/color_1c1839_1"
                android:gravity="start|center"
                android:id="@id/productQuantityUnit"
                android:background="@color/transparent"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="@dimen/dimen_0"
                android:layout_marginLeft="@dimen/dimen_1"
                android:text="@string/units"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnPlus"
                app:layout_constraintStart_toEndOf="@id/product_quantity"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/btnPlus"
                android:background="@drawable/drawable_right_corner_2392ff"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:background="@drawable/ic_add_scan_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/color_1c1839_1"
            android:id="@id/textViewSelectRequestType"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:text="@string/select_request_type"
            android:maxLines="4"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintBottom_toBottomOf="@id/LayoutRequestType"
            app:layout_constraintEnd_toStartOf="@id/LayoutRequestType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/LayoutRequestType" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/LayoutRequestType"
            android:background="@drawable/spinner_box_bg"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewSelectRequestType"
            app:layout_constraintTop_toBottomOf="@id/unitLayout">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@id/spinnerRequestType"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/requestTypeSpinnerImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_centerVertical="true"
                app:layout_constraintBottom_toBottomOf="@id/spinnerRequestType"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/spinnerRequestType"
                app:srcCompat="@drawable/ic_down_arrow" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center_vertical"
            android:id="@id/layoutDateAndMonth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            app:layout_constraintTop_toBottomOf="@id/LayoutRequestType">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/textViewPkm"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/color_1c1839_1"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:text="@string/manufacturing_nmonth"
                    android:fontFamily="@font/sf_pro_display_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/txtDealerDiscLabel"
                    android:paddingLeft="@dimen/dimen_5"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_45"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_info" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/LayoutMonthSpinner"
                android:background="@drawable/spinner_box_bg"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewPkm"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@id/spinnerMonth"
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:dropDownWidth="fill_parent"
                    android:spinnerMode="dropdown"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_centerVertical="true"
                    app:layout_constraintBottom_toBottomOf="@id/LayoutMonthSpinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/LayoutMonthSpinner"
                    app:srcCompat="@drawable/ic_down_arrow" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center_vertical"
            android:id="@id/layoutDisclaimer"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginBottom="@dimen/dimen_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDateAndMonth">
            <TextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="#ffff2e2e"
                android:ellipsize="end"
                android:id="@id/textViewDisclaimer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="* Returns not allowed after 6 months from Expiry date"
                android:maxLines="2"
                android:fontFamily="@font/sf_pro_display_medium"
                android:justificationMode="inter_word"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/color_2392ff"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutMainData">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_18sp"
            android:textColor="@color/color_2392ff"
            android:gravity="center"
            android:id="@id/cancelBtn"
            android:background="@color/white"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginBottom="@dimen/dimen_2"
            android:text="@string/cancel"
            android:fontFamily="@font/sf_pro_display_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/submitBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/submitBtn"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:text="@string/confirm"
            android:fontFamily="@font/sf_pro_display_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cancelBtn"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>