<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="#ffeaeef8"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@id/toolbar"
            android:background="@color/color_2392ff"
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            app:contentInsetLeft="0.0dip"
            app:contentInsetStart="0.0dip"
            app:contentInsetStartWithNavigation="0.0dip"
            app:navigationIcon="?homeAsUpIndicator"
            app:popupTheme="@style/AppTheme"
            app:theme="@style/ToolbarColoredWhiteArrow">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Day Dashboard"
                    android:lineSpacingExtra="9.0sp" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@id/tv_kpi_title"
            android:background="@color/color_2392ff"
            android:padding="7.0dip"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_margin="3.0dip"
            android:text="Sales"
            android:layout_below="@id/toolbar"
            android:lineSpacingExtra="9.0sp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:textAlignment="textStart" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:weightSum="4.8"
            android:minHeight="@dimen/dimen_30"
            android:layout_below="@id/tv_kpi_title">
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff091e42"
                android:layout_gravity="center"
                android:id="@id/headerTextView"
                android:background="#ffdce5ed"
                android:padding="3.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="Brand Name"
                android:layout_weight="1.8"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAlignment="center" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff091e42"
                android:layout_gravity="center"
                android:id="@id/hd_txt_tgt"
                android:background="#ffdce5ed"
                android:padding="3.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1.0dip"
                android:text="Tgt"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAlignment="center" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff091e42"
                android:layout_gravity="center"
                android:id="@id/hd_txt_ach"
                android:background="#ffdce5ed"
                android:padding="3.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1.0dip"
                android:layout_marginRight="1.0dip"
                android:text="Ach"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAlignment="center" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff091e42"
                android:layout_gravity="center"
                android:background="#ffdce5ed"
                android:padding="3.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="Ach%"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/linearLayout3"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:weightSum="100.0"
            android:minHeight="@dimen/dimen_30">
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff091e42"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#ffdce5ed"
                android:padding="3.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="Date"
                android:layout_weight="25.0"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAlignment="center" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff091e42"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#ffdce5ed"
                android:padding="3.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1.0dip"
                android:text="Tgt"
                android:layout_weight="20.0"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAlignment="center" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff091e42"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#ffdce5ed"
                android:padding="3.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1.0dip"
                android:layout_marginRight="1.0dip"
                android:text="Ach"
                android:layout_weight="20.0"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAlignment="center" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff091e42"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#ffdce5ed"
                android:padding="3.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="No. of Bills"
                android:layout_weight="20.0"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAlignment="center" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff091e42"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#ffdce5ed"
                android:padding="3.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1.0dip"
                android:text="Ach%"
                android:layout_weight="15.0"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textAlignment="center" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/rv_day_kpis"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <TextView
        android:textSize="@dimen/dimen_20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@id/tx_ndf"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Data Found"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sf_pro_display_bold" />
</RelativeLayout>