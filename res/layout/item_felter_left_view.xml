<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutLefFilterView"
        android:background="@drawable/drawable_fff"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_12"
        android:paddingRight="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_12"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/color_1c1839_1"
            android:id="@id/textViewFilterLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintBottom_toBottomOf="@id/layoutIndicater"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/layoutIndicater" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutIndicater"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginStart="@dimen/dimen_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewFilterLeft"
            app:layout_constraintTop_toTopOf="parent">
            <View
                android:id="@id/feftfilterSelectedIndicator"
                android:background="@drawable/drawable_oral_shap_00a41a"
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_10"
                app:layout_constraintBottom_toBottomOf="@id/imageViewDeleteSelectedItem"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageViewDeleteSelectedItem" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/imageViewDeleteSelectedItem"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close_black" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:background="@color/color_e6eaf4"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutLefFilterView" />
</androidx.constraintlayout.widget.ConstraintLayout>