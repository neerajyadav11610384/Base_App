<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5.0dip"
    android:layout_marginRight="5.0dip"
    android:layout_marginBottom="5.0dip"
    android:elevation="10.0dip"
    app:cardCornerRadius="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/activation_lyt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@id/promo_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/promo_img"
                android:layout_width="fill_parent"
                android:layout_height="180.0dip"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/banner_placeholder" />
            <LinearLayout
                android:layout_gravity="center|right|top"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35.0dip"
                android:layout_marginRight="20.0dip">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/orderval_layout"
                    android:background="@drawable/blue_rounded_corner"
                    android:padding="5.0dip"
                    android:layout_width="180.0dip"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="14.0sp"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:id="@id/your_order_value"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_weight="6.0"
                        android:fontFamily="@font/sf_pro_display_regular" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:id="@id/live_counter"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text=" 1200"
                        android:layout_weight="4.0"
                        android:fontFamily="@font/sf_pro_display_bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/earn_layout"
                    android:background="@drawable/blue_rounded_corner"
                    android:padding="5.0dip"
                    android:layout_width="180.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="14.0sp"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:id="@id/earned_points_msg"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="sfsafnlsafnlsanfnsanglasnglgas"
                        android:maxLines="2"
                        android:layout_weight="6.0"
                        android:fontFamily="@font/sf_pro_display_regular" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:id="@id/earnedpoints"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="4.0"
                        android:fontFamily="@font/unipay_regular" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:background="@color/dark_moderate_lime_green"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="16.0sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/view_offer"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:text="View Offer"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_regular" />
                <View
                    android:background="@color/white"
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="16.0sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:text="Buy"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_regular" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>