<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/cl_parent"
    android:background="@drawable/light_gray_rounded_corner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/color_42526e"
            android:ellipsize="end"
            android:id="@id/textViewProductName"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:maxLines="2"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/textViewProductName"
            app:layout_constraintTop_toBottomOf="@id/textViewProductName">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="#ffa09e9e"
                    android:id="@id/unitTextViewSI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNIT" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/ll_UnitValue"
                    android:background="@drawable/edit_bg_black_border"
                    android:paddingRight="8.0dip"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="50.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_marginRight="@dimen/dimen_2">
                    <EditText
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/textViewUnitsValue"
                        android:padding="1.0dip"
                        android:clickable="true"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:singleLine="true"
                        android:maxLength="7"
                        android:editable="false"
                        android:inputType="number"
                        android:imeOptions="actionDone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="#ffa09e9e"
                    android:id="@id/textViewMrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MRP"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@id/textViewMrpValue"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginStart="@dimen/dimen_5" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/edit_bg_black_border_disabled"
                    android:paddingRight="2.0dip"
                    android:layout_width="60.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_marginRight="@dimen/dimen_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textViewMrp"
                    app:layout_constraintTop_toTopOf="parent">
                    <EditText
                        android:enabled="false"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/textViewScanProductMrpPrice"
                        android:padding="1.0dip"
                        android:focusable="false"
                        android:layout_width="50.0dip"
                        android:layout_height="30.0dip"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:maxLength="7"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="#ffa09e9e"
                    android:id="@id/textViewExpLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXP"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/edit_bg_black_border_disabled"
                    android:layout_width="80.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_marginRight="@dimen/dimen_2">
                    <EditText
                        android:enabled="false"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/textViewScanProductExp"
                        android:padding="1.0dip"
                        android:focusable="false"
                        android:layout_width="70.0dip"
                        android:layout_height="30.0dip"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:maxLength="10"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="2.0dip"
                android:paddingRight="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="#ffa09e9e"
                    android:id="@id/textViewMrpFinalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VAL" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@id/textViewFinalMrpValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginRight="4.0dip"
                    android:text="123456"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_marginEnd="5.0dip" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>