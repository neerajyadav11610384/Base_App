<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:orientation="vertical"
    android:id="@id/lyt_coordinate"
    android:background="#ffe6eaf4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@id/appBarLayout"
        android:background="@color/transparent"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@id/collapsing_toolbar"
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways|snap">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/lyt_new_outlet"
                    android:background="@color/white"
                    android:padding="@dimen/dimen_22"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/dimen_4">
                    <ImageView
                        android:id="@id/img_outlet"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_marginEnd="@dimen/dimen_16"
                        app:srcCompat="@drawable/ic_outlet"
                        app:tint="@color/color_2392ff" />
                    <TextView
                        android:textSize="16.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff1c1839"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_outlet"
                        android:layout_toEndOf="@id/img_outlet"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/lyt_beat_name"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@id/rv_calender"
                        android:background="#ffe6e6e6"
                        android:padding="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:reverseLayout="false" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@id/layout_select_rsp"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_60">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_corner_task"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="@dimen/dimen_4">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_rs"
                                android:lineSpacingExtra="7.0sp"
                                android:layout_marginStart="@dimen/dimen_16"
                                fontFamily="\@fonts/sf_pro_display_medium" />
                            <RelativeLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginEnd="@dimen/dimen_16">
                                <TextView
                                    android:textSize="16.0sp"
                                    android:textStyle="normal"
                                    android:textColor="#ff1c1839"
                                    android:gravity="center_vertical"
                                    android:id="@id/tv_rsp_name_list"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:lineSpacingExtra="5.0sp"
                                    android:paddingStart="@dimen/dimen_8"
                                    fontFamily="\@fonts/sf_pro_display_medium" />
                                <Spinner
                                    android:layout_gravity="center"
                                    android:id="@id/sp_rsp_name"
                                    android:background="@android:color/transparent"
                                    android:visibility="invisible"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:spinnerMode="dropdown"
                                    android:layout_marginStart="5.0dip"
                                    android:overlapAnchor="false" />
                                <ImageView
                                    android:layout_gravity="center"
                                    android:id="@id/img_rsp_drop_down"
                                    android:visibility="visible"
                                    android:layout_width="@dimen/dimen_16"
                                    android:layout_height="@dimen/dimen_16"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    app:srcCompat="@drawable/ic_rs_dropdown" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@id/layout_select_tl"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_50">
                        <TextView
                            android:textSize="16.0sp"
                            android:textStyle="normal"
                            android:textColor="#ff758da6"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salesman List :"
                            android:lineSpacingExtra="7.0sp"
                            android:layout_marginStart="@dimen/dimen_16"
                            fontFamily="\@fonts/sf_pro_display_medium" />
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginEnd="@dimen/dimen_16">
                            <TextView
                                android:textSize="16.0sp"
                                android:textStyle="normal"
                                android:textColor="#ff1c1839"
                                android:gravity="center_vertical"
                                android:id="@id/tv_tl_name_list"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:lineSpacingExtra="5.0sp"
                                android:paddingStart="@dimen/dimen_8"
                                fontFamily="\@fonts/sf_pro_display_medium" />
                            <Spinner
                                android:layout_gravity="center"
                                android:id="@id/sp_tl_name"
                                android:background="@android:color/transparent"
                                android:visibility="invisible"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:spinnerMode="dropdown"
                                android:layout_marginStart="5.0dip"
                                android:overlapAnchor="false" />
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@id/img_tl_drop_down"
                                android:visibility="visible"
                                android:layout_width="@dimen/dimen_16"
                                android:layout_height="@dimen/dimen_16"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                app:srcCompat="@drawable/ic_dropdown_blue" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@id/layout_select_beat"
                        android:background="@color/white"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_50">
                        <TextView
                            android:textSize="16.0sp"
                            android:textStyle="normal"
                            android:textColor="#ff758da6"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beat :"
                            android:lineSpacingExtra="7.0sp"
                            android:layout_marginStart="@dimen/dimen_16"
                            fontFamily="\@fonts/sf_pro_display_medium" />
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginEnd="@dimen/dimen_16">
                            <TextView
                                android:textSize="16.0sp"
                                android:textStyle="normal"
                                android:textColor="#ff1c1839"
                                android:gravity="center_vertical"
                                android:id="@id/tv_beat_name_list"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:lineSpacingExtra="5.0sp"
                                android:paddingStart="@dimen/dimen_8"
                                fontFamily="\@fonts/sf_pro_display_medium" />
                            <Spinner
                                android:layout_gravity="center"
                                android:id="@id/sp_beat_name"
                                android:background="@android:color/transparent"
                                android:visibility="invisible"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:spinnerMode="dropdown"
                                android:layout_marginStart="5.0dip"
                                android:overlapAnchor="false" />
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@id/img_drop_down"
                                android:visibility="invisible"
                                android:layout_width="@dimen/dimen_16"
                                android:layout_height="@dimen/dimen_16"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                app:srcCompat="@drawable/ic_dropdown_blue" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@id/day_summary"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/dimen_8">
                    <RelativeLayout
                        android:id="@id/rl1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginTop="12.0dip"
                        android:layout_marginRight="16.0dip">
                        <TextView
                            android:textSize="16.0sp"
                            android:textStyle="bold"
                            android:textColor="#ff091e42"
                            android:id="@id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day Summary"
                            android:lineSpacingExtra="0.0sp"
                            android:layout_alignParentStart="true"
                            fontFamily="\@fonts/sf_pro_display_medium" />
                        <TextView
                            android:textSize="14.0sp"
                            android:textStyle="normal"
                            android:textColor="#ff2392ff"
                            android:id="@id/view_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View More"
                            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                            android:layout_alignParentRight="true"
                            android:lineSpacingExtra="0.0sp"
                            fontFamily="\@fonts/sf_pro_display_regular" />
                    </RelativeLayout>
                    <HorizontalScrollView
                        android:id="@id/hr_scroll_view1"
                        android:visibility="visible"
                        android:scrollbars="none"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:fillViewport="true"
                        android:layout_below="@id/rl1">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@id/lyt_day_summary1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent" />
                    </HorizontalScrollView>
                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <include
        layout="@layout/bottom_sheet" />
    <include
        layout="@layout/bottom_sheet_no_data" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>