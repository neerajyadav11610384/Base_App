<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:background="@drawable/dialog_unipay_advance_pay_top_corner_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50"
        android:elevation="@dimen/dimen_5"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold"
            android:textColor="@color/color_2392ff"
            android:gravity="center"
            android:id="@id/textViewSubCategories"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:text="@string/sub_categories"
            android:layout_marginStart="@dimen/dimen_10"
            app:fontFamily="@font/sf_pro_display_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewBrand"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@id/viewSubCategoriesIndicator"
            android:background="@color/color_2392ff"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_2"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textViewSubCategories"
            app:layout_constraintStart_toStartOf="@id/textViewSubCategories" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold"
            android:textColor="@color/color_2392ff"
            android:gravity="center"
            android:id="@id/textViewBrand"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:text="@string/brands"
            android:layout_marginEnd="@dimen/dimen_10"
            app:fontFamily="@font/sf_pro_display_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewSubCategories"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@id/viewBrandIndicator"
            android:background="@color/color_2392ff"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_2"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textViewBrand"
            app:layout_constraintStart_toStartOf="@id/textViewBrand" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recyclerViewBrand"
        android:paddingBottom="@dimen/dimen_60"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginStart="@dimen/dimen_5"
        android:layout_marginEnd="@dimen/dimen_5"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:spanCount="5" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/categoriesRecyclerView"
        android:paddingBottom="@dimen/dimen_60"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginStart="@dimen/dimen_5"
        android:layout_marginEnd="@dimen/dimen_5"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader" />
</androidx.constraintlayout.widget.ConstraintLayout>