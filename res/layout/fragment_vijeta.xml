<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:id="@id/progress_bar"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_centerInParent="true" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="18.0sp"
        android:id="@id/no_item_msg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_items_found"
        android:layout_centerInParent="true"
        android:fontFamily="@font/sf_pro_display_regular" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10.0dip">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:id="@id/cardview_lyt"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            cardview:cardBackgroundColor="@color/white"
            cardview:cardCornerRadius="5.0dip">
            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0sp"
                    android:gravity="right"
                    android:id="@id/moc_date_info"
                    android:paddingTop="5.0dip"
                    android:paddingRight="5.0dip"
                    android:paddingBottom="5.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
                <GridView
                    android:gravity="center"
                    android:id="@id/grid_chartdata"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:listSelector="@color/transparent"
                    android:horizontalSpacing="5.0dip"
                    android:verticalSpacing="5.0dip"
                    android:columnWidth="100.0dip"
                    android:numColumns="auto_fit" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <GridView
            android:gravity="center"
            android:id="@id/grid_month"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="8.0dip"
            android:listSelector="@drawable/vijeta_btn_bg"
            android:horizontalSpacing="5.0dip"
            android:verticalSpacing="5.0dip"
            android:columnWidth="100.0dip"
            android:numColumns="auto_fit" />
    </LinearLayout>
</RelativeLayout>