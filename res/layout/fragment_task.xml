<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/rv_tasks"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10"
    app:layout_constraintTop_toBottomOf="@id/textViewTaskHeader"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@id/lyt_task_header"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:textSize="16.0sp"
            android:textStyle="normal"
            android:textColor="#ff41586e"
            android:padding="@dimen/dimen_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_ach_info"
            android:lineSpacingExtra="8.0sp"
            fontFamily="\@fonts/sf_pro_display_medium" />
        <TextView
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:gravity="end"
            android:id="@id/tv_task_info"
            android:padding="@dimen/dimen_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:lineSpacingExtra="9.0sp"
            android:layout_alignParentEnd="true"
            fontFamily="\@fonts/sf_pro_display_regular" />
    </RelativeLayout>
    <ProgressBar
        android:id="@id/progressBar_status"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_10"
        android:max="100"
        android:progress="0"
        android:indeterminate="false"
        android:layout_below="@id/lyt_task_header"
        android:progressTint="#ff27ae60"
        android:progressBackgroundTint="#ffb4c8dc"
        style="?android:progressBarStyleHorizontal" />
    <androidx.core.widget.NestedScrollView
        android:id="@id/nested_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lyt_exit_outlet"
        android:layout_below="@id/progressBar_status">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/rcy_perform_task"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@id/lyt_task_timer"
                android:background="@color/white"
                android:padding="@dimen/dimen_16"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10">
                <TextView
                    android:textSize="16.0sp"
                    android:textStyle="normal"
                    android:textColor="#ff1c1839"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image Analytics Recommendation \npacks will be available in"
                    android:maxLines="2"
                    android:lineSpacingExtra="8.0sp"
                    fontFamily="\@fonts/sf_pro_display_medium" />
                <TextView
                    android:textSize="16.0sp"
                    android:textStyle="bold"
                    android:textColor="#ff2392ff"
                    android:gravity="end"
                    android:id="@id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:lineSpacingExtra="9.0sp"
                    android:layout_alignParentEnd="true"
                    fontFamily="\@fonts/sf_pro_display_regular" />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/rcy_tasks"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@id/lyt_exit_outlet"
        android:background="#fff9fbff"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@id/img_logout"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_exit" />
        <TextView
            android:textSize="16.0sp"
            android:textStyle="normal"
            android:textColor="#ff41586f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text="Exit Store"
            android:layout_toRightOf="@id/img_logout"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="8.0sp"
            fontFamily="\@fonts/sf_pro_display_medium" />
    </RelativeLayout>
    <TextView
        android:id="@id/no_data_found"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No mission available for the store"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <include
        android:visibility="gone"
        layout="@layout/task_exit_bottomsheet" />
</RelativeLayout>