                    app:layout_constraintEnd_toStartOf="@id/textViewDSERequestNoValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/white"
                    android:gravity="end"
                    android:id="@id/textViewDSERequestNoValue"
                    android:padding="@dimen/dimen_5"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:layout_marginStart="@dimen/dimen_20"
                    app:layout_constraintBottom_toBottomOf="@id/textViewDSERequestNo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textViewDSERequestNo"
                    app:layout_constraintTop_toTopOf="@id/textViewDSERequestNo" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
