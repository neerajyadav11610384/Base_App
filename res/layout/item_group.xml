<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_6"
    app:cardCornerRadius="4.0dip"
    app:cardPreventCornerOverlap="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="@color/color_1c1839_1"
                android:gravity="center|left"
                android:id="@id/heading"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_outlet"
                android:drawablePadding="@dimen/dimen_8"
                android:layout_alignParentLeft="true" />
            <ImageView
                android:id="@id/img_up_down_arrow"
                android:padding="@dimen/dimen_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_arrow_top"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip">
            <TextView
                android:textSize="16.0dip"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:gravity="center|left"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content"
                android:text="@string/no_of_bill"
                android:layout_alignParentLeft="true" />
            <TextView
                android:textSize="16.0dip"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:id="@id/no_of_bill"
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:hint="@string/dmyAmt"
                android:layout_alignParentRight="true"
                android:textDirection="rtl" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/rel_bill_rec"
            android:background="@drawable/btn_border"
            android:padding="2.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/bill_recyclerview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/tcv_rel"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.0sp"
                android:textStyle="normal"
                android:textColor="@color/color_41586f"
                android:gravity="center|left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/t_coll_val"
                android:layout_toLeftOf="@id/lyt_value"
                android:layout_alignParentLeft="true" />
            <LinearLayout
                android:gravity="center|right"
                android:orientation="horizontal"
                android:id="@id/lyt_value"
                android:layout_width="wrap_content"
                android:layout_height="16.0dip"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_alignParentRight="true">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/color_1c1839_1"
                    android:layout_width="wrap_content"
                    android:layout_height="16.0sp"
                    android:text="@string/rs_symbol" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/tc_val"
                    android:layout_width="wrap_content"
                    android:layout_height="16.0sp"
                    android:text="@string/dmyAmt" />
            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/cash_lebel"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.cardview.widget.CardView>