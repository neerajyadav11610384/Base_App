<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:background="@color/dark_blue"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#ff242948"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/live_order_icon"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            app:srcCompat="@drawable/ioc_placed" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="8.0sp"
            android:textColor="@color/white"
            android:id="@id/live_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip"
            android:text="PLACED" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#ff2d3357"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="6.0">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8.0">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="11.0sp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@id/live_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:maxLines="1" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="12.0sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:id="@id/live_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/live_order_count_lyt"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2.0">
            <androidx.appcompat.widget.AppCompatImageView
                android:textSize="12.0sp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="270.0"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_white_24dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="12.0sp"
                android:textColor="@color/white"
                android:gravity="left"
                android:id="@id/no_of_orders"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="0.5dip"
        android:layout_height="fill_parent" />
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/live_order_close"
        android:background="#ff2d3357"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_action_clear" />
    </LinearLayout>
</LinearLayout>