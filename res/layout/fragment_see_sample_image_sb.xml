<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:background="#ffeaeef8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_1"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginBottom="@dimen/dimen_12"
            app:cardCornerRadius="@dimen/dimen_5">
            <LinearLayout
                android:orientation="vertical"
                android:background="#ffeaeef8"
                android:padding="@dimen/dimen_10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/gImg_reclrView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_6">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dimen_16"
                        android:layout_height="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:src="@drawable/ic_attendence_check" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff32ba7c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do’s"
                        android:lineSpacingExtra="0.0sp" />
                </LinearLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:layout_gravity="center"
                        android:id="@id/tv_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:lineSpacingExtra="7.0sp"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:id="@id/tv_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Photo should be clear"
                        android:layout_toRightOf="@id/tv_no"
                        android:lineSpacingExtra="7.0sp"
                        android:textAlignment="textStart"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:layout_gravity="center"
                        android:id="@id/tv_no2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:lineSpacingExtra="7.0sp"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:id="@id/tv_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Entire shopboard should be visible"
                        android:layout_toRightOf="@id/tv_no2"
                        android:lineSpacingExtra="7.0sp"
                        android:textAlignment="textStart"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:layout_gravity="center"
                        android:id="@id/tv_no3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:lineSpacingExtra="7.0sp"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:id="@id/tv_txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Shop name should be prominent and easily readable"
                        android:layout_toRightOf="@id/tv_no3"
                        android:lineSpacingExtra="7.0sp"
                        android:textAlignment="textStart"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:background="#ffeaeef8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginBottom="@dimen/dimen_12"
            app:cardCornerRadius="@dimen/dimen_5">
            <LinearLayout
                android:orientation="vertical"
                android:background="#ffeaeef8"
                android:padding="@dimen/dimen_10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/bImg_reclrView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_6">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dimen_16"
                        android:layout_height="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:src="@drawable/ic_attendence_error" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#fff95649"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don’t"
                        android:lineSpacingExtra="0.0sp" />
                </LinearLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:layout_gravity="center"
                        android:id="@id/tv_dont_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:lineSpacingExtra="7.0sp"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:id="@id/tv_dont_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Do not take blurred or partial picture of the shopboard"
                        android:layout_toRightOf="@id/tv_dont_no"
                        android:lineSpacingExtra="7.0sp"
                        android:textAlignment="textStart"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:layout_gravity="center"
                        android:id="@id/tv_dont_no2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:lineSpacingExtra="7.0sp"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:id="@id/tv_dont_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Do not take picture such that shop name is too small"
                        android:layout_toRightOf="@id/tv_dont_no2"
                        android:lineSpacingExtra="7.0sp"
                        android:textAlignment="textStart"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:layout_gravity="center"
                        android:id="@id/tv_dont_no3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:lineSpacingExtra="7.0sp"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="normal"
                        android:textColor="#ff42526e"
                        android:id="@id/tv_dont_txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Do not take picture at slanting angles where text is unreadable"
                        android:layout_toRightOf="@id/tv_dont_no3"
                        android:lineSpacingExtra="7.0sp"
                        android:textAlignment="textStart"
                        fontFamily="\@fonts/sf_pro_display_regular" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>