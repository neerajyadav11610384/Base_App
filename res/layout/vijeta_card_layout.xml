<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:clickable="false"
        android:duplicateParentState="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:elevation="10.0dip"
        cardview:cardBackgroundColor="@color/white"
        cardview:cardCornerRadius="10.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="10.0dip"
            android:clickable="false"
            android:duplicateParentState="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@id/title"
                android:paddingLeft="10.0dip"
                android:paddingTop="5.0dip"
                android:paddingBottom="5.0dip"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/sf_pro_display_bold" />
            <GridView
                android:gravity="center"
                android:id="@id/grid_chartdata"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8.0dip"
                android:listSelector="@color/transparent"
                android:horizontalSpacing="5.0dip"
                android:verticalSpacing="5.0dip"
                android:columnWidth="100.0dip"
                android:numColumns="auto_fit" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/overlay_lyt"
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </androidx.cardview.widget.CardView>
</LinearLayout>