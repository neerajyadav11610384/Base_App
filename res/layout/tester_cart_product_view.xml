<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_5"
    android:layout_marginBottom="@dimen/dimen_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_8"
        android:layout_marginBottom="@dimen/dimen_6"
        app:cardCornerRadius="@dimen/dimen_3"
        app:cardElevation="@dimen/dimen_0"
        app:cardUseCompatPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/parent"
            android:paddingLeft="@dimen/dimen_8"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/dimen_3">
                    <FrameLayout
                        android:layout_gravity="center"
                        android:id="@id/frame_item"
                        android:background="@drawable/layout_border"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="@dimen/dimen_5">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@id/img_prodcut_thumb"
                            android:background="?selectableItemBackgroundBorderless"
                            android:padding="@dimen/dimen_5"
                            android:layout_width="96.0dip"
                            android:layout_height="96.0dip" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="@dimen/dimen_14sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="bottom|center"
                            android:id="@id/stock_info"
                            android:paddingLeft="@dimen/dimen_5"
                            android:paddingRight="@dimen/dimen_5"
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/dimen_25"
                            android:text=""
                            android:fontFamily="@font/sf_pro_display_regular" />
                        <RelativeLayout
                            android:id="@id/layoutViewDiscount"
                            android:background="@drawable/drawable_circle_ff5f5f"
                            android:padding="@dimen/dimen_3"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="@dimen/dimen_12sp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:id="@id/textViewViewDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3"
                                android:layout_marginBottom="@dimen/dimen_3"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/dimen_3"
                                android:layout_marginEnd="@dimen/dimen_3" />
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginStart="@dimen/dimen_5">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/color_1c1839_1"
                        android:ellipsize="end"
                        android:id="@id/product_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_24"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:text="Product Name Product Name Product Name Product Name Product Name Product Name  Product Name"
                        android:maxLines="2"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/sf_pro_display_medium" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/remove_from_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@drawable/ic_delete" />
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:id="@id/price_lyt"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_name">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="@dimen/dimen_16sp"
                                android:textColor="@color/color_1c1839_1"
                                android:layout_gravity="center"
                                android:id="@id/final_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16.0dip"
                                android:fontFamily="@font/sf_pro_display_regular" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="@dimen/dimen_16sp"
                                android:textColor="@color/color_41586f"
                                android:layout_gravity="center"
                                android:id="@id/product_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sf_pro_display_regular" />
                        </LinearLayout>
                    </RelativeLayout>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@id/img_shikhar_logo"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:src="@drawable/ic_logo_shikhar"
                        android:layout_below="@id/price_lyt" />
                    <LinearLayout
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:id="@id/lyt_plus_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:layout_below="@id/price_lyt"
                        android:layout_alignParentEnd="true">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@id/rl_edit_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:gravity="center"
                                    android:id="@id/btnMinusLinear"
                                    android:background="@drawable/background_border_color_2392ff"
                                    android:padding="@dimen/dimen_9"
                                    android:layout_width="@dimen/dimen_40"
                                    android:layout_height="@dimen/dimen_40">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@id/btnMinus"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        app:srcCompat="@drawable/ic_minus" />
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_5"
                                    android:layout_marginRight="@dimen/dimen_5"
                                    android:minWidth="70.0dip"
                                    android:layout_centerInParent="true">
                                    <EditText
                                        android:textSize="@dimen/dimen_18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/color_1c1839_1"
                                        android:gravity="center"
                                        android:id="@id/product_quantity"
                                        android:background="@color/transparent"
                                        android:paddingLeft="@dimen/dimen_8"
                                        android:paddingRight="@dimen/dimen_8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/dimen_40"
                                        android:text="123456"
                                        android:maxLength="6"
                                        android:inputType="number"
                                        android:imeOptions="actionDone"
                                        android:fontFamily="@font/sf_pro_display_bold" />
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textSize="@dimen/dimen_16sp"
                                        android:textColor="@color/color_1c1839_1"
                                        android:layout_gravity="center"
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/units_new"
                                        android:fontFamily="@font/sf_pro_display_regular" />
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:id="@id/btnPlusLinear"
                                    android:background="@drawable/background_border_color_2392ff"
                                    android:padding="@dimen/dimen_9"
                                    android:layout_width="@dimen/dimen_40"
                                    android:layout_height="@dimen/dimen_40"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@id/btnPlus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_add" />
                                </LinearLayout>
                            </LinearLayout>
                            <ProgressBar
                                android:layout_gravity="center"
                                android:id="@id/addcart_progress_bar"
                                android:visibility="gone"
                                android:layout_width="@dimen/dimen_36"
                                android:layout_height="@dimen/dimen_36"
                                android:indeterminate="true"
                                android:indeterminateDrawable="@drawable/bg_progress_bar"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@id/offerLinear"
                        android:background="@drawable/bg_saved"
                        android:paddingLeft="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_3"
                        android:paddingRight="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_3"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dimen_16"
                            android:layout_height="@dimen/dimen_16"
                            android:layout_marginRight="@dimen/dimen_5"
                            app:srcCompat="@drawable/ic_saved" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="@dimen/dimen_14sp"
                            android:textColor="@color/color_1c1839_1"
                            android:id="@id/savings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_display_medium" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/offerappliedRecyclerView"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/offerAvailableRecyclerView"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>