<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/mainLayoutCoachMark"
    android:background="@color/coach_marks_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/coach_marks_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/sub_category_item_lyt"
            android:background="@drawable/drawable_2392ff_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dimen_84"
            android:minHeight="@dimen/dimen_32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/sub_category_name"
                android:paddingTop="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="IQ Packs"
                android:fontFamily="@font/sf_pro_display_regular"
                android:paddingStart="@dimen/dimen_14"
                android:paddingEnd="@dimen/dimen_14" />
        </LinearLayout>
        <LinearLayout
            android:id="@id/imageViewFinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/finger_icon" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now you can place order for Booster Earning Packs and earn incentive"
            android:layout_marginStart="@dimen/dimen_30"
            android:layout_marginEnd="@dimen/dimen_30"
            app:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewFinger" />
    </LinearLayout>
</LinearLayout>