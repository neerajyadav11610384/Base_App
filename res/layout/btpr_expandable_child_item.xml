<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutBTPRSlot"
        android:background="@drawable/btpr_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:elevation="5.0dip"
        app:layout_constraintBottom_toTopOf="@id/textViewBTPRChild"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="#fff4ff55"
            android:gravity="center"
            android:id="@id/textViewFrom"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="From"
            android:layout_marginStart="@dimen/dimen_10"
            app:layout_constraintEnd_toStartOf="@id/textViewTo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="#fff4ff55"
            android:gravity="center"
            android:id="@id/textViewTo"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:text="TO"
            app:layout_constraintEnd_toStartOf="@id/textViewDiscount"
            app:layout_constraintStart_toEndOf="@id/textViewFrom"
            app:layout_constraintTop_toTopOf="@id/textViewFrom" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="#fff4ff55"
            android:gravity="center"
            android:id="@id/textViewDiscount"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:text="Disc"
            android:layout_marginEnd="@dimen/dimen_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewTo"
            app:layout_constraintTop_toTopOf="@id/textViewFrom" />
        <View
            android:id="@id/viewDivider"
            android:background="@color/white"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_5"
            app:layout_constraintEnd_toEndOf="@id/textViewDiscount"
            app:layout_constraintStart_toStartOf="@id/textViewFrom"
            app:layout_constraintTop_toBottomOf="@id/textViewFrom" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/recyclerViewBTPRSlot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewDivider" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/white"
        android:id="@id/textViewBTPRChild"
        android:background="#ff4990cf"
        android:padding="@dimen/dimen_5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="Activity 1 DESC"
        android:fontFamily="@font/sf_pro_display_medium"
        android:layout_marginStart="6.0dip"
        android:layout_marginEnd="6.0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutBTPRSlot" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recyclerViewBTPRProduct"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>