<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/coordinatorLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/hdrr"
        android:background="@drawable/addblueborders"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_40">
        <TextView
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="Product"
            android:layout_weight="2.0" />
        <View
            android:background="@color/white"
            android:layout_width="@dimen/dimen_1"
            android:layout_height="fill_parent" />
        <TextView
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dimen_6"
            android:text="MRP"
            android:layout_weight="1.0" />
        <LinearLayout
            android:id="@id/lyt_qty_avail"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
            <View
                android:background="@color/white"
                android:layout_width="@dimen/dimen_1"
                android:layout_height="fill_parent" />
            <TextView
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/dimen_6"
                android:text="QTY Avail"
                android:layout_weight="1.0" />
        </LinearLayout>
        <View
            android:background="@color/white"
            android:layout_width="@dimen/dimen_1"
            android:layout_height="fill_parent" />
        <TextView
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/tv_qty_sold"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dimen_6"
            android:text="Qty"
            android:layout_weight="1.0" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/rv_haat_products"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lyt_bottom"
        android:layout_below="@id/hdrr" />
    <ProgressBar
        android:id="@id/progressBar2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="?android:progressBarStyle" />
    <TextView
        android:textColor="#ff616161"
        android:id="@id/no_data_tv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_found_msg"
        android:layout_centerInParent="true" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/lyt_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_40"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@id/textViewCountValue"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data_found_msg"
            android:fontFamily="@font/sf_pro_display_regular"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:minHeight="@dimen/dimen_40">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/tv_save"
                android:background="@drawable/drawable_2392ff_5dp"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginBottom="@dimen/dimen_10"
                android:text="Save"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_regular"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_marginEnd="@dimen/dimen_8"
                android:elevation="@dimen/dimen_2" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/tv_cancel"
                android:background="@drawable/drawable_2392ff_5dp"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginBottom="@dimen/dimen_10"
                android:text="Cancel"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_regular"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginEnd="@dimen/dimen_16"
                android:elevation="@dimen/dimen_2" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>