<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.tabs.TabLayout
        android:id="@id/tabLayout"
        android:layout_width="0.0dip"
        android:layout_height="36.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorHeight="@dimen/dimen_2"
        app:tabTextAppearance="@style/CustomTabTextV1">
        <com.google.android.material.tabs.TabItem
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Action Point" />
        <com.google.android.material.tabs.TabItem
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Store Mission" />
    </com.google.android.material.tabs.TabLayout>
    <View
        android:id="@id/viewTabIndicator"
        android:background="@color/very_dark_green"
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        app:layout_constraintBottom_toBottomOf="@id/tabLayout" />
    <FrameLayout
        android:id="@id/frameLayout"
        android:background="@color/white"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toTopOf="@id/layoutNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutTaskAndSurveyPage"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toTopOf="@id/layoutNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutEteEtsTaTlsd">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutTask"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@id/textViewTaskHeader"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_40"
                android:text="Task(1/2)"
                android:paddingStart="@dimen/dimen_10"
                app:fontFamily="@font/sf_pro_display_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <include
                android:background="@color/color_dce5ed"
                app:layout_constraintTop_toBottomOf="@id/textViewTaskHeader"
                layout="@layout/fragment_task" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutSurvey"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintTop_toBottomOf="@id/layoutTask">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@id/textViewSurveyHeader"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_40"
                android:text="Survey(1/2)"
                android:paddingStart="@dimen/dimen_10"
                app:fontFamily="@font/sf_pro_display_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ExpandableListView
                android:id="@id/survery_recyclerview"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0"
                android:layout_marginBottom="@dimen/dimen_8"
                android:groupIndicator="@null"
                android:divider="@color/white"
                android:dividerHeight="@dimen/dimen_12"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginEnd="@dimen/dimen_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSurveyHeader" />
            <ProgressBar
                android:id="@id/progressBar2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="?android:progressBarStyle" />
            <TextView
                android:textColor="#ff616161"
                android:id="@id/no_data_tv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data_found_msg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutNext"
        android:background="@color/color_2392ff"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_40"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/white"
            android:id="@id/textViewNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageViewNext"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/imageViewNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewNext"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_next_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>