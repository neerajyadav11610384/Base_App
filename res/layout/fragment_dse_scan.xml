<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/color_e6eaf4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/searchLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.hul.sambhav.customview.DelayAutoCompleteTextView
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_758da6"
            android:gravity="center_vertical"
            android:id="@id/dse_search"
            android:background="@drawable/edit_text_white_box_bg"
            android:longClickable="false"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_5"
            android:hint="@string/add_product_by_search_or_scan_barcode"
            android:singleLine="true"
            android:drawablePadding="@dimen/dimen_10"
            android:imeOptions="actionSearch"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginEnd="@dimen/dimen_5"
            app:drawableLeftCompat="@drawable/ic_search"
            app:layout_constraintEnd_toStartOf="@id/scanProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/scanProduct"
            android:background="@drawable/edit_text_white_box_bg"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_0"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginStart="@dimen/dimen_5"
            app:layout_constraintBottom_toBottomOf="@id/dse_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dse_search"
            app:layout_constraintTop_toTopOf="@id/dse_search"
            app:srcCompat="@drawable/ic_barcode_scanner" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recyclerViewScanProduct"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_0"
        android:layout_marginTop="@dimen/dimen_5"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/notesTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchLayout" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_1c1839_1"
        android:id="@id/notesTextView"
        android:background="@color/color_59e9ce"
        android:padding="@dimen/dimen_5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/note_the_return_amount_will_be_credite"
        android:fontFamily="@font/sf_pro_display_medium"
        app:layout_constraintBottom_toTopOf="@id/textViewSubmit"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewScanProduct" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/textViewSubmit"
        android:background="@color/color_2392ff"
        android:padding="@dimen/dimen_10"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_48"
        android:text="@string/submit"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ProgressBar
        android:id="@id/progressBar"
        android:visibility="gone"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>