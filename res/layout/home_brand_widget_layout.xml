<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="65.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/parentLayout"
        android:layout_width="fill_parent"
        android:layout_height="65.0dip">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@id/imageViewall"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="12.0sp"
                android:textStyle="normal"
                android:textColor="#ff42526e"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/all_brands_txt"
                android:background="@drawable/empty_circle_draw"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_5"
                android:text="@string/all_brands"
                android:lineSpacingExtra="0.0sp"
                android:fontFamily="@font/sf_pro_display_medium" />
            <View
                android:background="#0f000000"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center"
            android:id="@id/recyclerviewBrandImage"
            android:paddingLeft="@dimen/dimen_5"
            android:paddingRight="@dimen/dimen_10"
            android:clipToPadding="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>