<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@id/lyt_coordinate"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@id/ll"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_5">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_marginBottom="@dimen/dimen_2">
                <TextView
                    android:textSize="@dimen/dimen_17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@id/tv_blur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:id="@id/thumps_up_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_2"
                    android:layout_marginRight="@dimen/dimen_2"
                    android:layout_toEndOf="@id/tv_blur" />
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/dimen_17sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@id/tv_blur_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.0dip" />
        </LinearLayout>
        <RelativeLayout
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_2"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="@dimen/dimen_17sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@id/tv_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@id/thumps_up_down_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2"
                android:layout_marginRight="@dimen/dimen_2"
                android:layout_toEndOf="@id/tv_light" />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.camera.view.PreviewView
        android:id="@id/previewView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/camera_bottom_sheet"
        android:layout_below="@id/ll" />
    <ImageView
        android:id="@id/img_touch"
        android:visibility="visible"
        android:layout_width="175.0dip"
        android:layout_height="250.0dip"
        android:layout_marginBottom="8.0dip"
        android:src="@drawable/img_touch"
        android:layout_above="@id/rl"
        android:layout_below="@id/fab_close"
        android:layout_centerInParent="true"
        android:contentDescription="@string/preview_area"
        android:importantForAccessibility="no" />
    <TextView
        android:textSize="@dimen/dimen_18sp"
        android:textColor="@color/white"
        android:id="@id/img_best_shot"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="180.0dip"
        android:src="@mipmap/ic_launcher"
        android:text="Best \nShot"
        android:layout_centerInParent="true"
        android:textAllCaps="true" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="center|top"
        android:id="@id/fab_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:src="@drawable/close"
        android:tint="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:alpha="0.9"
        android:tintMode="screen"
        android:backgroundTint="@color/uvv_black"
        app:borderWidth="0.0dip" />
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@id/rl"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_margin="@dimen/dimen_5"
        android:layout_above="@id/camera_bottom_sheet">
        <ImageView
            android:id="@id/minus_iv"
            android:paddingBottom="@dimen/dimen_8"
            android:layout_width="35.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_minus_icon_1" />
        <SeekBar
            android:id="@id/zoomBar"
            android:padding="0.0dip"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_margin="0.0dip"
            android:layout_marginBottom="545.0dip"
            android:max="100"
            android:layout_toLeftOf="@id/plus_iv"
            android:layout_toRightOf="@id/minus_iv"
            android:elevation="2.0dip"
            android:thumbTint="@color/light_blue" />
        <ImageView
            android:id="@id/plus_iv"
            android:paddingBottom="@dimen/dimen_8"
            android:layout_width="35.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_plus_icon"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <FrameLayout
        android:id="@id/frame_lyt_img"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/camera_bottom_sheet">
        <ImageView
            android:id="@id/im_fullimage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/default_img"
            android:adjustViewBounds="true" />
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:id="@id/camera_bottom_sheet"
        android:layout_width="fill_parent"
        android:layout_height="150.0dip"
        android:layout_alignParentBottom="true"
        android:alpha="0.8"
        app:cardBackgroundColor="@color/uvv_black">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="center"
            android:id="@id/img_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            android:layout_marginStart="5.0dip"
            android:elevation="5.0dip"
            android:backgroundTint="@color/white"
            app:backgroundTint="@color/white"
            app:tint="#ff4a4a4a" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="center|left"
            android:id="@id/btn_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flash_off"
            android:layout_marginStart="75.0dip"
            android:tintMode="src_in"
            android:elevation="5.0dip"
            app:backgroundTint="#ffb1aeae"
            app:borderWidth="0.0dip"
            app:tint="@color/white" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="end|center"
            android:id="@id/cl_image_count"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_70"
            android:layout_marginStart="@dimen/dimen_5"
            android:layout_marginEnd="65.0dip">
            <RelativeLayout
                android:background="@drawable/ia_camera_circle_border"
                android:layout_width="56.0dip"
                android:layout_height="56.0dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@id/btn_pic_count"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/gray"
                    app:civ_circle_background_color="@color/gray" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@id/rl_image_count"
                android:background="@drawable/ia_camera_circle_count_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/white"
                    android:id="@id/tv_image_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingStart="@dimen/dimen_5"
                    android:paddingEnd="@dimen/dimen_5" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@id/image_bottom_sheet"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="180.0dip"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/uvv_black">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="right"
            android:id="@id/btn_clear"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="40.0dip"
            android:src="@drawable/delete"
            android:scaleType="center"
            android:tint="#ffe35b51"
            android:tintMode="src_atop"
            app:backgroundTint="#ffe35b51"
            app:maxImageSize="35.0dip"
            app:tint="@android:color/white" />
        <TextView
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:id="@id/tv_image_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:text="" />
        <TextView
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:id="@id/tv_image_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip"
            android:text="" />
        <androidx.cardview.widget.CardView
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="140.0dip">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/rv_image_strip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="16.0sp"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:id="@id/btn_submit"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="@dimen/dimen_32"
                    android:paddingRight="@dimen/dimen_32"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:text="Submit"
                    android:layout_alignParentBottom="true"
                    android:textAllCaps="false" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:id="@id/frame_layout_spl_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/camera_bottom_sheet" />
    <ImageView
        android:id="@id/samp_img"
        android:visibility="gone"
        android:layout_width="200.0dip"
        android:layout_height="300.0dip" />
</RelativeLayout>