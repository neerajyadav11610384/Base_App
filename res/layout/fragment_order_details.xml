<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@id/order_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/very_dark_gray"
                android:id="@id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:text="ORDER ID: 123455555353925kgdskgdskjkhkkkkkkkkhhhhkhkg"
                android:fontFamily="@font/sf_pro_display_bold" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2.0"
                android:layout_below="@id/order_id">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12.0sp"
                        android:textColor="@android:color/darker_gray"
                        android:id="@id/order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Placed on 15 Aug 2016 11:00 AM"
                        android:fontFamily="@font/sf_pro_display_bolditalic" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/item_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="42.0dip"
        android:layout_below="@id/order_info" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/cancel_order"
            android:background="@drawable/red_rounded_corner"
            android:padding="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:text="@string/lbl_cancel_order"
            android:layout_weight="1.0" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/feedback_order"
            android:background="@color/very_dark_green"
            android:padding="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/feedback"
            android:layout_weight="1.0" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/reorder_order"
            android:background="@color/very_dark_green"
            android:padding="10.0dip"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:text="@string/reorder"
            android:layout_weight="1.0" />
    </LinearLayout>
</RelativeLayout>