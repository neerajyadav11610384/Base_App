<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10.0dip"
        app:cardElevation="3.0dip"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/linearLayout"
            android:padding="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_1c1839_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request_id"
                    android:fontFamily="@font/sf_pro_display_semibold" />
                <com.google.android.material.textview.MaterialTextView
                    android:textSize="@dimen/dimen_15sp"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/requestId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:fontFamily="@font/sf_pro_display_regular" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <com.google.android.material.textview.MaterialTextView
                        android:textSize="@dimen/dimen_14sp"
                        android:textColor="@color/color_1c1839_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/request_date"
                        android:fontFamily="@font/sf_pro_display_semibold" />
                    <com.google.android.material.textview.MaterialTextView
                        android:textSize="@dimen/dimen_15sp"
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/requestDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="end"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <com.google.android.material.textview.MaterialTextView
                        android:textSize="@dimen/dimen_14sp"
                        android:textColor="@color/color_1c1839_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ticket_status"
                        android:fontFamily="@font/sf_pro_display_semibold" />
                    <com.google.android.material.textview.MaterialTextView
                        android:textSize="@dimen/dimen_15sp"
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>