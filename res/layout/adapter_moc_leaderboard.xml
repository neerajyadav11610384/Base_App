<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layout_highlight"
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <FrameLayout
                android:id="@id/frame_layout"
                android:layout_width="50.0dip"
                android:layout_height="40.0dip"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@id/im_badge_icon"
                    android:visibility="visible"
                    android:layout_width="@dimen/dimen_36"
                    android:layout_height="@dimen/dimen_36"
                    android:src="@drawable/lb_1" />
                <TextView
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    android:textColor="#ff091e42"
                    android:layout_gravity="center"
                    android:id="@id/tv_leaderboard_nos"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textAlignment="center" />
            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@id/im_profile_pic"
                android:layout_width="@dimen/dimen_48"
                android:layout_height="@dimen/dimen_48"
                android:layout_marginLeft="-5.0dip"
                android:layout_marginTop="3.0dip"
                android:src="@drawable/default_img"
                android:layout_toRightOf="@id/frame_layout"
                android:layout_centerVertical="true" />
            <TextView
                android:textSize="15.0sp"
                android:textStyle="bold"
                android:textColor="#ff41586f"
                android:ellipsize="end"
                android:id="@id/im_profile_name"
                android:layout_width="180.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="8.0dip"
                android:text="MR Vinayaga"
                android:maxLines="1"
                android:layout_toRightOf="@id/im_profile_pic" />
            <TextView
                android:textSize="11.0sp"
                android:textColor="#ff7a869a"
                android:id="@id/tv_store_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="Shree Laxmi Venkata Agency"
                android:layout_toRightOf="@id/im_profile_pic"
                android:layout_below="@id/im_profile_name" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">
                <TextView
                    android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="#ff27ae60"
                    android:id="@id/tv_moc_perc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:textSize="15.0sp"
                    android:textStyle="bold"
                    android:textColor="#ff27ae60"
                    android:id="@id/tx_persent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:text=" %"
                    android:layout_toRightOf="@id/tv_moc_perc"
                    android:layout_centerVertical="true" />
            </LinearLayout>
            <View
                android:id="@id/im_divider"
                android:background="#ffc0c0c0"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_below="@id/tv_store_names"
                android:layout_marginStart="0.0dip"
                android:layout_alignStart="@id/frame_layout"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>