<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/ic_task_border_white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/img_triangle"
            android:layout_width="72.0dip"
            android:layout_height="72.0dip"
            android:layout_marginTop="@dimen/dimen_20"
            android:src="@drawable/ic_round_triangle"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dimen_30"
            android:layout_marginEnd="@dimen/dimen_30" />
        <TextView
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"
            android:textColor="#ffea3323"
            android:layout_gravity="center_vertical"
            android:id="@id/complete_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="@string/complete_must_do_task"
            android:layout_below="@id/img_triangle"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20" />
        <TextView
            android:textSize="@dimen/dimen_15sp"
            android:textColor="#ff091e42"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@id/tv_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="@string/task_mandatory_desc"
            android:maxLines="2"
            android:layout_below="@id/complete_txt"
            android:layout_centerVertical="true"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/dimen_30"
            android:layout_marginEnd="@dimen/dimen_30" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20"
            android:weightSum="2.0"
            android:layout_below="@id/tv_desc"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20">
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="#ffea3323"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/tv_checkout"
                android:background="@drawable/red_border_no_background"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/checkout_anyway"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_marginEnd="@dimen/dimen_8" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/tv_mission"
                android:background="@drawable/red_border"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/mission_page"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_marginStart="@dimen/dimen_8" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>