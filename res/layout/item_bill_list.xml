<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_2"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@id/rel_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/lyt_trans"
            android:paddingTop="@dimen/dimen_2"
            android:paddingRight="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_amt"
            android:layout_alignParentLeft="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:id="@id/title_indicater"
                android:visibility="visible"
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_4"
                android:src="@drawable/ic_action_circle" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="normal"
                android:textColor="@color/color_41586f"
                android:layout_gravity="center"
                android:id="@id/tx_payStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash"
                android:lineSpacingExtra="@dimen/dimen_7sp"
                fontFamily="\@fonts/sf_pro_display_medium" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="normal"
                android:textColor="@color/color_41586f"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:lineSpacingExtra="@dimen/dimen_7sp"
                fontFamily="\@fonts/sf_pro_display_medium" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="normal"
                android:textColor="@color/color_41586f"
                android:layout_gravity="center"
                android:id="@id/tv_payment_mode"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:lineSpacingExtra="@dimen/dimen_7sp"
                fontFamily="\@fonts/sf_pro_display_medium" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="normal"
                android:textColor="@color/color_41586f"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%)"
                android:lineSpacingExtra="@dimen/dimen_7sp"
                fontFamily="\@fonts/sf_pro_display_medium" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/tv_amt"
            android:paddingTop="@dimen/dimen_4"
            android:paddingRight="@dimen/dimen_0"
            android:paddingBottom="@dimen/dimen_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:textColor="#ff1c1839"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rs_symbol"
                android:lineSpacingExtra="@dimen/dimen_7sp"
                fontFamily="\@fonts/sf_pro_display_regular" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:textColor="#ff1c1839"
                android:gravity="center"
                android:id="@id/tv_payment_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dimen_7sp"
                fontFamily="\@fonts/sf_pro_display_regular" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@id/view_divider"
        android:background="@color/color_e6eaf4"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_below="@id/rel_txt" />
</RelativeLayout>