<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ffebeff8"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:background="@color/color_2392ff"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        app:contentInsetLeft="0.0dip"
        app:contentInsetStart="0.0dip"
        app:contentInsetStartWithNavigation="0.0dip"
        app:navigationIcon="?homeAsUpIndicator"
        app:popupTheme="@style/AppTheme"
        app:theme="@style/ToolbarColoredWhiteArrow">
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@id/title_lyt"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/prime_stores"
                android:maxLines="1"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@id/img_prime_outlet"
                android:layout_width="@dimen/dimen_36"
                android:layout_height="@dimen/dimen_36"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_16"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@id/lyt_header_label"
        android:background="@color/white"
        android:paddingTop="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_8"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:elevation="@dimen/dimen_5">
        <TextView
            android:textSize="@dimen/dimen_15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@id/tv_prime_store_label"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dimen_4" />
    </LinearLayout>
    <LinearLayout
        android:id="@id/lyt_header_lyt"
        android:background="@color/white"
        android:paddingTop="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_8"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:elevation="@dimen/dimen_5">
        <TextView
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"
            android:textColor="@color/very_dark_green"
            android:gravity="center"
            android:id="@id/tv_visited"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dimen_4"
            android:layout_weight="1.0" />
        <TextView
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"
            android:textColor="@color/color_908c8c"
            android:gravity="center"
            android:id="@id/tv_allotted"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dimen_4"
            android:layout_weight="1.0" />
    </LinearLayout>
    <HorizontalScrollView
        android:id="@id/prime_filter_scroll_view"
        android:visibility="visible"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_35"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_12"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/filter_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/rv_outlet_list"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10" />
    <ExpandableListView
        android:id="@id/expandableListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:groupIndicator="@null"
        android:indicatorLeft="?android:expandableListPreferredItemIndicatorLeft"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1.0dip" />
    <TextView
        android:textSize="18.0sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@id/tv_no_data_found"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/no_data_found_msg"
        android:fontFamily="@font/sf_pro_display_regular" />
</LinearLayout>