<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@id/relativeLayoutBrand"
        android:background="@drawable/drawable_oral_language_selcted"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:layout_margin="@dimen/dimen_6">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/imageViewBrand"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/default_img" />
        <View
            android:id="@id/viewBrandSelected"
            android:background="@drawable/ic_checkmark_new"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_2"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dimen_2"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>