<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/ll_entity_sub_category"
        android:background="@drawable/sf_sub_category_off_wi"
        android:padding="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:minWidth="84.0dip"
        android:minHeight="32.0dip"
        android:layout_marginStart="8.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/ll_img_subcategory"
            android:background="#ffffffff"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            app:layout_constraintBottom_toTopOf="@id/tv_sub_category_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@id/img_subcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_img"
                android:adjustViewBounds="true" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:textStyle="normal"
            android:textColor="#ff000000"
            android:gravity="center"
            android:id="@id/tv_sub_category_name"
            android:padding="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SubCategory"
            android:fontFamily="@font/sf_pro_display_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>