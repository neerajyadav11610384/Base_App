<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:cardElevation="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="15.0dip"
            android:layout_marginBottom="10.0dip"
            android:text="@string/update_ph_email"
            android:fontFamily="@font/sf_pro_display_bold" />
        <RelativeLayout
            android:id="@id/input_mobile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="10.0dip">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/phone_icon"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/mobile_humara" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@id/textInputLytMobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@id/phone_icon"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                <EditText
                    android:textSize="15.0sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:id="@id/mobileText"
                    android:background="@color/transparent"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:drawablePadding="10.0dip"
                    android:inputType="number" />
                <View
                    android:background="@color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_marginRight="10.0sp"
                    android:layout_marginBottom="10.0dip" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/choose_email_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50.0dip"
            android:layout_marginTop="10.0dip"
            android:text="@string/choose_your_email_id_star" />
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@id/choose_email_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="10.0dip">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/email_icon1"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_email" />
            <Spinner
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/spn_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                android:layout_toRightOf="@id/email_icon"
                android:layout_centerVertical="true"
                android:spinnerMode="dropdown" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:id="@id/dropdown_img"
                android:visibility="gone"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/dropdown" />
            <View
                android:background="@color/black"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="33.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="10.0sp"
                android:layout_below="@id/spn_email" />
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/enter_email_header"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50.0dip"
            android:layout_marginTop="10.0dip"
            android:text="@string/enter_your_email_id_star" />
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@id/enter_email_layout"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="10.0dip">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/email_icon2"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_email" />
            <EditText
                android:id="@id/edit_email"
                android:background="@android:color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35.0dip"
                android:layout_toRightOf="@id/email_icon"
                android:layout_centerVertical="true"
                android:inputType="textEmailAddress" />
            <View
                android:background="@color/black"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="33.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="10.0sp"
                android:layout_below="@id/edit_email" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/whatsapp_layout"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="10.0dip">
            <CheckBox
                android:id="@id/whatsapp_optin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/do_you_want_optin"
                app:drawableLeftCompat="@drawable/whatsapp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/dotted_progress_bar"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.hul.sambhav.customview.HorizontalDottedProgress
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="100.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="20.0dip" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="15.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/btn_exit"
                android:background="@drawable/green_rounded_corner"
                android:visibility="gone"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="50.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="Exit"
                android:layout_weight="1.0" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="15.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/btn_continue"
                android:background="@drawable/green_rounded_corner"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="50.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="@string/btn_continue"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>