<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@id/dismisKeyword"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:id="@id/progress_bar"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_centerInParent="true" />
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/empty_cart_scratch"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/delivery_slot_layout"
        android:padding="30.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="22.0sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:id="@id/delivery_slot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="50.0dip"
            android:text="Delivered by Friday" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/cod_layout"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="40.0dip"
            android:layout_marginRight="10.0dip">
            <CheckBox
                android:id="@id/cod_option"
                android:paddingLeft="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cod_msg"
                android:fontFamily="@font/sf_pro_display_regular" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/empty_cart"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="200.0dip"
            android:layout_height="200.0dip"
            app:srcCompat="@drawable/emptycart" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="22.0sp"
            android:textColor="@color/very_dark_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="@string/your_cart_is_empty"
            android:fontFamily="@font/sf_pro_display_regular" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16.0sp"
            android:textColor="@color/davy_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="@string/add_items_to_it_now" />
        <Button
            android:textColor="@color/white"
            android:id="@id/btn_add_item"
            android:background="@drawable/green_rounded_corner"
            android:paddingLeft="50.0dip"
            android:paddingRight="50.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="@string/add_item"
            android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/cart_parent_layout"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55.0dip">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:textColor="@color/very_dark_green"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:text="@string/my_cart"
            android:fontFamily="@font/sf_pro_display_regular" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/cart_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/footer_lyt_info"
        android:background="@color/payment_grey"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="16.0sp"
                android:textColor="@color/black"
                android:gravity="center|left"
                android:id="@id/estimated_amt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:fontFamily="@font/sf_pro_display_bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/dark_green"
                android:gravity="center|left"
                android:id="@id/savings_amt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:fontFamily="@font/sf_pro_display_regular" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/checkout"
            android:background="@drawable/green_rounded_corner"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/checkout"
            android:layout_weight="1.0"
            android:fontFamily="@font/sf_pro_display_regular" />
    </LinearLayout>
</RelativeLayout>