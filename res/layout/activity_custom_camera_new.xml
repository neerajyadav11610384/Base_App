<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/lyt_coordinate"
    android:background="@color/black"
    android:visibility="gone"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.camera.view.PreviewView
        android:id="@id/previewView"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/layoutBottomView"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/img_preview"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_above="@id/layoutBottomView"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutBottomView"
        android:background="@color/black"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/minus_iv"
            android:paddingBottom="@dimen/dimen_8"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_20"
            android:src="@drawable/ic_minus_icon_1"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@id/zoomBar"
            android:padding="0.0dip"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:layout_margin="0.0dip"
            android:max="100"
            android:elevation="2.0dip"
            android:progressBackgroundTint="#80ffff00"
            android:thumbTint="@color/light_blue"
            app:layout_constraintBottom_toBottomOf="@id/minus_iv"
            app:layout_constraintEnd_toStartOf="@id/plus_iv"
            app:layout_constraintStart_toEndOf="@id/minus_iv"
            app:layout_constraintTop_toTopOf="@id/minus_iv" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/plus_iv"
            android:paddingBottom="@dimen/dimen_8"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:src="@drawable/ic_plus_icon"
            app:layout_constraintEnd_toEndOf="@id/guidelineRight"
            app:layout_constraintStart_toEndOf="@id/zoomBar"
            app:layout_constraintTop_toTopOf="@id/minus_iv" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/btn_flash"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_marginTop="@dimen/dimen_16"
            android:src="@drawable/flash_off"
            app:civ_border_color="#ffb1aeae"
            app:civ_border_width="@dimen/dimen_18"
            app:civ_circle_background_color="#ffb1aeae"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@id/minus_iv" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/img_capture"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_marginTop="@dimen/dimen_16"
            android:src="@drawable/ic_camera_gray"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/dimen_18"
            app:civ_circle_background_color="@color/white"
            app:layout_constraintEnd_toEndOf="@id/guidelineRight"
            app:layout_constraintTop_toBottomOf="@id/plus_iv" />
        <androidx.constraintlayout.widget.Group
            android:id="@id/groupWithZoomAndCapture"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="minus_iv,zoomBar,plus_iv,btn_flash,img_capture" />
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@id/guidelineLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.04" />
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@id/guidelineRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.96" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/btn_reject"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_30"
            android:src="@drawable/ic_baseline_close_24"
            app:civ_border_color="#ffb1aeae"
            app:civ_border_width="@dimen/dimen_18"
            app:civ_circle_background_color="#ffb1aeae"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft"
            app:layout_constraintTop_toTopOf="parent" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:gravity="center"
            android:id="@id/img_preview_icon"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_30"
            android:src="@drawable/default_img"
            app:layout_constraintBottom_toBottomOf="@id/btn_reject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_reject"
            app:srcCompat="@drawable/default_img" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/btn_accept"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_30"
            android:src="@drawable/ic_accept_pic"
            app:civ_border_color="#ffb1aeae"
            app:civ_border_width="@dimen/dimen_18"
            app:civ_circle_background_color="#ffb1aeae"
            app:layout_constraintBottom_toBottomOf="@id/btn_reject"
            app:layout_constraintEnd_toEndOf="@id/guidelineRight"
            app:layout_constraintTop_toTopOf="@id/btn_reject" />
        <androidx.constraintlayout.widget.Group
            android:id="@id/groupAcceptAndReject"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="btn_reject,img_preview_icon,btn_accept" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/img_cc_close"
        android:background="@drawable/bg_e6eaf4_circle"
        android:padding="@dimen/dimen_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginBottom="@dimen/dimen_8"
        android:src="@drawable/ic_close_black"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/img_front_camera"
        android:background="@drawable/bg_e6eaf4_circle"
        android:padding="@dimen/dimen_8"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginBottom="@dimen/dimen_8"
        android:src="@drawable/ic_close_black"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>