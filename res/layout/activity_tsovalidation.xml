<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@id/outlist_sheet"
    android:background="@color/white"
    android:visibility="visible"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:background="@color/color_2392ff"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        app:contentInsetLeft="0.0dip"
        app:contentInsetStart="0.0dip"
        app:contentInsetStartWithNavigation="0.0dip"
        app:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@id/title_lyt"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@id/img_back_arrow"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@drawable/back_arrow"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_marginEnd="@dimen/dimen_16"
                android:layout_alignParentStart="true" />
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center|left"
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Executive validation"
                android:maxLines="1"
                android:layout_toRightOf="@id/img_back_arrow"
                android:layout_centerVertical="true" />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/lyt_date_picker"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:textColor="@color/white"
                    android:id="@id/selected_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/lyt_spinner_date"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_calendar_white" />
                <Spinner
                    android:textColor="@android:color/white"
                    android:id="@id/sp_date"
                    android:background="@drawable/null_selector"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:overlapAnchor="false" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_dropdown_white" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_8">
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dimen_12"
                android:text="Store Name: "
                android:fontFamily="@font/sf_pro_display_regular" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:id="@id/tv_store_name_tso"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/sf_pro_display_regular" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="Store Type: "
                android:fontFamily="@font/sf_pro_display_regular" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:id="@id/tv_store_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/sf_pro_display_regular" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="Beat Name: "
                android:fontFamily="@font/sf_pro_display_regular" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:id="@id/tv_beat_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/sf_pro_display_regular" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="Pincode:" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:id="@id/tv_pincode"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="NA" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="Address:" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:id="@id/tv_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="City:" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:id="@id/tv_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="State:" />
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:id="@id/tv_state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_20">
                <TextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="bold"
                    android:id="@id/tv_verifier_hdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verifier Designation:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_white_box_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="true">
                    <Spinner
                        android:textSize="@dimen/dimen_14sp"
                        android:id="@id/spinner_tso_verifier"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:minWidth="120.0dip"
                        android:spinnerMode="dropdown"
                        android:fontFamily="@font/sf_pro_display_regular"
                        style="@style/Base.Widget.AppCompat.Spinner" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_20">
                <TextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="bold"
                    android:id="@id/tv_verifier_emp_id_hdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:text="Verifier Employer ID:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
                <EditText
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_1c1839_1"
                    android:textColorHint="@color/color_758da6"
                    android:id="@id/et_verifier_empid"
                    android:background="@drawable/edit_text_white_box_bg"
                    android:paddingLeft="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="130.0dip"
                    android:text=""
                    android:hint="Employee ID"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:lineSpacingExtra="8.0sp"
                    android:inputType="text"
                    android:fontFamily="@font/sf_pro_display_regular" />
            </RelativeLayout>
            <TextView
                android:textSize="16.0sp"
                android:textStyle="normal"
                android:gravity="center"
                android:id="@id/tv_get_otp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dimen_20"
                android:text="Get OTP"
                android:lineSpacingExtra="0.0sp" />
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_gravity="start"
                android:id="@id/tsoCheckBoxTAndC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:text="" />
            <Button
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/tso_btn_submit"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:text="@string/txt_submit"
                android:fontFamily="@font/sf_pro_display_bold" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <include
            layout="@layout/get_otp_screen" />
    </RelativeLayout>
</RelativeLayout>