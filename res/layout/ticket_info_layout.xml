<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:orientation="horizontal"
    android:background="@drawable/light_green_rounded_corner"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5.0dip"
    android:layout_marginTop="5.0dip"
    android:layout_marginRight="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/lyt_ticketInfo"
        android:background="?selectableItemBackground"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="15.0sp"
                android:textStyle="bold"
                android:id="@id/title_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_comments"
                android:fontFamily="@font/sf_pro_display_bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="12.0sp"
                android:gravity="right"
                android:id="@id/create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="@string/user_comments" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:id="@id/user_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_comments"
            android:fontFamily="@font/sf_pro_display_regular" />
        <LinearLayout
            android:id="@id/reply_content_head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="15.0sp"
                android:textStyle="bold"
                android:id="@id/title_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_comments"
                android:fontFamily="@font/sf_pro_display_bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="12.0sp"
                android:gravity="right"
                android:id="@id/close_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="User comments" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:id="@id/reply_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="User comments"
            android:fontFamily="@font/sf_pro_display_regular" />
    </LinearLayout>
</androidx.cardview.widget.CardView>