<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/lin_pending_invoice"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="5.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/very_dark_gray"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:text="From"
                android:fontFamily="@font/sf_pro_display_bold" />
            <EditText
                android:textSize="12.0sp"
                android:textColor="@color/very_dark_gray"
                android:gravity="center"
                android:id="@id/start_date"
                android:background="@drawable/curved_border"
                android:focusable="false"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip"
                android:hint="From Date"
                android:layout_weight="1.0"
                app:drawableRightCompat="@drawable/ic_date_range" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/very_dark_gray"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="To"
                android:fontFamily="@font/sf_pro_display_bold" />
            <EditText
                android:textSize="12.0sp"
                android:textColor="@color/very_dark_gray"
                android:gravity="center"
                android:id="@id/end_date"
                android:background="@drawable/curved_border"
                android:focusable="false"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="3.0dip"
                android:hint="End Date"
                android:layout_weight="1.0"
                app:drawableRightCompat="@drawable/ic_date_range" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/view_data"
                android:background="@drawable/green_rounded_corner"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="3.0dip"
                android:text="View"
                android:fontFamily="@font/sf_pro_display_bold" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/rcy_pending_invoice"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="45.0dip" />
    </LinearLayout>
    <ProgressBar
        android:id="@id/pending_invoice_progressbar"
        android:visibility="visible"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="18.0sp"
        android:id="@id/no_item_msg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_found_msg"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/sf_pro_display_regular" />
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/cardview_light_background"
        android:padding="3.0dip"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/very_dark_gray"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Page limit" />
            <Spinner
                android:textSize="14.0sp"
                android:gravity="center"
                android:entries="@array/limit_array"
                android:layout_gravity="center"
                android:id="@id/limit_spinner_txt"
                android:background="@drawable/curved_border"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_centerVertical="true"
                android:spinnerMode="dropdown" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.5">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/previous_page"
                android:background="@drawable/curved_border"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                app:srcCompat="@drawable/ic_keyboard_arrow_left" />
            <EditText
                android:textSize="14.0sp"
                android:gravity="center"
                android:id="@id/page_no"
                android:background="@drawable/transparant"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:focusable="false"
                android:layout_width="100.0dip"
                android:layout_height="fill_parent"
                android:text="" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/next_page"
                android:background="@drawable/curved_border"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                app:srcCompat="@drawable/ic_keyboard_arrow_right" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>