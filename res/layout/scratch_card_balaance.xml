<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@color/color_2392ff"
    android:layout_width="fill_parent"
    android:layout_height="120.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center|left"
            android:id="@id/headerLyt"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/imageBackBtn"
                android:padding="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_back_white_icon" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="18.0sp"
                android:textColor="@color/white"
                android:id="@id/header"
                android:paddingLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rewards"
                android:layout_toRightOf="@id/imageBackBtn"
                android:fontFamily="@font/sf_pro_display_bold" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_24sp"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:layout_gravity="center_vertical"
            android:id="@id/scard_amount"
            android:paddingLeft="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/headerLyt"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sf_pro_display_bold"
            app:drawableLeftCompat="@drawable/ic_u_logo_big_b4c8dc" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:id="@id/label"
            android:paddingLeft="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_reward"
            android:layout_below="@id/scard_amount"
            android:fontFamily="@font/sf_pro_display_regular" />
    </RelativeLayout>
</FrameLayout>