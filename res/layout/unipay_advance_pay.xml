<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10.0dip">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginBottom="10.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="#ff6a4b9e"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/unipay_avail_pts"
                android:fontFamily="@font/sf_pro_display_bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:gravity="center"
                android:id="@id/txt_available_points"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_bold" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginBottom="10.0dip">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:background="@drawable/dotted_gray"
                android:paddingTop="10.0dip"
                android:paddingBottom="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:weightSum="1.0"
                android:minHeight="30.0dip">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="16.0sp"
                    android:textStyle="bold"
                    android:textColor="#ff6a4b9e"
                    android:gravity="center"
                    android:paddingLeft="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.0dip"
                    android:text="@string/blocked_pts"
                    android:fontFamily="@font/sf_pro_display_bold" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="10.0sp"
                    android:gravity="center"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/for_redemption" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="16.0sp"
                    android:textStyle="bold"
                    android:textColor="#fff6a635"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/ear_marked_unipay_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="25.0dip"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="10.0sp"
                android:gravity="center"
                android:id="@id/noteTv"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="20.0dip"
                android:text="@string/points_will_be_adjusted_info" />
            <LinearLayout
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="30.0dip">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:text="@string/rs_code"
                    android:layout_weight="0.5" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=":" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0sp"
                    android:gravity="center_vertical"
                    android:id="@id/txt_rs_code"
                    android:paddingLeft="5.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:text="NA"
                    android:layout_weight="0.7" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0sp"
                android:minHeight="30.0dip">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.0dip"
                    android:text="@string/rs_name"
                    android:layout_weight="0.4" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=":" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:id="@id/txt_rs_name"
                    android:paddingLeft="5.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:text=""
                    android:layout_weight="0.6"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40.0dip">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:paddingLeft="5.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.0dip"
                    android:text="@string/next_bill_payment"
                    android:layout_weight="0.4" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=":" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6">
                    <EditText
                        android:textSize="12.0sp"
                        android:gravity="center_vertical"
                        android:id="@id/edt_amt"
                        android:background="@drawable/edittext_bg"
                        android:paddingLeft="3.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5.0dip"
                        android:hint="@string/enter_points"
                        android:layout_weight="0.6"
                        android:inputType="number" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center_vertical"
                        android:visibility="invisible"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:id="@id/btn_pay"
                android:background="@drawable/green_rounded_corner"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_marginTop="20.0dip"
                android:minWidth="150.0dip"
                android:text="@string/pay" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/lyt_otp_validation"
            android:background="@drawable/rounded_corner_white"
            android:paddingBottom="10.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/mosambee_violet"
                android:gravity="center"
                android:id="@id/txt_info_msg"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:minHeight="35.0dip" />
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginTop="10.0dip">
                <EditText
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/edt_otp"
                    android:background="@drawable/edittext_bg"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="Enter OTP"
                    android:maxLength="6"
                    android:inputType="number" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@id/btn_resend_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.0dip"
                    android:minWidth="100.0dip"
                    android:text="Resend OTP" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginTop="10.0dip">
                <Button
                    android:textColor="@color/white"
                    android:id="@id/btn_cancel"
                    android:background="@drawable/mosambee_button_curved_border"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:minWidth="100.0dip"
                    android:text="Cancel" />
                <Button
                    android:textColor="@color/white"
                    android:id="@id/btn_validate_otp"
                    android:background="@drawable/green_rounded_corner"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.0dip"
                    android:minWidth="100.0dip"
                    android:text="Confirm" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@id/lyt_trx_success"
            android:background="@drawable/rounded_corner_white"
            android:paddingBottom="10.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="15.0dip">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="15.0dip"
                android:layout_weight="0.1">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0dip"
                    android:textStyle="bold|italic"
                    android:textColor="@color/dark_green"
                    android:gravity="center"
                    android:id="@id/aptrxmessagepoints"
                    android:background="@drawable/green_rounded_corner"
                    android:padding="5.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="80.0dip" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center_vertical"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ioc_success" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textStyle="bold"
                android:textColor="@color/mosambee_violet"
                android:gravity="center"
                android:id="@id/aptrxmessage"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:minHeight="35.0dip" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>