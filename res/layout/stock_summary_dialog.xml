<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_border_try_again"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:background="@drawable/background_border_purple"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip">
            <TextView
                android:textSize="30.0sp"
                android:textStyle="bold"
                android:textColor="#ff087985"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:text="Stock Inward Item"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="BasePack" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="normal"
                    android:textColor="@color/grey"
                    android:layout_gravity="left"
                    android:id="@id/tv_dialog_basepack"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="BasepPack" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="Unit" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="normal"
                    android:textColor="@color/grey"
                    android:layout_gravity="left"
                    android:id="@id/tv_dialog_unit"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="unit" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="MRP" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="normal"
                    android:textColor="@color/grey"
                    android:layout_gravity="left"
                    android:id="@id/tv_dialog_mrp"
                    android:visibility="visible"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="MRP" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="Expiry Date" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="normal"
                    android:textColor="@color/grey"
                    android:layout_gravity="left"
                    android:id="@id/tv_dialog_expire"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="Expire" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="Total" />
                <TextView
                    android:textSize="14.0sp"
                    android:textStyle="normal"
                    android:textColor="@color/grey"
                    android:layout_gravity="left"
                    android:id="@id/tv_dialog_total"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:text="Total" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/dimen_17sp"
            android:textStyle="bold"
            android:textColor="#ff7a0887"
            android:layout_gravity="center"
            android:id="@id/tv_ok"
            android:background="@drawable/stock_summary_ok_border"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:text="OK"
            android:textAllCaps="true"
            android:paddingStart="@dimen/dimen_20"
            android:paddingEnd="@dimen/dimen_20" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>