<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="200.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:background="#fff95649"
            android:layout_width="fill_parent"
            android:layout_height="100.0dip">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:src="@drawable/skip"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <TextView
            android:textSize="16.0sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:text="Mandatory Task Pending"
            android:lineSpacingExtra="8.0sp" />
        <TextView
            android:textSize="14.0dip"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:id="@id/tv_content"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140.0dip"
            android:text="Please go to the Recommended Items Mission and take order for the recommended SKUs"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>