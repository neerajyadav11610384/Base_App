<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/ll_title"
        android:background="@color/color_2392ff"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ffffffff"
            android:gravity="left"
            android:layout_gravity="center_horizontal"
            android:id="@id/tv_title"
            android:background="@color/color_2392ff"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Number Validation"
            android:layout_weight="1.0" />
        <ImageView
            android:id="@id/img_close"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:src="@drawable/ic_action_close" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/ll_message"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/ll_top_line"
            android:padding="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textColor="#ff000000"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:id="@id/tv_top_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Entered number is already available in below HUL Code:" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/ll_store"
            android:padding="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:id="@id/tv_store_detail_title"
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:text="Store Details" />
            <TextView
                android:textSize="18.0sp"
                android:textColor="#ff000000"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />
            <TextView
                android:textSize="18.0sp"
                android:textColor="#ff000000"
                android:ellipsize="marquee"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:id="@id/tv_store_detail"
                android:fadingEdge="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Details"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:layout_weight="1.0"
                android:marqueeRepeatLimit="marquee_forever" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/ll_rs_detail"
            android:padding="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:id="@id/tv_rs_detail_title"
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:text="RS Details" />
            <TextView
                android:textSize="18.0sp"
                android:textColor="#ff000000"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />
            <TextView
                android:textSize="18.0sp"
                android:textColor="#ff000000"
                android:ellipsize="marquee"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:id="@id/tv_rs_detail"
                android:fadingEdge="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RS Details"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:layout_weight="1.0"
                android:marqueeRepeatLimit="marquee_forever" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/ll_rs_business"
            android:padding="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:id="@id/tv_rs_business_title"
                android:layout_width="150.0dip"
                android:layout_height="31.0dip"
                android:text="RS Business" />
            <TextView
                android:textSize="18.0sp"
                android:textColor="#ff000000"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />
            <TextView
                android:textSize="18.0sp"
                android:textColor="#ff000000"
                android:ellipsize="marquee"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:id="@id/tv_rs_business"
                android:fadingEdge="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RS Business"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:layout_weight="1.0"
                android:marqueeRepeatLimit="marquee_forever" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/ll_procced"
        android:background="@color/color_2392ff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ffffffff"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@id/tv_procced_with_ocr"
            android:background="@color/color_2392ff"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>