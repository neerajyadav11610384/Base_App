<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/light_gray_rounded_corner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/color_42526e"
            android:ellipsize="end"
            android:id="@id/textViewProductName"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:maxLines="2"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutUnit"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginRight="8.0dip"
            android:layout_marginBottom="@dimen/dimen_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layoutProductMrp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@id/textViewProductName"
            app:layout_constraintTop_toBottomOf="@id/textViewProductName"
            app:layout_constraintWidth_percent="0.32">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_12sp"
                android:textColor="#ff2c2c6f"
                android:id="@id/unitTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/imageViewMinusButton"
                android:background="@drawable/active_dot"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginStart="@dimen/dimen_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/unitTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_minus_white" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:id="@id/textViewUnitsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:fontFamily="@font/sf_pro_display_bold"
                android:layout_marginStart="@dimen/dimen_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageViewMinusButton"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/imageViewPlusButton"
                android:background="@drawable/active_dot"
                android:padding="@dimen/dimen_1"
                android:clickable="false"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginStart="@dimen/dimen_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewUnitsValue"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutProductMrp"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginEnd="@dimen/dimen_5"
            app:layout_constraintBottom_toBottomOf="@id/layoutUnit"
            app:layout_constraintEnd_toStartOf="@id/layoutProductMrpValue"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/layoutUnit"
            app:layout_constraintTop_toTopOf="@id/layoutUnit"
            app:layout_constraintWidth_percent="0.38">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="#ffa09e9e"
                android:id="@id/textViewMrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRP"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@id/textViewMrpValue"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_marginStart="@dimen/dimen_5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewMrp"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/edit_bg_black_border"
                android:paddingRight="2.0dip"
                android:layout_width="80.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="@dimen/dimen_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewMrp"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/textViewScanProductMrpPrice"
                    android:padding="1.0dip"
                    android:layout_width="50.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:maxLength="7"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@id/img_price_dropdown"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:src="@drawable/ic_dropdown" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutProductMrpValue"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/layoutUnit"
            app:layout_constraintEnd_toEndOf="@id/textViewProductName"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/layoutProductMrp"
            app:layout_constraintTop_toTopOf="@id/layoutUnit">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="#ffa09e9e"
                android:id="@id/textViewMrpFinalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Val"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@id/textViewFinalMrpValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:fontFamily="@font/sf_pro_display_medium"
                android:layout_marginStart="@dimen/dimen_5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewMrpFinalValue"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>