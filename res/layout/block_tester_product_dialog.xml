<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:padding="@dimen/dimen_16"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@id/textViewBlockMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dimen_2"
        android:fontFamily="@font/sf_pro_display_regular"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/textViewBlockOk"
        android:background="@drawable/drawable_2392ff_5dp"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_30"
        android:text="Ok"
        app:layout_constraintEnd_toEndOf="@id/textViewBlockMsg"
        app:layout_constraintStart_toStartOf="@id/textViewBlockMsg"
        app:layout_constraintTop_toBottomOf="@id/textViewBlockMsg" />
</androidx.constraintlayout.widget.ConstraintLayout>