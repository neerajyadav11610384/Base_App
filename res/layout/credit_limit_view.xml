<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:padding="@dimen/dimen_15"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        android:textColor="@color/color_41586f"
        android:id="@id/textViewLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit Value Limit"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_41586f"
        android:id="@id/textViewCreditLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="@string/credit_limit"
        android:fontFamily="@font/sf_pro_display_regular"
        app:layout_constraintStart_toStartOf="@id/textViewLimit"
        app:layout_constraintTop_toBottomOf="@id/textViewLimit" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_41586f"
        android:id="@id/textViewCreditLimitValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_medium"
        app:layout_constraintBottom_toBottomOf="@id/textViewCreditLimit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewCreditLimit" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_41586f"
        android:id="@id/textViewUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="Used"
        android:fontFamily="@font/sf_pro_display_regular"
        app:layout_constraintStart_toStartOf="@id/textViewLimit"
        app:layout_constraintTop_toBottomOf="@id/textViewCreditLimit" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_41586f"
        android:id="@id/textViewUsedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_medium"
        app:layout_constraintBottom_toBottomOf="@id/textViewUsed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewUsed" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_41586f"
        android:id="@id/textViewBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="Balance"
        android:fontFamily="@font/sf_pro_display_regular"
        app:layout_constraintStart_toStartOf="@id/textViewLimit"
        app:layout_constraintTop_toBottomOf="@id/textViewUsedValue" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_41586f"
        android:id="@id/textViewBalanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_medium"
        app:layout_constraintBottom_toBottomOf="@id/textViewBalance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewBalance" />
</androidx.constraintlayout.widget.ConstraintLayout>