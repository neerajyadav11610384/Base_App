<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@id/lyt_image_avail"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottomSheet">
        <RelativeLayout
            android:background="#ff2392ff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:id="@id/hdr_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16"
                android:text="Barcode Scanning"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="8.0sp"
                android:fontFamily="\@fonts/sf_pro_display_medium" />
            <ImageView
                android:id="@id/barcode_cancel_button"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_marginRight="@dimen/dimen_16"
                android:src="@drawable/ic_close_white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/black"
            android:id="@id/txt_barcode_count"
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />
        <View
            android:id="@id/line_view"
            android:background="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@id/txt_barcode_count" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/rv_icd_temp_codes"
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_new_barcode_scan"
            android:layout_below="@id/line_view" />
        <Button
            android:textSize="14.0sp"
            android:layout_gravity="center"
            android:id="@id/btn_new_barcode_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="New Barcode Scan"
            android:drawableEnd="@drawable/ic_barcode_scan_white"
            android:backgroundTint="#ff2392ff" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:id="@id/rlyt_legends"
                android:paddingBottom="12.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip">
                    <ImageView
                        android:id="@id/imageView4"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_marginLeft="200.0dip"
                        android:src="@drawable/icd_circle_green" />
                    <ImageView
                        android:id="@id/imageView5"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_marginLeft="200.0dip"
                        android:layout_marginTop="5.0dip"
                        android:src="@drawable/icd_circle_red"
                        android:layout_below="@id/imageView4" />
                    <ImageView
                        android:id="@id/imageView6"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_marginLeft="200.0dip"
                        android:layout_marginTop="5.0dip"
                        android:src="@drawable/icd_circle_yellow"
                        android:layout_below="@id/imageView5" />
                    <ImageView
                        android:id="@id/imageView7"
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_marginLeft="200.0dip"
                        android:layout_marginTop="5.0dip"
                        android:src="@drawable/icd_circle_blue"
                        android:layout_below="@id/textView10" />
                </LinearLayout>
                <TextView
                    android:textColor="@color/black"
                    android:id="@id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:text="Scan/Barcode Matched" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="8.0dip"
                    android:text="Scan/Barcode Mismatched"
                    android:layout_below="@id/textView8" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="8.0dip"
                    android:text="Scanning Skipped"
                    android:layout_below="@id/textView9" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21.0dip"
                    android:layout_marginTop="8.0dip"
                    android:text="Jump"
                    android:layout_below="@id/textView10" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@id/bottomSheet"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_42"
        android:layout_margin="@dimen/dimen_12"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="16.0sp"
            android:textStyle="normal"
            android:textColor="#ff2392ff"
            android:id="@id/tx_skip"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_32"
            android:text="Skip"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="0.0sp"
            android:fontFamily="\@fonts/sf_pro_display_medium" />
        <RelativeLayout
            android:id="@id/btn_scan"
            android:background="@drawable/add_blue_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tx_skip">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@id/camera"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_12"
                    android:src="@drawable/ic_camera"
                    android:layout_centerVertical="true" />
                <TextView
                    android:textSize="16.0sp"
                    android:textStyle="normal"
                    android:textColor="#ffffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan"
                    android:layout_toRightOf="@id/camera"
                    android:layout_centerVertical="true"
                    android:lineSpacingExtra="0.0sp"
                    android:fontFamily="\@fonts/sf_pro_display_medium" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>