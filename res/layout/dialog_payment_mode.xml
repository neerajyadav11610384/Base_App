<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="150.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="16.0sp"
        android:textColor="#ff41586f"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:text="@string/payment_options"
        android:lineSpacingExtra="7.0sp"
        android:fontFamily="@font/sf_pro_display_medium" />
    <LinearLayout
        android:id="@id/upi_payment_lyt"
        android:padding="@dimen/dimen_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10">
        <RadioButton
            android:id="@id/radio_upi"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:checked="true" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="32.0dip"
            android:layout_marginLeft="@dimen/dimen_2"
            app:srcCompat="@drawable/ic_upi_payment" />
    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10" />
    <LinearLayout
        android:id="@id/partner_bank_lyt"
        android:padding="@dimen/dimen_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10">
        <RadioButton
            android:id="@id/radio_bank"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:text="@string/txt_pay_on_delivery" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_marginLeft="@dimen/dimen_2"
            app:srcCompat="@drawable/ic_partner_bank" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16.0sp"
            android:textColor="#ff1c1839"
            android:layout_gravity="center_vertical"
            android:id="@id/bank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6"
            android:text="@string/partner_bank"
            android:lineSpacingExtra="8.0sp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:lineHeight="@dimen/dimen_24sp" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/proceed_pay"
        android:background="@color/color_2392ff"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/proceed_to_pay"
        android:fontFamily="@font/sf_pro_display_bold" />
</LinearLayout>