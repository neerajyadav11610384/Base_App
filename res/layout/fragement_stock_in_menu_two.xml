<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#ffffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@id/lyt_date_picker"
        android:background="@color/white"
        android:paddingTop="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dimen_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/startDateLinear"
                android:background="@drawable/background_blue_border_color_blue"
                android:paddingLeft="@dimen/dimen_8"
                android:paddingTop="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_5"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_8"
                android:paddingVertical="@dimen/dimen_5">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:id="@id/img_date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_5"
                    app:srcCompat="@drawable/ic_calendar_white" />
                <TextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/white"
                    android:id="@id/selected_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <TextView
                android:textSize="12.0sp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:text="START DATE"
                android:fontFamily="@font/sf_pro_display_medium" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.0dip">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/endDateLinear"
                android:background="@drawable/background_blue_border_color_blue"
                android:paddingLeft="@dimen/dimen_8"
                android:paddingTop="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_5"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dimen_8"
                android:paddingVertical="@dimen/dimen_5">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:id="@id/img_date_picker_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_5"
                    app:srcCompat="@drawable/ic_calendar_white" />
                <TextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/white"
                    android:id="@id/selected_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <TextView
                android:textSize="12.0sp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:text="END DATE"
                android:fontFamily="@font/sf_pro_display_medium" />
        </LinearLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/black"
        android:id="@id/textViewNoDataAvalable"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_found_msg"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatEditText
        android:textSize="@dimen/dimen_15sp"
        android:textColor="@color/black"
        android:id="@id/searchEditText"
        android:background="@drawable/light_green_rounded_corner"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="10.0dip"
        android:hint="Search by Product name"
        android:drawablePadding="10.0dip"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawableEnd="@drawable/ic_close_black"
        app:layout_constraintTop_toBottomOf="@id/lyt_date_picker" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/lyt_summary"
        android:background="@drawable/background_rounded_top_corner_grey"
        android:paddingLeft="4.0dip"
        android:paddingTop="4.0dip"
        android:paddingRight="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="@dimen/dimen_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchEditText">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:paddingHorizontal="10.0dip">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Units: "
                    android:fontFamily="@font/sf_pro_display_regular" />
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/black"
                    android:id="@id/totalUnits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_semibold" />
            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Value: "
                    android:fontFamily="@font/sf_pro_display_regular" />
                <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/black"
                    android:id="@id/totalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_semibold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/ll_header_summary"
            android:background="@drawable/background_rounded_top_corner_blue"
            android:paddingTop="10.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/tv_unit"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="UNIT"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_bold" />
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/tv_mrp"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="MRP"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_bold" />
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/tv_expiry"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="EXP"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_bold" />
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/tv_total"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="Total Stock Value"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_bold" />
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/tv_transaction_date"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="Transaction Date"
                android:layout_weight="1.0"
                android:fontFamily="@font/sf_pro_display_bold" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/recyclerStockInwardSummary"
            android:background="@color/white"
            android:paddingBottom="8.0dip"
            android:clipToPadding="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_0"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>
    <ProgressBar
        android:id="@id/progress_bar"
        android:visibility="gone"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>