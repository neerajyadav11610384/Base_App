<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/parentview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/reward"
        android:background="@color/color_2392ff"
        android:paddingBottom="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_24sp"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:layout_gravity="center_vertical"
            android:id="@id/scard_amount"
            android:paddingLeft="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerInParent="true"
            android:fontFamily="@font/sf_pro_display_bold"
            app:drawableLeftCompat="@drawable/ic_u_logo_big" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:id="@id/label"
            android:paddingLeft="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_reward"
            android:layout_below="@id/scard_amount"
            android:fontFamily="@font/sf_pro_display_regular" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/no_item_msg"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/no_data_found_msg"
            android:fontFamily="@font/sf_pro_display_regular" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/scratch_list"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0.0dip" />
        <ProgressBar
            android:layout_gravity="center"
            android:id="@id/fcm_progressbar"
            android:visibility="visible"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginTop="30.0dip" />
    </LinearLayout>
</LinearLayout>