<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@color/color_e6eaf4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.core.widget.NestedScrollView
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:layout_above="@id/place_order">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/payable_amt"
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="18.0sp"
                        android:textColor="#ff1c1839"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="56.0dip"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:text="@string/payable_amount"
                        android:lineSpacingExtra="@dimen/dimen_9sp"
                        android:fontFamily="@font/sf_pro_display_medium" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="18.0sp"
                        android:textColor="#ff1c1839"
                        android:gravity="right"
                        android:id="@id/payable_amount_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:lineSpacingExtra="9.0sp"
                        android:fontFamily="@font/sf_pro_display_bold" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/summary"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@id/coupon_layout"
                        android:background="@color/color_e6eaf4"
                        android:paddingLeft="@dimen/dimen_15"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_15">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/color_2392ff"
                            android:gravity="center_vertical"
                            android:id="@id/apply_coupon"
                            android:layout_width="fill_parent"
                            android:layout_height="42.0dip"
                            android:text="@string/apply_coupon"
                            android:layout_weight="1.0"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:lineHeight="@dimen/dimen_24sp" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center"
                            android:id="@id/clear_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_2"
                            app:srcCompat="@drawable/ic_close_black" />
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_10"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginRight="16.0sp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff1c1839"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_amount_new"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:lineHeight="@dimen/dimen_24sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff1c1839"
                            android:gravity="right"
                            android:id="@id/total_amount_value"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="6767"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_bold"
                            android:lineHeight="@dimen/dimen_24sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:paddingBottom="@dimen/dimen_10"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_marginRight="16.0sp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff1c1839"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/retailer_margin_new"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:lineHeight="@dimen/dimen_24sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff1c1839"
                            android:gravity="right"
                            android:id="@id/retailer_margin_value"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="6767"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_bold"
                            android:lineHeight="@dimen/dimen_24sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_marginRight="16.0sp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff1c1839"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coupon_discount"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:lineHeight="@dimen/dimen_24sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff1c1839"
                            android:gravity="right"
                            android:id="@id/coupon_discount_value"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="6767"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_bold"
                            android:lineHeight="@dimen/dimen_24sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/credit_lyt"
                    android:background="@color/white"
                    android:padding="@dimen/dimen_10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_below="@id/summary">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="14.0sp"
                        android:textColor="@color/color_41586f"
                        android:id="@id/credit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_5"
                        android:text="@string/buy_oncredit"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:lineHeight="@dimen/dimen_21sp" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_gravity="center_vertical"
                            android:id="@id/radio_distributor"
                            android:layout_width="@dimen/dimen_32"
                            android:layout_height="@dimen/dimen_32"
                            android:text="@string/from_distributor" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center"
                            android:layout_width="24.0dip"
                            android:layout_height="24.0dip"
                            android:layout_marginLeft="2.0dip"
                            app:srcCompat="@drawable/user" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff1c1839"
                            android:layout_gravity="center_vertical"
                            android:id="@id/dist_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6.0dip"
                            android:text="@string/from_distributor"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_bold"
                            android:lineHeight="@dimen/dimen_24sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60.0dip">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff41586f"
                            android:id="@id/dist_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_6"
                            android:text="Available Credit"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:lineHeight="@dimen/dimen_24sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff41586f"
                            android:id="@id/credit_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:text=""
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:lineHeight="@dimen/dimen_24sp" />
                    </LinearLayout>
                    <View
                        android:background="@color/color_e6eaf4"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="2.0dip"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_marginRight="@dimen/dimen_20"
                        android:layout_marginBottom="@dimen/dimen_5" />
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@id/radio_bank"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center"
                            android:layout_width="24.0dip"
                            android:layout_height="24.0dip"
                            app:srcCompat="@drawable/default_user" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff1c1839"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from_bank"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_bold"
                            android:lineHeight="@dimen/dimen_24sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/payon_delivery_lyt"
                    android:background="@color/white"
                    android:padding="@dimen/dimen_10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_below="@id/summary">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@id/radio_cod"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:text="@string/txt_pay_on_delivery" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center"
                            android:layout_width="24.0dip"
                            android:layout_height="24.0dip"
                            android:layout_marginLeft="@dimen/dimen_2"
                            app:srcCompat="@drawable/distributor_checkout" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff1c1839"
                            android:layout_gravity="center_vertical"
                            android:id="@id/cod_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_6"
                            android:text="@string/txt_pay_on_delivery"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_bold"
                            android:lineHeight="@dimen/dimen_24sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60.0dip">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="16.0sp"
                            android:textColor="#ff41586f"
                            android:id="@id/cod_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_6"
                            android:text="@string/payon_delivery_desc"
                            android:lineSpacingExtra="8.0sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:lineHeight="@dimen/dimen_24sp" />
                    </LinearLayout>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/banner_card"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3.0dip"
                    app:cardUseCompatPadding="true">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_gravity="center"
                        android:id="@id/home_singlebanner_imageView"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true" />
                </androidx.cardview.widget.CardView>
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <com.hul.sambhav.util.CustomizedNestedScrollView
                        android:id="@id/scrollview_base"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/toppick_base_layout"
                            android:padding="0.0dip"
                            android:visibility="gone"
                            android:descendantFocusability="blocksDescendants"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />
                    </com.hul.sambhav.util.CustomizedNestedScrollView>
                    <ProgressBar
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:id="@id/progress_bar"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="18.0sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:id="@id/no_item_msg"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_items_found"
                        android:layout_centerInParent="true" />
                </FrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/checkbox_recyclerview"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_below="@id/credit_lyt" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@id/place_order"
            android:background="@color/color_2392ff"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_54"
            android:text="@string/txt_place_order"
            android:layout_alignParentBottom="true"
            android:lineSpacingExtra="9.0sp"
            android:fontFamily="@font/sf_pro_display_bold" />
    </RelativeLayout>
    <ProgressBar
        android:id="@id/progressBar"
        android:visibility="gone"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>