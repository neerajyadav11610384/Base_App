<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="@dimen/dimen_16"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/dimen_18"
        android:textStyle="bold"
        android:textColor="#ff1c1839"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter PO Number" />
    <TextView
        android:textSize="@dimen/dimen_15"
        android:textStyle="normal"
        android:textColor="#ff1c1839"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:text="Enter PO Number" />
    <EditText
        android:textSize="@dimen/dimen_16"
        android:textColor="@color/color_758da6"
        android:gravity="center|left"
        android:id="@id/edt_po_number"
        android:background="@drawable/background_border_color_b4c8dc"
        android:paddingLeft="@dimen/dimen_10"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_8"
        android:singleLine="true" />
    <LinearLayout
        android:gravity="center|right"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="right"
            android:id="@id/txt_skip"
            android:background="@drawable/red_rounded_corner"
            android:paddingLeft="16.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="right"
            android:id="@id/txt_done"
            android:background="@drawable/green_rounded_corner"
            android:paddingLeft="16.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginStart="@dimen/dimen_32" />
    </LinearLayout>
</LinearLayout>