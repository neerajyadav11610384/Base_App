<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:orientation="vertical"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8.0dip"
    android:layout_marginTop="12.0dip"
    android:layout_marginRight="8.0dip"
    app:cardElevation="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:background="#ff2d3357"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:background="#ff242948"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.0">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/live_order_icon"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    app:srcCompat="@drawable/ioc_placed" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="10.0sp"
                    android:textColor="@color/white"
                    android:id="@id/live_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.0dip"
                    android:text="PLACED" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="6.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@id/live_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORD192919292892931" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:id="@id/live_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACED" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/cancel_order"
                android:background="@drawable/ic_action_clear"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/light_gray_rounded_corner"
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="10.0dip"
            android:weightSum="9.0">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="20.0sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@id/count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="5" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/dark_moderate_lime_green"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/items_label" />
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="0.5dip"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="20.0sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/order_amt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2290" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/dark_moderate_lime_green"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/order_amount" />
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="0.5dip"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="20.0sp"
                    android:textColor="@color/dark_green"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/saved_amt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="25" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/dark_moderate_lime_green"
                    android:gravity="center"
                    android:id="@id/saved_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/saved" />
            </LinearLayout>
        </LinearLayout>
        <com.android.volley.toolbox.NetworkImageView
            android:id="@id/order_journey"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            app:srcCompat="@drawable/ic_journey_placed" />
        <View
            android:background="@color/gray"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/rs_details_lyt"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.0">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/very_dark_green"
                android:id="@id/rs_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="10.0dip"
                android:text="@string/rs_details"
                android:fontFamily="@font/sf_pro_display_bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/dark_gray"
                android:id="@id/rs_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip"
                android:text="Retailer Shop Name" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/dark_gray"
                android:id="@id/rs_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="Mob: +91 99822422121" />
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/dark_moderate_lime_green"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:text="@string/view_details"
            android:drawableRight="@drawable/ic_action_arrow_forward"
            android:drawablePadding="10.0dip"
            android:fontFamily="@font/sf_pro_display_bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>