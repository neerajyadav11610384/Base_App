<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:background="?colorPrimary"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        app:contentInsetLeft="0.0dip"
        app:contentInsetStart="0.0dip"
        app:contentInsetStartWithNavigation="0.0dip"
        app:theme="@style/AppTheme.AppBarOverlay">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:fontFamily="@font/sf_pro_display_bold" />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/dark_moderate_lime_green"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/img_back"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:scaleType="fitCenter"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/icon_back_white" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/payment"
            android:layout_weight="0.9" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@id/txt_invoice_amt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="40.0dip"
        android:text="Invoice Amount:2000" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/headerLyt"
                    android:background="@drawable/mosambee_button_blue_curved_border"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100.0dip">
                    <LinearLayout
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:padding="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textColor="@color/white"
                            android:id="@id/txt_distributor_name"
                            android:paddingLeft="5.0dip"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:text="Payments Parikh Agency"
                            android:layout_weight="0.6" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textColor="@color/white"
                            android:gravity="center|right"
                            android:id="@id/txt_invoice_no"
                            android:paddingRight="5.0dip"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:text="Invoice No: 0000000001"
                            android:layout_weight="0.4" />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:text="@string/amount_to_pay"
                        android:layout_weight="0.3" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@id/txt_amount_to_pay"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:text="Rs. 2000"
                        android:layout_weight="0.3" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/lyt_payment_option"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip">
                    <Button
                        android:textSize="16.0sp"
                        android:textColor="@color/white"
                        android:id="@id/btn_hul_pay"
                        android:background="@drawable/mosambee_button_curved_border"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_by_unipay"
                        android:layout_weight="0.5" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:layout_weight="0.5">
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_upi_pay"
                            android:background="@drawable/mosambee_button_curved_border"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:text="@string/pay_by_upi"
                            android:layout_weight="0.5" />
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_card_pay"
                            android:background="@drawable/mosambee_button_curved_border"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0.0dip"
                            android:text="@string/pay_by_card"
                            android:layout_weight="0.5" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/lyt_hul_payment"
                android:padding="1.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/lyt_hul_amount"
                    android:background="@color/white"
                    android:padding="5.0dip"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingLeft="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/enter_amount" />
                    <EditText
                        android:textSize="16.0sp"
                        android:id="@id/edt_hul_amount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5.0dip"
                        android:hint="@string/enter_amount"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_weight="1.0"
                        android:inputType="numberDecimal" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_hul_pay_amount_cancel"
                            android:background="@drawable/mosambee_button_curved_border"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/cancel"
                            android:layout_weight="0.4" />
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_hul_pay_amount_proceed"
                            android:background="@drawable/mosambee_button_blue_curved_border"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="5.0dip"
                            android:text="@string/proceed_to_pay"
                            android:layout_weight="0.6" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/lyt_hul_otp"
                    android:background="@drawable/curved_border"
                    android:padding="5.0dip"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:id="@id/txt_otp_sent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30.0dip"
                        android:fontFamily="@font/sf_pro_display_bolditalic" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/green"
                        android:gravity="center"
                        android:id="@id/txt_otp_sent_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30.0dip"
                        android:text="@string/otp_has_been_sent_to_your_mobile" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center_vertical"
                        android:paddingLeft="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5.0dip"
                        android:minHeight="25.0dip"
                        android:text="@string/enter_otp" />
                    <EditText
                        android:textSize="16.0sp"
                        android:id="@id/edt_hul_otp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5.0dip"
                        android:hint="@string/otp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:maxLength="6"
                        android:inputType="number" />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_hul_otp_cancel"
                            android:background="@drawable/mosambee_button_curved_border"
                            android:paddingLeft="10.0dip"
                            android:layout_width="0.0dip"
                            android:layout_height="35.0dip"
                            android:text="@string/cancel"
                            android:layout_weight="0.5" />
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_hul_otp_verify"
                            android:background="@drawable/mosambee_button_blue_curved_border"
                            android:paddingRight="5.0dip"
                            android:layout_width="0.0dip"
                            android:layout_height="35.0dip"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/verify_and_pay"
                            android:layout_weight="0.5" />
                    </LinearLayout>
                    <Button
                        android:textSize="16.0sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@id/btn_hul_otp_resend"
                        android:background="@drawable/mosambee_button_curved_border"
                        android:paddingLeft="30.0dip"
                        android:paddingRight="30.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="35.0dip"
                        android:layout_marginTop="10.0dip"
                        android:text="@string/resend" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/lyt_upi_payment"
                android:padding="1.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/lyt_upi_detail"
                    android:background="@color/white"
                    android:padding="5.0dip"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingLeft="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/enter_amount" />
                    <EditText
                        android:textSize="16.0sp"
                        android:id="@id/edt_upi_amount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:hint="@string/enter_amount"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_weight="1.0"
                        android:inputType="numberDecimal" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingLeft="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/enter_virtual_payment_address" />
                    <EditText
                        android:textSize="16.0sp"
                        android:id="@id/edt_upi_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:hint="@string/enter_payment_address"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_weight="1.0" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_upi_cancel"
                            android:background="@drawable/mosambee_button_curved_border"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/cancel"
                            android:layout_weight="0.4" />
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_upi_proceed"
                            android:background="@drawable/mosambee_button_blue_curved_border"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="5.0dip"
                            android:text="@string/proceed_to_pay"
                            android:layout_weight="0.6" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/lyt_upi_payment_status_detail"
                    android:padding="1.0dip"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center_horizontal"
                        android:id="@id/txt_upi_status_msg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/upi_notify_msg" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center_horizontal"
                        android:id="@id/txt_upi_timer_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/expiry_msg" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center_horizontal"
                        android:id="@id/txt_upi_session_time_left"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="Time Left - 02:59" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_upi_repay"
                            android:background="@drawable/mosambee_button_blue_curved_border"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="20.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:text="@string/repay"
                            android:layout_weight="0.5" />
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_upi_check_status"
                            android:background="@drawable/mosambee_button_blue_curved_border"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.0dip"
                            android:layout_marginTop="20.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:text="@string/check_status"
                            android:layout_weight="0.7" />
                        <Button
                            android:textSize="16.0sp"
                            android:textColor="@color/white"
                            android:id="@id/btn_upi_final_tran_done"
                            android:background="@drawable/mosambee_button_blue_curved_border"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.0dip"
                            android:layout_marginTop="20.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:text="@string/confirm"
                            android:layout_weight="0.5" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/lyt_card_payment"
                android:padding="1.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:orientation="vertical"
                    android:id="@id/frameContainer"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center_vertical"
                    android:paddingLeft="5.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:minHeight="30.0dip"
                    android:text="@string/enter_amount" />
                <EditText
                    android:textSize="16.0sp"
                    android:id="@id/edt_card_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:hint="@string/enter_amount"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1.0"
                    android:inputType="numberDecimal" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/lyt_card_btn_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <Button
                        android:textSize="16.0sp"
                        android:textColor="@color/white"
                        android:id="@id/btn_card_pay_amount_cancel"
                        android:background="@drawable/mosambee_button_curved_border"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/cancel"
                        android:layout_weight="0.4" />
                    <Button
                        android:textSize="16.0sp"
                        android:textColor="@color/white"
                        android:id="@id/btn_card_pay_amount_proceed"
                        android:background="@drawable/mosambee_button_blue_curved_border"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="5.0dip"
                        android:text="@string/proceed_to_pay"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@id/lyt_card_swipe_progress"
                    android:background="@color/white"
                    android:padding="1.0dip"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <com.hul.sambhav.customview.HorizontalDottedProgress
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="20.0sp"
                    android:gravity="center"
                    android:id="@id/txt_card_error"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30.0dip"
                    android:text="@string/error" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@id/lyt_payment_result"
                android:background="@drawable/mosambee_button_curved_border"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:minHeight="60.0dip">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="16.0sp"
                    android:textColor="@color/white"
                    android:id="@id/txt_result_amount"
                    android:padding="5.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:text="REMAINING AMOUNT"
                    android:textAlignment="center" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="16.0sp"
                    android:textColor="@color/white"
                    android:padding="5.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="@string/payment_method_msg"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>