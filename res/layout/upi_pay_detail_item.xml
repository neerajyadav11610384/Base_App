<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_7"
        app:cardCornerRadius="@dimen/dimen_3"
        app:cardElevation="2.0dip"
        app:cardUseCompatPadding="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_41586f"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_paidd"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_medium" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/sf_pro_display_bold" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:id="@id/amount_paid"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:weightSum="2.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_41586f"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_mode"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_medium" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/sf_pro_display_bold" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:id="@id/payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:weightSum="2.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_41586f"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_date"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_medium" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/sf_pro_display_bold" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:id="@id/payment_date"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:weightSum="2.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_41586f"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_status"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_medium" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/sf_pro_display_bold" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:id="@id/paymnt_status"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="5.0dip"
                android:weightSum="2.0">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_41586f"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_id"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_medium" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/sf_pro_display_bold" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/text_color"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:id="@id/tscn_id"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>