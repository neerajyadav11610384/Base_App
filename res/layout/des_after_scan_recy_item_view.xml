<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_5"
    android:layout_marginRight="@dimen/dimen_5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_5"
        app:cardElevation="@dimen/dimen_1"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:id="@id/productDetails"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/imageViewScanProduct"
                    android:layout_width="@dimen/dimen_90"
                    android:layout_height="@dimen/dimen_90"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/color_1c1839_1"
                    android:ellipsize="end"
                    android:id="@id/textViewScanProductName"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:maxLines="2"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginStart="@dimen/dimen_10"
                    app:layout_constraintBottom_toTopOf="@id/textViewScanProductMrpUnit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageViewScanProduct"
                    app:layout_constraintTop_toTopOf="@id/imageViewScanProduct" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/textViewScanProductMrpUnit"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_10"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewScanProduct"
                    app:layout_constraintStart_toEndOf="@id/imageViewScanProduct"
                    app:layout_constraintTop_toBottomOf="@id/textViewScanProductName" />
                <EditText
                    android:enabled="false"
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/textViewScanProductMrpPrice"
                    android:background="@drawable/edit_bg_black_border"
                    android:padding="3.0dip"
                    android:layout_width="100.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:maxLength="7"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:drawableEnd="@drawable/ic_dropdown"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewScanProduct"
                    app:layout_constraintStart_toEndOf="@id/textViewScanProductMrpUnit"
                    app:layout_constraintTop_toBottomOf="@id/textViewScanProductName" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_1c1839_1"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:text="/Unit"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewScanProduct"
                    app:layout_constraintStart_toEndOf="@id/textViewScanProductMrpPrice"
                    app:layout_constraintTop_toBottomOf="@id/textViewScanProductName" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/LayoutRequestTypeMain"
                android:paddingBottom="@dimen/dimen_10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                app:layout_constraintBottom_toTopOf="@id/layoutDateAndMonth"
                app:layout_constraintTop_toBottomOf="@id/productDetails">
                <androidx.appcompat.widget.AppCompatImageView
                    android:gravity="center"
                    android:id="@id/imageViewDeleteButton"
                    android:background="@drawable/drawable_ffe7e7"
                    android:padding="@dimen/dimen_10"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_0"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@id/LayoutRequestType"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/LayoutRequestType"
                    app:srcCompat="@drawable/ic_delete_icon" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@id/LayoutRequestType"
                    android:background="@drawable/spinner_box_bg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_10"
                    app:layout_constraintStart_toEndOf="@id/imageViewDeleteButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.4">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@id/spinnerRequestType"
                        android:background="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:spinnerMode="dropdown"
                        android:layout_marginEnd="@dimen/dimen_8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/requestTypeSpinnerImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_5"
                        app:layout_constraintBottom_toBottomOf="@id/spinnerRequestType"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/spinnerRequestType"
                        app:srcCompat="@drawable/ic_down_arrow" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/unitLayout"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="@dimen/dimen_0"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_10"
                    app:layout_constraintBottom_toBottomOf="@id/LayoutRequestType"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/LayoutRequestType"
                    app:layout_constraintTop_toTopOf="@id/LayoutRequestType">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@id/btnMinus"
                        android:background="@drawable/drawable_left_corner_2392ff"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/productQuantityLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_remove_scan_product" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:background="@color/color_b4c8dc"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="@dimen/dimen_1"
                        app:layout_constraintEnd_toStartOf="@id/btnPlus"
                        app:layout_constraintStart_toEndOf="@id/btnMinus"
                        app:layout_constraintTop_toTopOf="@id/btnMinus" />
                    <View
                        android:background="@color/color_b4c8dc"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="@dimen/dimen_1"
                        app:layout_constraintBottom_toBottomOf="@id/btnMinus"
                        app:layout_constraintEnd_toStartOf="@id/btnPlus"
                        app:layout_constraintStart_toEndOf="@id/btnMinus" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@id/productQuantityLayout"
                        android:layout_width="@dimen/dimen_0"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnPlus"
                        app:layout_constraintStart_toEndOf="@id/btnMinus"
                        app:layout_constraintTop_toTopOf="parent">
                        <EditText
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/color_1c1839_1"
                            android:gravity="center"
                            android:id="@id/product_quantity"
                            android:background="@color/transparent"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="@dimen/dimen_0"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:maxLength="4"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            app:layout_constraintBottom_toTopOf="@id/productUnit"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_percent="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="@dimen/dimen_14sp"
                            android:textColor="@color/color_1c1839_1"
                            android:gravity="center"
                            android:id="@id/productUnit"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:text="@string/units"
                            android:fontFamily="@font/sf_pro_display_medium"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_percent="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/product_quantity" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@id/btnPlus"
                        android:background="@drawable/drawable_right_corner_2392ff"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/productQuantityLayout"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:background="@drawable/ic_add_scan_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center_vertical"
                android:id="@id/layoutDateAndMonth"
                android:paddingBottom="@dimen/dimen_10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                app:layout_constraintTop_toBottomOf="@id/LayoutRequestTypeMain">
                <View
                    android:id="@id/viewDividerHeader"
                    android:background="@color/color_b4c8dc"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_2"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:enabled="false"
                    android:id="@id/textViewPkm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_0"
                    app:layout_constraintBottom_toBottomOf="@id/LayoutMonthSpinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/LayoutMonthSpinner">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:enabled="false"
                        android:textSize="@dimen/dimen_15sp"
                        android:textColor="@color/color_1c1839_1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_0"
                        android:text="@string/manufacturing_nmonth"
                        android:fontFamily="@font/sf_pro_display_medium"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:enabled="false"
                        android:id="@id/txtDealerDiscLabel"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_marginStart="@dimen/dimen_45"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/ic_info" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:enabled="false"
                    android:id="@id/LayoutMonthSpinner"
                    android:background="@drawable/spinner_box_bg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_13"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textViewPkm"
                    app:layout_constraintTop_toBottomOf="@id/viewDividerHeader"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:enabled="false"
                        android:id="@id/spinnerMonth"
                        android:background="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:spinnerMode="dialog"
                        android:layout_marginEnd="@dimen/dimen_8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_5"
                        app:layout_constraintBottom_toBottomOf="@id/LayoutMonthSpinner"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/LayoutMonthSpinner"
                        app:srcCompat="@drawable/ic_down_arrow" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>