<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@id/leftGuidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@id/rightGuidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutOtp"
        android:visibility="visible"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="@id/rightGuidLine"
        app:layout_constraintStart_toStartOf="@id/leftGuidLine"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/color_41586f"
            android:gravity="center"
            android:id="@id/textViewSentOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25"
            android:lineSpacingExtra="8.0sp"
            android:fontFamily="@font/sf_pro_display_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.hul.sambhav.ui.otptextview.OtpTextView
            android:textColor="@color/color_1c1839_1"
            android:id="@id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_28"
            app:bar_enabled="false"
            app:height="40.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewSentOtp"
            app:length="6"
            app:otp_box_background="@drawable/edit_text_white_box_bg"
            app:otp_box_background_active="@drawable/edit_text_blue_box_bg"
            app:otp_text_size="@dimen/dimen_16sp"
            app:width="40.0dip" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/color_ff5f5f"
            android:layout_gravity="center"
            android:id="@id/textViewErrorOtpNumber"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2"
            android:text=""
            android:lineSpacingExtra="7.0sp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:lineHeight="@dimen/dimen_21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otp_view" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/color_00a41a"
            android:layout_gravity="center"
            android:id="@id/textViewResendMsgCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:text=""
            android:fontFamily="@font/sf_pro_display_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewErrorOtpNumber" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewResendMsgCounter">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/color_758da6"
                android:gravity="center"
                android:id="@id/textViewOtpNotReciving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otp_not_reveiced"
                android:fontFamily="@font/sf_pro_display_regular"
                android:layout_marginEnd="@dimen/dimen_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/color_2392ff"
                android:gravity="center"
                android:id="@id/textViewResendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_otp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:layout_marginStart="@dimen/dimen_5"
                app:layout_constraintStart_toEndOf="@id/textViewOtpNotReciving"
                app:layout_constraintTop_toTopOf="@id/textViewOtpNotReciving" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/textViewConfirmBtn"
            android:background="@drawable/bg_login_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_48"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_34"
            android:layout_marginRight="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_20"
            android:text="@string/confirm"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>