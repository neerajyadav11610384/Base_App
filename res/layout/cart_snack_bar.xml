<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:background="@color/color_59e9ce"
    android:layout_width="fill_parent"
    android:layout_height="35.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_marginLeft="16.0dip"
            app:srcCompat="@drawable/ic_cart_added" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:textColor="#ff1c1839"
            android:layout_gravity="center"
            android:id="@id/text_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:lineSpacingExtra="4.0sp"
            android:fontFamily="@font/sf_pro_display_bold" />
        <LinearLayout
            android:gravity="center|right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="16.0dip">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="#ff1c1839"
                android:id="@id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2.5sp"
                android:fontFamily="@font/sf_pro_display_regular" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="#ff1c1839"
                android:id="@id/exp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:fontFamily="@font/sf_pro_display_bold" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@id/txt_savings"
            android:background="@drawable/savings_bg"
            android:paddingLeft="9.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="9.0dip"
            android:paddingBottom="4.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:layout_marginBottom="3.0dip"
            android:text="Savings 0"
            android:layout_below="@id/exp_value"
            android:fontFamily="@font/sf_pro_display_bold" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center|right"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="4.0">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="14.0sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:id="@id/view_cart"
            android:background="@drawable/view_cart_bg"
            android:paddingLeft="14.0dip"
            android:paddingTop="9.0dip"
            android:paddingRight="14.0dip"
            android:paddingBottom="9.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:text="@string/view_cart"
            android:maxLines="1"
            android:fontFamily="@font/sf_pro_display_bold" />
    </LinearLayout>
</LinearLayout>