<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@id/rl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ScrollView
            android:fitsSystemWindows="true"
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@id/brandTL"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_brand"
                    app:endIconMode="dropdown_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                    <AutoCompleteTextView
                        android:textSize="@dimen/dimen_15sp"
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/brands"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@id/brandNameTL"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:hint="@string/brand_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="@dimen/dimen_15sp"
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/brandNameTE"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:imeOptions="actionNext"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@id/totalSaleTL"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:hint="@string/total_sale"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="@dimen/dimen_15sp"
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/totalSale"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@id/brandsOfferTL"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:hint="@string/brands_offer"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="@dimen/dimen_15sp"
                        android:textColor="@color/color_1c1839_1"
                        android:id="@id/brandsOffer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionDone"
                        android:fontFamily="@font/sf_pro_display_regular" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textview.MaterialTextView
                    android:textSize="14.0sp"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/takePhotoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:text="@string/please_take_picture_of_offers_counter_branding"
                    android:fontFamily="@font/sf_pro_display_semibold" />
                <RelativeLayout
                    android:id="@id/imageCaptureRL"
                    android:background="@drawable/dashed_border"
                    android:padding="2.0dip"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="200.0dip"
                    android:layout_marginTop="5.0dip">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/previewIV"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="centerCrop" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/captureIV"
                        android:layout_width="48.0dip"
                        android:layout_height="48.0dip"
                        android:src="@drawable/camera_with_border"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
                <com.google.android.material.button.MaterialButton
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@id/submitBtn"
                    android:background="@drawable/bg_login_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginTop="50.0dip"
                    android:text="@string/submit_camel_case"
                    android:textAllCaps="false"
                    android:fontFamily="@font/sf_pro_display_medium" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <include
        layout="@layout/activity_custom_camera_visitor_details" />
</RelativeLayout>