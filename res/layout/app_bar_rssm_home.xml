<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/lin_lyt"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@id/toolbar"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:elevation="0.0dip"
        app:contentInsetLeft="0.0dip"
        app:contentInsetStart="0.0dip"
        app:contentInsetStartWithNavigation="0.0dip"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/DrawerIcon"
        app:title="@string/app_name_sj"
        app:titleTextColor="@color/colorPrimaryDark">
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@id/title_lyt"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@id/logo"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/ic_launcher" />
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="end"
                android:gravity="center|left"
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/app_name_sj"
                android:maxLines="1"
                android:layout_toRightOf="@id/logo"
                android:layout_centerVertical="true"
                android:textAllCaps="true" />
            <FrameLayout
                android:gravity="right"
                android:id="@id/flyt_notification"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="?actionButtonStyle">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    app:srcCompat="@drawable/ic_sj_notification" />
                <TextView
                    android:textSize="10.0sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="end|center|top"
                    android:id="@id/notify_badge"
                    android:background="@drawable/badge_background"
                    android:padding="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="20.0dip"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="-5.0dip"
                    android:minWidth="20.0dip"
                    android:text="0"
                    android:layout_marginEnd="-5.0dip" />
            </FrameLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/content_rssm_home" />
</LinearLayout>