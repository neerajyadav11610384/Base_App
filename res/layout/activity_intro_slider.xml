<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.viewpager.widget.ViewPager
        android:id="@id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/layoutBars"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginBottom="50.0dip"
        android:layout_alignParentBottom="true" />
    <View
        android:background="@android:color/white"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_above="@id/next"
        android:layout_alignParentLeft="true"
        android:alpha="0.4" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="15.0dip"
        android:textStyle="bold"
        android:textColor="@color/dark_moderate_lime_green"
        android:id="@id/skip"
        android:background="@drawable/left_rounded_corner"
        android:paddingLeft="10.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="15.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30.0dip"
        android:text="@string/txt_skip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="15.0dip"
        android:textStyle="bold"
        android:textColor="@color/dark_moderate_lime_green"
        android:id="@id/done"
        android:background="@drawable/center_rounded_corner"
        android:paddingLeft="30.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="30.0dip"
        android:paddingBottom="8.0dip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30.0dip"
        android:text="@string/txt_done"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="15.0dip"
        android:textStyle="bold"
        android:textColor="@color/dark_moderate_lime_green"
        android:id="@id/next"
        android:background="@drawable/right_rounded_corner"
        android:paddingLeft="15.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30.0dip"
        android:text="@string/txt_next"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>