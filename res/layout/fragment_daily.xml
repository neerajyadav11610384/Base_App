<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="#ffe6eaf4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:id="@id/current_month"
            android:background="@color/white"
            android:paddingLeft="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginBottom="0.0dip"
            android:hint="@string/current_month"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="@dimen/dimen_4" />
        <RelativeLayout
            android:id="@id/lyt_daily_graph"
            android:background="#ffe6eaf4"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@id/rel_stat"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6.0dip">
                <RelativeLayout
                    android:paddingLeft="8.0dip"
                    android:layout_width="200.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:textSize="18.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:id="@id/todays_lebal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/todays_collection"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@id/recyclerview_persent"
                        android:paddingLeft="3.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25.0dip"
                        android:layout_below="@id/todays_lebal" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="150.0dip"
                    android:layout_height="170.0dip"
                    android:layout_alignParentRight="true">
                    <RelativeLayout
                        android:id="@id/linear_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:id="@id/rel_pie_circle"
                            android:layout_width="130.0dip"
                            android:layout_height="130.0dip"
                            android:layout_marginRight="8.0dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:layout_centerInParent="true">
                                <TextView
                                    android:textSize="16.0dip"
                                    android:textStyle="bold"
                                    android:paddingRight="5.0dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rs_symbol" />
                                <TextView
                                    android:textSize="16.0dip"
                                    android:textStyle="bold"
                                    android:id="@id/txt_total_collection"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:text="@string/dmyAmt" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:textSize="16.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_collection"
                        android:layout_below="@id/linear_rel"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/lyt_daily_earning"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/dimen_18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:gravity="center|left"
                android:background="@color/colorWhite"
                android:paddingLeft="6.0dip"
                android:layout_width="fill_parent"
                android:layout_height="47.0sp"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_marginRight="@dimen/dimen_6"
                android:text="@string/daily_earning" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/mRecyclerview"
                android:background="#ffe6eaf4"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="18.0sp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@id/no_item_msg"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_data_found_msg"
        android:layout_centerInParent="true" />
</RelativeLayout>