<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_1"
    android:layout_marginBottom="@dimen/dimen_1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@id/leftGuidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.03" />
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@id/rightGuidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97" />
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_5"
        app:cardElevation="@dimen/dimen_0"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="@id/rightGuidLine"
        app:layout_constraintStart_toStartOf="@id/leftGuidLine"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:padding="@dimen/dimen_10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/imageViewProductImage"
                android:layout_width="@dimen/dimen_110"
                android:layout_height="@dimen/dimen_110"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:id="@id/viewImageFaded"
                android:background="#70ffffff"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="@dimen/dimen_0"
                app:layout_constraintBottom_toBottomOf="@id/imageViewProductImage"
                app:layout_constraintEnd_toEndOf="@id/imageViewProductImage"
                app:layout_constraintStart_toStartOf="@id/imageViewProductImage"
                app:layout_constraintTop_toTopOf="@id/imageViewProductImage" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/textViewNotAvailable"
                android:background="@drawable/drawable_758da6"
                android:paddingTop="@dimen/dimen_3"
                android:paddingBottom="@dimen/dimen_3"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:text="@string/not_available"
                android:fontFamily="@font/sf_pro_display_regular"
                app:layout_constraintEnd_toEndOf="@id/imageViewProductImage"
                app:layout_constraintStart_toStartOf="@id/imageViewProductImage"
                app:layout_constraintTop_toBottomOf="@id/imageViewProductImage" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/color_1c1839_1"
                android:ellipsize="end"
                android:id="@id/textViewProductName"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:maxLines="2"
                android:fontFamily="@font/sf_pro_display_medium"
                app:layout_constraintEnd_toStartOf="@id/imageViewDelete"
                app:layout_constraintStart_toEndOf="@id/imageViewProductImage"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/imageViewDelete"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewProductName"
                app:layout_constraintTop_toTopOf="@id/textViewProductName"
                app:srcCompat="@drawable/ic_delete" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/notifyMe_lyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                app:layout_constraintBottom_toBottomOf="@id/textViewNotAvailable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.5">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/imageViewNotifyDone"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/notify" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/imageViewNotify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_notify_new" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/color_41586f"
                    android:id="@id/textViewNotifyMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:text="Notify me"
                    android:fontFamily="@font/sf_pro_display_medium"
                    app:layout_constraintStart_toEndOf="@id/imageViewNotify"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.Group
                    android:id="@id/groupNotify"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="imageViewNotify,textViewNotifyMe" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/color_1c1839_1"
                android:id="@id/textViewRequested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="Requested :"
                android:fontFamily="@font/sf_pro_display_regular"
                app:layout_constraintStart_toStartOf="@id/textViewNotAvailable"
                app:layout_constraintTop_toBottomOf="@id/textViewNotAvailable" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_1c1839_1"
                android:id="@id/textViewRequestedItemCount"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_6"
                android:fontFamily="@font/sf_pro_display_regular"
                android:layout_marginStart="@dimen/dimen_5"
                app:layout_constraintBottom_toBottomOf="@id/textViewRequested"
                app:layout_constraintEnd_toStartOf="@id/textViewAvailable"
                app:layout_constraintStart_toEndOf="@id/textViewRequested"
                app:layout_constraintTop_toTopOf="@id/textViewRequested" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/color_1c1839_1"
                android:id="@id/textViewAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_6"
                android:text="Available :"
                android:fontFamily="@font/sf_pro_display_regular"
                android:layout_marginEnd="@dimen/dimen_5"
                app:layout_constraintBottom_toBottomOf="@id/textViewRequested"
                app:layout_constraintEnd_toStartOf="@id/textViewAvailableItemCount"
                app:layout_constraintStart_toEndOf="@id/textViewRequestedItemCount"
                app:layout_constraintTop_toTopOf="@id/textViewRequested" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_1c1839_1"
                android:id="@id/textViewAvailableItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                app:layout_constraintBottom_toBottomOf="@id/textViewAvailable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textViewAvailable" />
            <androidx.constraintlayout.widget.Group
                android:id="@id/groupLimitedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="textViewRequested,textViewRequestedItemCount,textViewAvailable,textViewAvailableItemCount" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/layoutViewDiscount"
            android:background="@drawable/drawable_circle_ff5f5f"
            android:padding="@dimen/dimen_3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/textViewViewDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>