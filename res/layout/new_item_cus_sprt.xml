<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:orientation="vertical"
    android:id="@id/cs_card_item"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5.0dip"
    android:layout_marginTop="10.0dip"
    android:layout_marginRight="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_4sp"
        android:layout_marginTop="@dimen/dimen_12sp"
        android:layout_marginRight="@dimen/dimen_4sp"
        android:layout_marginBottom="@dimen/dimen_12sp"
        android:weightSum="6.0">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:id="@id/cs_img_icon"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_cart" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4.0">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_1c1839_1"
                android:id="@id/cs_ord_detail_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Order Detail"
                android:fontFamily="@font/sf_pro_display_regular" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_12sp"
                android:textColor="@color/color_758da6"
                android:ellipsize="end"
                android:id="@id/cs_ord_detail_module_text"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Order Detail"
                android:maxLines="1"
                android:fontFamily="@font/sf_pro_display_regular" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                app:srcCompat="@drawable/ic_right_arrow" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>