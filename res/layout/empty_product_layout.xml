<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="320.0dip"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@color/white"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/prod_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@id/frame_item"
                android:background="@drawable/layout_border"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip">
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_gravity="center"
                    android:id="@id/imageViewBrandAllProducts"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="5.0dip"
                    android:visibility="visible"
                    android:layout_width="200.0dip"
                    android:layout_height="137.0dip" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:id="@id/offer_bar"
                    android:background="@color/dark_moderate_lime_green"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.0dip"
                    android:layout_marginTop="10.0dip">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_gravity="center"
                        android:layout_width="15.0dip"
                        android:layout_height="15.0dip"
                        android:layout_marginLeft="0.0dip"
                        app:srcCompat="@drawable/ic_scheme" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="10.0sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@id/offer_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offer" />
                </LinearLayout>
            </FrameLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/productname"
                android:textColor="#ff202020"
                android:gravity="center_vertical"
                android:id="@id/productNameTextView"
                android:background="@color/white"
                android:paddingBottom="2.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:text="Product Name Product Name Product Name Product Name Product Name"
                android:maxLines="2"
                android:fontFamily="@font/sf_pro_display_regular" />
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/mrptextsize"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@id/mrp"
                    android:background="@color/white"
                    android:paddingLeft="5.0dip"
                    android:paddingTop="1.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="MRP Rs. 10.00"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/turtextsize"
                android:textStyle="bold"
                android:textColor="@color/very_dark_green"
                android:id="@id/tur"
                android:background="@color/white"
                android:paddingLeft="5.0dip"
                android:paddingTop="1.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="TUR Rs. 10.00"
                android:fontFamily="@font/sf_pro_display_bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/turtextsize"
                android:textColor="@color/light_red"
                android:id="@id/tv_limited_stock"
                android:background="@color/white"
                android:paddingLeft="5.0dip"
                android:paddingTop="1.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/limited_stock"
                android:fontFamily="@font/sf_pro_display_regular" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@id/add_btn_layout"
            android:background="@drawable/green_rounded_corner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginBottom="2.0dip"
            android:layout_alignParentBottom="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:gravity="center"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                app:srcCompat="@drawable/icon_cart" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/add_to_cart"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:fontFamily="@font/sf_pro_display_regular" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_above="@id/add_btn_layout">
            <RadioGroup
                android:orientation="horizontal"
                android:id="@id/radio_group"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:textSize="10.0sp"
                    android:textColor="@drawable/text_color_selector"
                    android:gravity="center"
                    android:id="@id/radio_btn_units"
                    android:background="@drawable/radio_btn_selector"
                    android:visibility="gone"
                    android:layout_width="0.0dip"
                    android:layout_height="35.0dip"
                    android:text="@string/units"
                    android:layout_weight="1.0"
                    app:buttonCompat="@null" />
                <RadioButton
                    android:textSize="10.0sp"
                    android:textColor="@drawable/text_color_selector"
                    android:gravity="center"
                    android:id="@id/radio_btn_dozen"
                    android:background="@drawable/radio_btn_selector"
                    android:visibility="gone"
                    android:layout_width="0.0dip"
                    android:layout_height="35.0dip"
                    android:text="@string/dozen"
                    android:layout_weight="1.0"
                    app:buttonCompat="@null" />
                <RadioButton
                    android:textSize="10.0sp"
                    android:textColor="@drawable/text_color_selector"
                    android:gravity="center"
                    android:id="@id/radio_btn_cld"
                    android:background="@drawable/radio_btn_selector"
                    android:visibility="gone"
                    android:layout_width="0.0dip"
                    android:layout_height="35.0dip"
                    android:text="@string/cld"
                    android:layout_weight="1.0"
                    app:buttonCompat="@null" />
            </RadioGroup>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_gravity="top"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="25.0dip"
                    android:layout_marginTop="5.0dip"
                    android:weightSum="10.0">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/btnMinus"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5.0dip"
                        android:layout_weight="2.0"
                        app:srcCompat="@drawable/minus" />
                    <EditText
                        android:textSize="16.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@id/count"
                        android:background="@drawable/layout_border_editbox"
                        android:paddingLeft="3.0dip"
                        android:paddingRight="3.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:text="1"
                        android:maxLength="6"
                        android:layout_weight="6.0"
                        android:inputType="number"
                        android:imeOptions="actionDone" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/btnPlus"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5.0dip"
                        android:layout_weight="2.0"
                        app:srcCompat="@drawable/plus_blue" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/overlay_lyt"
        android:background="@color/white_transperent"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="@color/bright_red"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/out_of_stock"
            android:fontFamily="@font/sf_pro_display_bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>