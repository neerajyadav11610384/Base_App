<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="15.0sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/scan_code"
            android:background="@color/dark_moderate_lime_green"
            android:padding="10.0dip"
            android:layout_width="140.0dip"
            android:layout_height="40.0dip"
            android:text="@string/barcodescan_text"
            android:layout_weight="1.0" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="15.0sp"
            android:textStyle="normal"
            android:gravity="center"
            android:id="@id/scan_text"
            android:background="@color/gray"
            android:padding="10.0dip"
            android:layout_width="140.0dip"
            android:layout_height="40.0dip"
            android:text="@string/imagescan_text"
            android:layout_weight="1.0" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="250.0dip"
        android:foreground="@drawable/scan_container">
        <SurfaceView
            android:id="@id/surfaceView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <SurfaceView
            android:id="@id/surfaceView2"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <View
            android:id="@id/line"
            android:background="#ffcc0000"
            android:layout_width="fill_parent"
            android:layout_height="2.0dip" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="bottom|center|right"
            android:id="@id/img_flash"
            android:background="@drawable/ic_flash_off"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip"
            android:visibility="gone"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_margin="10.0dip" />
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/hint_scan_text"
        android:background="@drawable/layout_bg"
        android:paddingLeft="10.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="@string/barcode_scan_hint_text" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="15.0sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/capture_text"
        android:background="@color/dark_moderate_lime_green"
        android:padding="10.0dip"
        android:visibility="invisible"
        android:layout_width="140.0dip"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:text="@string/capture_text" />
</LinearLayout>