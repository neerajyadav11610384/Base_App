<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/lyt_coordinate"
    android:background="@color/black"
    android:visibility="gone"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.camera.view.PreviewView
        android:id="@id/previewView"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/camera_bottom_sheet" />
    <ImageView
        android:id="@id/img_preview"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />
    <androidx.cardview.widget.CardView
        android:id="@id/camera_bottom_sheet"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip"
        android:layout_alignParentBottom="true"
        android:alpha="1.0"
        app:cardBackgroundColor="@color/uvv_black">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@id/lyt_zoom_bar"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_margin="@dimen/dimen_5">
            <ImageView
                android:id="@id/minus_iv"
                android:paddingBottom="@dimen/dimen_8"
                android:layout_width="35.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_minus_icon_1" />
            <SeekBar
                android:id="@id/zoomBar"
                android:padding="0.0dip"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_margin="0.0dip"
                android:max="100"
                android:layout_toLeftOf="@id/plus_iv"
                android:layout_toRightOf="@id/minus_iv"
                android:elevation="2.0dip"
                android:progressBackgroundTint="#80ffff00"
                android:thumbTint="@color/light_blue" />
            <ImageView
                android:id="@id/plus_iv"
                android:paddingBottom="@dimen/dimen_8"
                android:layout_width="35.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_plus_icon"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="start|center"
            android:id="@id/btn_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:src="@drawable/flash_off"
            android:layout_marginStart="50.0dip"
            android:tintMode="src_in"
            android:elevation="5.0dip"
            app:backgroundTint="#ffb1aeae"
            app:borderWidth="0.0dip"
            app:tint="@color/white" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="end|center"
            android:id="@id/img_capture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:src="@drawable/camera"
            android:layout_marginEnd="50.0dip"
            android:elevation="5.0dip"
            android:backgroundTint="@color/white"
            app:backgroundTint="@color/white"
            app:tint="#ff4a4a4a" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@id/camera_bottom_sheet_status"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip"
        android:layout_alignParentBottom="true"
        android:alpha="1.0"
        app:cardBackgroundColor="@color/uvv_black">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="start|center"
            android:id="@id/btn_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_marginStart="50.0dip"
            android:tintMode="src_in"
            android:elevation="5.0dip"
            app:backgroundTint="#ffb1aeae"
            app:borderWidth="0.0dip"
            app:tint="@color/white" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/img_preview_icon"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_marginTop="@dimen/dimen_16"
            app:civ_border_color="@color/color_758da6"
            app:civ_border_width="0.5dip"
            app:srcCompat="@drawable/default_img" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="end|center"
            android:id="@id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:src="@drawable/ic_accept_pic"
            android:layout_marginEnd="50.0dip"
            android:tintMode="src_in"
            android:elevation="5.0dip"
            app:backgroundTint="#ffb1aeae"
            app:borderWidth="0.0dip"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@id/img_cc_close"
        android:background="@drawable/bg_e6eaf4_circle"
        android:padding="@dimen/dimen_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:src="@drawable/ic_close_black"
        android:layout_alignParentEnd="true" />
</RelativeLayout>