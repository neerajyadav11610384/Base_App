<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/fragment_onboarding_qrcode"
    android:background="#b3000000"
    android:visibility="visible"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/lyt_onboarding"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:background="#ff2392ff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16"
                android:text="Shikhar Store Onboarding"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="8.0sp"
                fontFamily="\@fonts/sf_pro_display_medium" />
            <ImageView
                android:id="@id/onboard_cancel_button"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_marginRight="@dimen/dimen_16"
                android:src="@drawable/ic_close_white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <View
            android:background="#ffe6eaf4"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:layout_below="@id/cancel_button" />
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16.0sp"
                    android:textStyle="normal"
                    android:textColor="#ff1c1839"
                    android:id="@id/tv_user_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_14"
                    android:text="Dear Pankaj Tripathi, Earn Rs.100 for new Shikhar onboarded Stores."
                    android:lineSpacingExtra="8.0sp"
                    fontFamily="\@fonts/sf_pro_display_regular" />
                <TextView
                    android:textSize="16.0sp"
                    android:textStyle="normal"
                    android:textColor="#ff1c1839"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:text="Start Onboarding!"
                    android:lineSpacingExtra="8.0sp"
                    fontFamily="\@fonts/sf_pro_display_regular" />
                <ImageView
                    android:layout_gravity="center"
                    android:id="@id/img_qrcode"
                    android:layout_width="180.0dip"
                    android:layout_height="180.0dip"
                    android:src="@drawable/url_link" />
                <TextView
                    android:textSize="16.0sp"
                    android:textStyle="normal"
                    android:textColor="#ff7a869a"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan QR"
                    android:lineSpacingExtra="8.0sp"
                    fontFamily="\@fonts/sf_pro_display_regular" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginBottom="@dimen/dimen_16">
                    <EditText
                        android:textSize="@dimen/dimen_14sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textColorHint="#ff758da6"
                        android:id="@id/tv_outlet_mobile"
                        android:background="@drawable/edit_text_white_box_bg"
                        android:paddingLeft="@dimen/dimen_12"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_margin="@dimen/dimen_16"
                        android:hint="Enter Store Mobile"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:layout_weight="3.0"
                        android:lineSpacingExtra="0.0sp"
                        android:inputType="phone" />
                    <Button
                        android:textSize="@dimen/dimen_16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@id/btn_send_sms"
                        android:background="@drawable/drawable_2392ff_5dp"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_16"
                        android:text="Send SMS"
                        android:layout_weight="2.0"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>