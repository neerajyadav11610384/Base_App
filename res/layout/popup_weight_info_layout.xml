<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutWeightMain"
        android:background="@drawable/popup_weight_main_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_35"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_marginEnd="@dimen/dimen_6"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/main_layout"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:layout_marginStart="@dimen/dimen_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/layoutColorCode"
                android:background="@drawable/color_code_bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:layout_constraintBottom_toBottomOf="@id/main_layout"
                app:layout_constraintEnd_toEndOf="@id/main_layout"
                app:layout_constraintStart_toStartOf="@id/main_layout"
                app:layout_constraintTop_toTopOf="@id/main_layout" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@id/img_transparent"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/img_transparent_lowbg"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="@id/main_layout"
                app:layout_constraintEnd_toEndOf="@id/main_layout"
                app:layout_constraintStart_toStartOf="@id/main_layout"
                app:layout_constraintTop_toTopOf="@id/main_layout"
                app:shapeAppearanceOverlay="@style/roundImageView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@id/textViewColorNameAndCode"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:text="Beige | 60"
            android:maxLines="1"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginStart="@dimen/dimen_5"
            android:layout_marginEnd="@dimen/dimen_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageViewOffers"
            app:layout_constraintStart_toEndOf="@id/main_layout"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/imageViewOffers"
            android:visibility="gone"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chipPackTag"
            app:layout_constraintStart_toEndOf="@id/textViewColorNameAndCode"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_offer_red" />
        <com.google.android.material.chip.Chip
            android:enabled="false"
            android:textAppearance="@style/chip_text_small"
            android:textSize="@dimen/dimen_18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/chipPackTag"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETS"
            android:maxLines="1"
            android:fontFamily="@font/sf_pro_display_regular"
            android:layout_marginEnd="@dimen/dimen_10"
            app:chipBackgroundColor="@color/color_FF6565"
            app:chipEndPadding="@dimen/dimen_5"
            app:chipMinHeight="@dimen/dimen_18"
            app:chipMinTouchTargetSize="0.0dip"
            app:chipStartPadding="@dimen/dimen_5"
            app:chipStrokeColor="@color/white"
            app:chipStrokeWidth="@dimen/dimen_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutCartCount"
        android:background="@drawable/circle_00a41a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dimen_20"
        android:minHeight="@dimen/dimen_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_11sp"
            android:textColor="@color/white"
            android:id="@id/textViewCartCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>