<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutBTPRHeader"
        android:background="@drawable/drawable_2392ff_2dp"
        android:padding="5.0dip"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_3"
        android:layout_marginBottom="@dimen/dimen_3"
        android:layout_marginStart="@dimen/dimen_5"
        android:layout_marginEnd="@dimen/dimen_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/white"
            android:id="@id/textViewBTPRChild"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:text="Activity 1 DESC"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_8"
            app:layout_constraintBottom_toBottomOf="@id/imageViewBTPRTypeExpend"
            app:layout_constraintEnd_toStartOf="@id/imageViewBTPRAddToCartCheck"
            app:layout_constraintStart_toEndOf="@id/imageViewBTPRTypeExpend"
            app:layout_constraintTop_toTopOf="@id/imageViewBTPRTypeExpend" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/imageViewBTPRTypeExpend"
            android:padding="@dimen/dimen_4"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:layout_marginEnd="@dimen/dimen_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add_white" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/imageViewBTPRAddToCartCheck"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewBTPRChild"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_btpr_cart_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recyclerViewBTPRProduct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_3"
        android:layout_marginBottom="@dimen/dimen_3"
        android:layout_marginStart="@dimen/dimen_2"
        android:layout_marginEnd="@dimen/dimen_2"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutBTPRHeader" />
</androidx.constraintlayout.widget.ConstraintLayout>