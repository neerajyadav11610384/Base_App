                android:textColor="@color/color_2392ff"
                android:id="@id/textViewHelpDisPhoneNo"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_10"
                android:fontFamily="@font/sf_pro_display_medium"
                android:drawableTint="@color/color_2392ff"
                app:drawableLeftCompat="@drawable/ic_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewDisName" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/locationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewHelpDisPhoneNo"
