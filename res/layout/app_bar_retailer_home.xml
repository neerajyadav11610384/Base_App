<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/ret_screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:background="#eeffffff"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        app:theme="@style/DrawerIcon">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/constraintLayoutSearch"
                android:background="@drawable/light_green_rounded_corner"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_48"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_toLeftOf="@id/toolbar_ic_lyt"
                android:layout_centerVertical="true">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center_vertical"
                    android:id="@id/imageViewSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_search_wrapped" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textColorHint="@color/color_758da6"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@id/textViewSearchView"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:text="@string/search_products"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:layout_marginStart="@dimen/dimen_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageViewSearchMic"
                    app:layout_constraintStart_toEndOf="@id/imageViewSearch"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/imageViewSearchMic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textViewSearchView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_search_mic" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/title_lyt"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/toolbar_ic_lyt">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:id="@id/logo"
                    android:visibility="gone"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_marginRight="5.0dip"
                    app:srcCompat="@mipmap/ic_launcher" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="14.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/app_name_sj"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:fontFamily="@font/sf_pro_display_bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@id/search_lyt_titlebar"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/toolbar_ic_lyt">
                <FrameLayout
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/light_green_rounded_corner"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_40">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center_vertical"
                            android:id="@id/imageViewSearchIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_search_wrapped" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/color_758da6"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:id="@id/textViewSearchActionBar"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="wrap_content"
                            android:text="@string/search_products"
                            android:fontFamily="@font/sf_pro_display_regular"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imageViewSearchIcon"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_40">
                        <com.hul.sambhav.customview.DelayAutoCompleteTextView
                            android:textSize="@dimen/dimen_16sp"
                            android:textColorHint="@color/color_758da6"
                            android:layout_gravity="center"
                            android:id="@id/autoCompleteTextView"
                            android:background="@drawable/light_green_rounded_corner"
                            android:paddingLeft="5.0dip"
                            android:paddingRight="5.0dip"
                            android:visibility="gone"
                            android:longClickable="false"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_height="@dimen/dimen_40"
                            android:hint="@string/search_products"
                            android:singleLine="true"
                            android:drawablePadding="@dimen/dimen_5"
                            android:layout_weight="1.0"
                            android:lineSpacingExtra="8.0sp"
                            android:imeOptions="actionSearch"
                            android:fontFamily="@font/sf_pro_display_regular"
                            app:drawableLeftCompat="@drawable/ic_search_wrapped"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/imageViewVoiceSearch"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@id/imageViewVoiceSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_search_mic" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_gravity="center"
                    android:id="@id/cmrbar"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <com.google.android.material.tabs.TabLayout
                    android:id="@id/tabs"
                    android:background="@drawable/green_rounded_corner"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="#ffffe100"
                    app:tabIndicatorHeight="3.0dip"
                    app:tabMaxWidth="0.0dip"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/toolbar_ic_lyt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_alignParentRight="true">
                <ToggleButton
                    android:textColor="@color/white"
                    android:id="@id/search_type"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="Solar"
                    android:textOff="ROR" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/home"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="15.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_home" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/notification"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="15.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_action_notifications" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/unipay_lyt"
                    android:paddingLeft="@dimen/dimen_2"
                    android:paddingRight="@dimen/dimen_5"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        app:srcCompat="@drawable/ic_ushop_logo_c77f15" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_c77f15"
                        android:gravity="center"
                        android:id="@id/unipay"
                        android:paddingBottom="4.0dip"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_3"
                        android:text="0"
                        android:fontFamily="@font/anton_regular" />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/imageViewScanProduct"
                    android:padding="@dimen/dimen_5"
                    android:visibility="gone"
                    android:layout_width="36.0dip"
                    android:layout_height="36.0dip"
                    app:srcCompat="@drawable/ic_barcode_scanner" />
                <FrameLayout
                    android:layout_gravity="center"
                    android:id="@id/cart"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="@dimen/dimen_3"
                    android:layout_marginEnd="@dimen/dimen_8">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/toolbar_cart_icon"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginEnd="@dimen/dimen_5"
                        app:srcCompat="@drawable/ic_cart" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/dimen_10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="end|center|top"
                        android:id="@id/cart_count"
                        android:background="@drawable/circle_bg"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_7"
                        android:text=""
                        android:fontFamily="@font/maisonneue_bold" />
                </FrameLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/logout"
                    android:visibility="visible"
                    android:layout_width="34.0dip"
                    android:layout_height="34.0dip"
                    android:layout_marginEnd="@dimen/dimen_5"
                    app:srcCompat="@drawable/ic_logout_red" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_kpi_achievement" />
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_earning_potential" />
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/content_retailer_home" />
</LinearLayout>