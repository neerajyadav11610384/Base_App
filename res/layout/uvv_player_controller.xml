<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/transparent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/loading_layout"
        android:background="@color/uvv_black"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <include
            layout="@layout/uvv_on_loading_layout" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/error_layout"
        android:background="@color/uvv_black"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <include
            layout="@layout/uvv_on_error_layout" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/title_part"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_alignParentTop="true">
        <ImageButton
            android:gravity="center"
            android:id="@id/back_btn"
            android:background="#00000000"
            android:padding="5.0dip"
            android:visibility="invisible"
            android:layout_width="@dimen/dimen_48"
            android:layout_height="@dimen/dimen_48"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_48dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_18sp"
            android:textColor="#ffffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@id/title"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_30"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/dimen_50"
            android:singleLine="true" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/center_play_btn"
        android:visibility="invisible"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        app:srcCompat="@drawable/uvv_itv_player_play" />
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@id/control_layout"
        android:background="@color/uvv_titlebar_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:gravity="center"
            android:id="@id/turn_button"
            android:background="#00000000"
            android:padding="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/uvv_player_player_btn" />
        <ImageButton
            android:id="@id/scale_button"
            android:background="#00000000"
            android:padding="@dimen/dimen_10"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_3"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/uvv_player_scale_btn" />
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/scale_button"
            android:layout_toRightOf="@id/turn_button">
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/uvv_light_gray"
                android:layout_gravity="center_vertical"
                android:id="@id/has_played"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="00:00" />
            <SeekBar
                android:layout_gravity="center"
                android:id="@id/seekbar"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/dimen_2"
                android:indeterminateDrawable="@drawable/uvv_star_play_progress_seek"
                android:progressDrawable="@drawable/uvv_star_play_progress_seek"
                android:minHeight="@dimen/dimen_2"
                android:thumb="@drawable/ic_fiber_manual_record_white"
                android:thumbOffset="10.0dip"
                android:layout_weight="1.0" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/uvv_light_gray"
                android:layout_gravity="center_vertical"
                android:id="@id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10"
                android:text="00:00" />
            <ImageButton
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/mute_button"
                android:background="#00000000"
                android:padding="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_volume_up_black_24dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>