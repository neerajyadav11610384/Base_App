<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/color_e6eaf4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="normal"
        android:textColor="@color/color_1c1839_1"
        android:gravity="center|left"
        android:id="@id/header"
        android:background="@color/color_4ae2cb"
        android:paddingLeft="@dimen/dimen_10"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:lineSpacingExtra="@dimen/dimen_8sp"
        android:fontFamily="\@fonts/sf_pro_display_medium" />
    <ScrollView
        android:id="@id/channel_tnc"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_above="@id/lyt_submit"
        android:layout_below="@id/header">
        <LinearLayout
            android:orientation="vertical"
            android:padding="0.0dip"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dimen_10">
            <WebView
                android:id="@id/terms_cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/store_name"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dimen_8sp"
                    android:fontFamily="\@fonts/sf_pro_display_medium" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/store_id"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="7.0sp"
                    android:fontFamily="\@fonts/sf_pro_display_regular" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/color_91c8ff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_18sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/rs_name"
                    android:padding="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="9.0sp"
                    android:fontFamily="\@fonts/sf_pro_display_medium" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="18.0sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/rs_phone"
                    android:padding="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_5"
                    android:lineSpacingExtra="9.0sp"
                    android:fontFamily="\@fonts/sf_pro_display_medium"
                    app:drawableLeftCompat="@drawable/ic_phone_in_talk_24dp_white" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/rs_address"
                    android:padding="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_5"
                    android:lineSpacingExtra="7.0sp"
                    android:fontFamily="\@fonts/sf_pro_display_regular"
                    app:drawableLeftCompat="@drawable/ic_location_icon_new_white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/lyt_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/color_b4c8dc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_41586f"
                android:id="@id/channel_tnc_consent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/accept_tnc"
                android:fontFamily="\@fonts/sf_pro_display_regular"
                app:buttonTint="@color/color_2392ff" />
            <androidx.appcompat.widget.AppCompatCheckBox
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_41586f"
                android:id="@id/channel_no_consent"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/reject_tnc"
                android:fontFamily="\@fonts/sf_pro_display_regular"
                app:buttonTint="@color/color_2392ff" />
            <androidx.appcompat.widget.AppCompatCheckBox
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_41586f"
                android:id="@id/whatsapp_optin"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15.0dip"
                android:text="@string/whatsapp_updates"
                android:fontFamily="\@fonts/sf_pro_display_regular"
                app:buttonTint="@color/color_2392ff" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold"
            android:textColor="@color/color_e6eaf4"
            android:gravity="center"
            android:id="@id/submit_channel_enrollment"
            android:background="@color/color_e6eaf4"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="fill_parent"
            android:layout_height="55.0dip"
            android:text="@string/submit"
            android:lineSpacingExtra="9.0sp"
            android:fontFamily="\@fonts/sf_pro_display_bold" />
    </LinearLayout>
</RelativeLayout>