<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/textViewDate"
        android:background="@color/color_758da6"
        android:padding="@dimen/dimen_10"
        android:visibility="gone"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@id/spaceView"
        android:visibility="gone"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDate" />
    <LinearLayout
        android:id="@id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8">
            <LinearLayout
                android:id="@id/layoutInvoice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/imageViewAppIcon"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    app:srcCompat="@drawable/ic_mobile_pay" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/color_1c1839_1"
                    android:ellipsize="end"
                    android:id="@id/textViewInvoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:text="Invoice ID : 479382190"
                    android:maxLines="1"
                    android:fontFamily="@font/sf_pro_display_regular" />
            </LinearLayout>
            <LinearLayout
                android:id="@id/amountLayout"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutInvoice">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_weight="1.0"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="@dimen/dimen_14sp"
                                android:textColor="@color/color_41586f"
                                android:id="@id/textViewOrderOn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Orderd on"
                                android:layout_weight="4.0"
                                android:fontFamily="@font/sf_pro_display_medium" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="@dimen/dimen_16sp"
                                android:textColor="@color/color_1c1839_1"
                                android:id="@id/textViewOrderOnValue"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="10 May 2020"
                                android:layout_weight="3.0"
                                android:fontFamily="@font/sf_pro_display_medium" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="@dimen/dimen_14sp"
                                android:textColor="@color/color_41586f"
                                android:id="@id/textViewTotalAmount"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:text="@string/pending_amount"
                                android:layout_weight="4.0"
                                android:fontFamily="@font/sf_pro_display_medium" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="@dimen/dimen_16sp"
                                android:textColor="@color/color_1c1839_1"
                                android:id="@id/textViewTotalAmountValue"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:text="₹ 4655"
                                android:layout_weight="3.0"
                                android:fontFamily="@font/sf_pro_display_bold" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@id/layoutPay"
                        android:background="@drawable/background_border_color_2392ff"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3.0">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textSize="@dimen/dimen_18sp"
                            android:textColor="@color/color_2392ff"
                            android:id="@id/buttonPayNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pay"
                            android:fontFamily="@font/sf_pro_display_bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/payable_amt_lyt"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/color_41586f"
                    android:id="@id/payableAmount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="@string/paying_amount"
                    android:layout_weight="4.0"
                    android:fontFamily="@font/sf_pro_display_medium" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/dimen_25"
                    android:textColor="@color/color_1c1839_1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹" />
                <androidx.appcompat.widget.AppCompatEditText
                    android:textSize="@dimen/dimen_18sp"
                    android:textColor="@color/color_1c1839_1"
                    android:id="@id/editPayableAmountValue"
                    android:background="@drawable/background_border_color_2392ff"
                    android:paddingLeft="@dimen/dimen_5"
                    android:paddingRight="@dimen/dimen_5"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginLeft="@dimen/dimen_7"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:maxLength="10"
                    android:layout_weight="3.0"
                    android:inputType="number"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:paddingStart="@dimen/dimen_5"
                    app:drawableRightCompat="@drawable/ic_baseline_edit_24" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/confirm_pay"
                android:background="@drawable/drawable_2392ff_5dp"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_margin="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="@string/pay"
                android:lineSpacingExtra="9.0sp"
                android:fontFamily="@font/sf_pro_display_bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/dimen_15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/continue_payment"
                android:background="@drawable/drawable_2392ff_5dp"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:text="@string/btn_continue"
                android:fontFamily="@font/sf_pro_display_bold" />
            <View
                android:background="@color/color_e6eaf4"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_1"
                android:layout_marginTop="@dimen/dimen_10"
                app:layout_constraintTop_toBottomOf="@id/layoutPay" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>