<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3.0dip"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/lin_item_layout"
        android:paddingRight="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="2.0">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.3">
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/very_dark_gray"
                android:ellipsize="end"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:id="@id/brand_desc"
                android:paddingLeft="10.0dip"
                android:paddingTop="15.0dip"
                android:paddingRight="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="SURF EXL EW 500G, 700G   Guj TAP in MOC 6"
                android:maxLines="1"
                android:singleLine="true" />
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="14.0sp"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:id="@id/scheme_desc"
                android:paddingLeft="10.0dip"
                android:paddingRight="5.0dip"
                android:paddingBottom="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="SURF EXL EW 500G, 700G   Guj TAP in MOC 6"
                android:fontFamily="@font/sf_pro_display_regular" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/dotted_frame_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20.0dip">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="16.0sp"
                    android:textColor="@color/light_red"
                    android:gravity="center"
                    android:id="@id/txt_days_left"
                    android:paddingTop="3.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/sf_pro_display_regular" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12.0sp"
                    android:textColor="@color/light_red"
                    android:gravity="center"
                    android:id="@id/days_label"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:paddingBottom="3.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/days_left"
                    android:fontFamily="@font/sf_pro_display_regular" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/start" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>