<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/layoutMainMain"
    android:background="@color/color_f2f2f2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/lyt_iq_filters"
        android:background="@color/color_f2f2f2"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@id/lyt_category_spinner"
            android:background="@drawable/edit_text_white_box_bg_with_blue_border"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:layout_weight="1.0"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_6">
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/very_dark_green"
                android:ellipsize="end"
                android:id="@id/sp_categories"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/all_categories"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_11"
                android:paddingEnd="@dimen/dimen_0"
                android:layout_toStartOf="@id/img_dd_categories"
                app:fontFamily="@font/sf_pro_display_regular" />
            <ImageView
                android:layout_gravity="center"
                android:id="@id/img_dd_categories"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_down_arrow_blue" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@id/lyt_brand_spinner"
            android:background="@drawable/edit_text_white_box_bg_with_blue_border"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:layout_weight="1.0"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_6">
            <TextView
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/very_dark_green"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@id/sp_iq_packs"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/sub_categories_brands"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_11"
                android:paddingEnd="@dimen/dimen_0"
                android:layout_toStartOf="@id/img_dd_brands"
                app:fontFamily="@font/sf_pro_display_regular" />
            <ImageView
                android:layout_gravity="center"
                android:id="@id/img_dd_brands"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_down_arrow_blue" />
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/lyt_reset_all"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_6">
            <ImageView
                android:id="@id/img_reset_all"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/ic_reset_blue_24"
                android:layout_marginEnd="@dimen/dimen_16" />
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@id/recyclerViewPackage"
        android:background="@color/color_f2f2f2"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lyt_iq_filters" />
    <androidx.core.widget.NestedScrollView
        android:id="@id/nestedScrollViewTesterProduct"
        android:fitsSystemWindows="true"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_0"
        android:layout_marginTop="@dimen/dimen_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutLazy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewPackage">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutLazy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewPackage">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/recyclerViewTesterProduct"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutLazy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nestedScrollViewTesterProduct">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/txt_folks"
            android:padding="@dimen/dimen_7"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/thatsallfolks"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="18.0sp"
        android:id="@id/no_item_msg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_items_found"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutMain"
        android:background="#50000000"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <ProgressBar
        android:id="@id/progress_bar_for_brand_product_list_tester"
        android:background="#ffffffff"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:layout_marginTop="0.0dip"
        android:layout_marginBottom="50.0dip"
        android:indeterminate="true"
        android:progressDrawable="@drawable/custom_progressbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?android:progressBarStyleHorizontal" />
    <TextView
        android:textSize="20.0sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/tv_for_progress_bar_for_brand_product_list_tester"
        android:background="@color/very_dark_green"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:text="Please wait.."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>