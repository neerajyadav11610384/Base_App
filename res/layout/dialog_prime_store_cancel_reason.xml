<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/edit_text_white_box_bg_with_blue_border_no_padding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/btn_cancel_reason_title"
        android:background="@drawable/drawable_2392ff_5dp"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50"
        android:text="Select reason"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_16"
        android:layout_width="350.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_cancel_reason_title">
        <RadioGroup
            android:orientation="vertical"
            android:id="@id/rg_cancel_reason"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/btn_cancel_reason_ok"
            android:background="@drawable/drawable_2392ff_5dp"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_16"
            android:text="OK"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>