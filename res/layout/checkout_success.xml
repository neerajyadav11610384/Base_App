<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_40"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:id="@id/success_img"
        android:layout_width="120.0dip"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        app:srcCompat="@drawable/ic_order_placed" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:id="@id/cancel_img"
        android:visibility="gone"
        android:layout_width="120.0dip"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        app:srcCompat="@drawable/ic_order_cancel" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="18.0sp"
        android:textColor="@color/color_27ae60"
        android:gravity="center"
        android:id="@id/status_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20"
        android:text="@string/order_placed"
        android:lineSpacingExtra="9.0sp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineHeight="@dimen/dimen_27sp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="16.0sp"
        android:textColor="@color/color_41586f"
        android:gravity="center"
        android:id="@id/msg_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20"
        android:lineSpacingExtra="9.0sp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:lineHeight="@dimen/dimen_27sp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/color_1c1839_1"
        android:id="@id/credit_warning"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        android:layout_below="@id/order_placed_title"
        android:fontFamily="@font/sf_pro_display_medium" />
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/dimen_20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/close"
        android:background="@color/color_2392ff"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:text="@string/close"
        android:lineSpacingExtra="9.0sp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:lineHeight="@dimen/dimen_27sp" />
</LinearLayout>