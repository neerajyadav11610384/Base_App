<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/rounded_corner_grey"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16"
    android:layout_marginStart="@dimen/dimen_16"
    android:layout_marginEnd="@dimen/dimen_16"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/img_badge_icon"
        android:layout_width="@dimen/dimen_48"
        android:layout_height="@dimen/dimen_48"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name_sj" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_16"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_toEndOf="@id/img_badge_icon">
        <TextView
            android:textSize="14.0sp"
            android:textStyle="normal"
            android:textColor="#ff091e42"
            android:id="@id/tv_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="0.0sp"
            android:fontFamily="@font/sf_pro_display_semibold" />
        <RelativeLayout
            android:id="@id/lyt_ach_per"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_below="@id/tv_desc"
            android:layout_toStartOf="@id/lyt_coins">
            <ProgressBar
                android:id="@id/progress_bar"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_20"
                android:indeterminate="false"
                android:progressDrawable="@drawable/performance_progress"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12.0dip"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
            <TextView
                android:textSize="14.0sp"
                android:textStyle="normal"
                android:textColor="#ff091e42"
                android:id="@id/tv_per_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="0.0sp"
                android:fontFamily="\@fonts/sf_pro_display_medium"
                android:layout_marginStart="18.0dip" />
        </RelativeLayout>
        <LinearLayout
            android:id="@id/lyt_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_13"
            android:layout_below="@id/tv_desc"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@id/img_coins_icon"
                android:layout_width="14.0dip"
                android:layout_height="14.0dip"
                android:src="@drawable/ic_gain_coins"
                android:contentDescription="@string/app_name_sj" />
            <TextView
                android:textSize="13.0sp"
                android:textStyle="normal"
                android:textColor="#ff091e42"
                android:id="@id/tv_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:paddingStart="@dimen/dimen_4"
                android:paddingEnd="@dimen/dimen_4" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>