<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="@dimen/dimen_16"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="4.0">
        <TextView
            android:textSize="16.0sp"
            android:textStyle="normal"
            android:textColor="#ff1c1839"
            android:id="@id/tx_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2.7"
            android:lineSpacingExtra="8.0sp"
            fontFamily="\@fonts/sf_pro_display_medium" />
        <TextView
            android:textSize="14.0sp"
            android:textStyle="normal"
            android:textColor="#ff758da6"
            android:gravity="center|right"
            android:id="@id/tx_date"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.3"
            android:lineSpacingExtra="7.0sp"
            fontFamily="\@fonts/sf_pro_display_regular" />
    </LinearLayout>
    <WebView
        android:layout_gravity="center"
        android:id="@id/notify_web_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8" />
    <View
        android:background="#ffe6eaf4"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="@dimen/dimen_16" />
</LinearLayout>